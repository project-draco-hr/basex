{
  final XQuery query=new XQuery("\n" + "        for $i in 0 to 23 return\n" + "        let $t := $b + xs:dayTimeDuration('PT1H')*$i return\n"+ "        translate(format-dateTime($t, '[h]~[m][P]', 'en', (), ()), '.- ', '')\n"+ "      ",ctx);
  try {
    query.bind("b",new XQuery("xs:dateTime('2011-07-01T00:10:00')",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(true,"\n         12~10am 1~10am 2~10am 3~10am 4~10am 5~10am 6~10am 7~10am 8~10am 9~10am 10~10am 11~10am 12~10pm \n         1~10pm 2~10pm 3~10pm 4~10pm 5~10pm 6~10pm 7~10pm 8~10pm 9~10pm 10~10pm 11~10pm\n         "));
}
