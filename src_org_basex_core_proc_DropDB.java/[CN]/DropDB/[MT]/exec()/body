{
  final String db=args[0];
  final Data data=context.data();
  if (data != null && !(data instanceof MemData) && data.meta.name.equals(db))   context.close();
  if (context.pinned(db))   return error(DBINUSE);
  return !IO.dbpath(db).exists() ? error(DBNOTFOUND,db) : drop(db) ? info(DBDROPPED,db) : error(DBNOTDROPPED);
}
