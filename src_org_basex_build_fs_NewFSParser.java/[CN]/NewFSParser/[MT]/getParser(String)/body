{
  AbstractParser instance=parserInstances.get(suffix);
  if (instance == null) {
    final Class<? extends AbstractParser> clazz=REGISTRY.get(suffix);
    if (clazz == null)     return null;
    try {
      instance=clazz.newInstance();
      BaseX.debug("Successfully initialized parser for ." + suffix + " files.");
    }
 catch (    final InstantiationException e) {
      BaseX.debug("Failed to load parser for suffix " + suffix + " (%)",e.getMessage());
    }
catch (    final IllegalAccessException e) {
      BaseX.debug("Failed to load parser for suffix " + suffix + " (%)",e.getMessage());
    }
    parserInstances.put(suffix,instance);
  }
  return instance;
}
