{
  try {
    session=newSession();
    for (int i=0; i < NRUNS; i++) {
      Performance.sleep((long)(50 * rnd.nextDouble()));
      final int n=(rnd.nextInt() & 0xFF) + 1;
      final String qu="xquery basex:db('factbook')/descendant::text()" + "[position() = " + n + "]";
      final ByteArrayOutputStream buffer=new ByteArrayOutputStream();
      final String result=session.execute(qu,buffer) ? buffer.toString() : session.info();
      System.out.println("[" + counter + "] Thread "+ getId()+ ", Pos "+ n+ ": "+ result);
      counter++;
    }
    session.close();
    if (++finished == StressTest.NTHREADS)     stopServer();
  }
 catch (  final IOException ex) {
    ex.printStackTrace();
  }
}
