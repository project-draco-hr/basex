{
  final FTIter ir=expr[0].iter(ctx);
  return new FTIter(){
    @Override public FTItem next() throws QueryException {
      FTItem it;
      while ((it=ir.next()) != null && !standard()) {
        final Tokenizer tok=content ? new Tokenizer(it.str()) : null;
        if (filter(ctx,it,tok))         break;
      }
      return it;
    }
  }
;
}
