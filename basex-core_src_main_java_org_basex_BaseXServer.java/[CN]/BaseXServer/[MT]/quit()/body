{
  if (!running)   return;
  running=false;
  for (  final ClientListener cs : auth) {
    remove(cs);
    cs.quitAuth();
  }
  for (  final ClientListener cs : context.sessions) {
    cs.quit();
  }
  try {
    esocket.close();
    socket.close();
  }
 catch (  final IOException ex) {
    Util.errln(ex);
    context.log.writeServer(LogType.ERROR,Util.message(ex));
  }
}
