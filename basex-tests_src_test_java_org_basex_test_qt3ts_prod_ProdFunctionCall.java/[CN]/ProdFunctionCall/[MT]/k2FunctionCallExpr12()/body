{
  final XQuery query=new XQuery("\n" + "        declare function local:func1() { if(local:func2('b')) then 3 else local:func1() }; \n" + "        declare function local:func2($a) { if(matches(\"\",$a)) then () else 4 }; \n"+ "        local:func1()",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("3"));
}
