{
  final Item it=expr.atomic(ctx);
  if (it == null)   return null;
  if (!it.unt() && !it.num())   Err.num(info(),it);
  final double d=it.dbl();
  if (it.unt())   return Dbl.get(minus ? -d : d);
  if (!minus)   return it;
switch (it.type) {
case DBL:
    return Dbl.get(-d);
case FLT:
  return Flt.get(-it.flt());
case DEC:
return Dec.get(it.dec().negate());
default :
return Itr.get(-it.itr());
}
}
