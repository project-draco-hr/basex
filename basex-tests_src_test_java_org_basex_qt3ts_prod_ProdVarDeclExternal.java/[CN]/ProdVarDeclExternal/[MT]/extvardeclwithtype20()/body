{
  final XQuery query=new XQuery("declare variable $x as xs:string external; fn:upper-case($x)",ctx);
  try {
    query.bind("x",new XQuery("let $var := lower-case(\"This String should be all in upper case\") return $var",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"THIS STRING SHOULD BE ALL IN UPPER CASE"));
}
