{
  final XQuery query=new XQuery("declare variable $x external; $x or fn:false()",ctx);
  try {
    query.bind("x",new XQuery("true() or true()",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertBoolean(true) || error("FORG0006")));
}
