{
  final XQuery query=new XQuery("declare variable $x external; $x",ctx);
  query.bind("x",new XQuery("let $var := avg((1,2,4)) return $var",ctx).value());
  final QT3Result res=result(query);
  result=res;
  test((assertStringValue(false,"2.333333333333333333") || assertStringValue(false,"2.333333333333") || error("XPTY0004")));
}
