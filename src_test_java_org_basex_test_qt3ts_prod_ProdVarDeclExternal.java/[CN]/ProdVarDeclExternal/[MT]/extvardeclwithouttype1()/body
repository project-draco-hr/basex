{
  final XQuery query=new XQuery("declare variable $x external; fn:string($x)",ctx);
  try {
    query.bind("x",new XQuery("'abc'",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertStringValue(false,"abc") || error("XPTY0004")));
}
