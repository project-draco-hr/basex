{
  final XQuery query=new XQuery("declare variable $x external; fn:upper-case($x)",ctx);
  try {
    query.bind("x",new XQuery("lower-case('This String should be all in upper case')",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertStringValue(false,"THIS STRING SHOULD BE ALL IN UPPER CASE") || error("XPTY0004")));
}
