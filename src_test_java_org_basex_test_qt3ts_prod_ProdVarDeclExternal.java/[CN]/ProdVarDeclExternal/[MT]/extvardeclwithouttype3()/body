{
  final XQuery query=new XQuery("declare variable $x external; xs:integer($x)",ctx);
  try {
    query.bind("x",new XQuery("2",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertEq("2") || error("XPTY0004")));
}
