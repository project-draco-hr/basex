{
  final XQuery query=new XQuery("declare variable $x as xs:float external; $x",ctx);
  query.bind("x",new XQuery("let $var := avg((1,2,4)) return xs:float($var)",ctx).value());
  final QT3Result res=result(query);
  result=res;
  test((assertStringValue(false,"2.3333333") || assertStringValue(false,"2.33333")));
}
