{
  final XQuery query=new XQuery("declare variable $x as xs:decimal external; $x",ctx);
  try {
    query.bind("x",new XQuery("xs:decimal(12678967.543233)",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"12678967.543233"));
}
