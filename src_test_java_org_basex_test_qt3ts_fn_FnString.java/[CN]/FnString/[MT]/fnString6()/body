{
  final XQuery query=new XQuery("string(dateTime(xs:date(\"2011-06-29\"), xs:time(\"24:00:00\")))",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("\"2011-06-29T00:00:00\""));
}
