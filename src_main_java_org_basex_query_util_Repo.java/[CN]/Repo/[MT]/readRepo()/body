{
  final File repoDir=new File(prop.get(Prop.REPOPATH));
  if (repoDir.exists()) {
    final File[] pkgDirs=repoDir.listFiles();
    for (int i=0; i < pkgDirs.length; i++) {
      if (pkgDirs[i].isDirectory()) {
        final File pkgDesc=new File(pkgDirs[i].getPath() + SEP + PKGDESC);
        if (!pkgDesc.exists()) {
        }
 else {
          readPkg(pkgDesc);
        }
      }
    }
  }
}
