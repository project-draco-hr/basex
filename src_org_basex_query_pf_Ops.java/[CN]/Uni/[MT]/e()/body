{
  final Tbl t1=arg[0].tbl;
  final Tbl t2=arg[1].tbl;
  tbl.s(t1);
  for (int c=0; c < t1.size; c++) {
    final Col c1=t1.c(c);
    for (int v=0; v < c1.sz; v++)     tbl.c(c).a(c1.r(v));
  }
  for (int c=0; c < t1.size; c++) {
    final Col c2=t2.c(c);
    final int cn=tbl.p(c2.nm);
    for (int v=0; v < c2.sz; v++)     tbl.c(cn).a(c2.r(v));
  }
}
