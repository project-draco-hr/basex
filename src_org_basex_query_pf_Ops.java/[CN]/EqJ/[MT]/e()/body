{
  final Tbl t1=arg[0].tbl;
  final Tbl t2=arg[1].tbl;
  final int[] m1=add(t1);
  final int[] m2=add(t2);
  final Col c1=c(XPPOS1,t1);
  final Col c2=c(XPPOS2,t2);
  final int s=c1.sz;
  for (int r=0; r < s; r++) {
    if (eq(c1,c2,r)) {
      for (int c=0; c < t1.size; c++)       tbl.c(m1[c]).a(t1.c(c).r(r));
      for (int c=0; c < t2.size; c++)       tbl.c(m2[c]).a(t2.c(c).r(r));
    }
  }
}
