{
  final MetaData md=ic.data.meta;
  final FTOpt fto=ctx.ftopt;
  ic.io&=occ == null && word != null && word.length > 0 && md.ftcs == fto.is(FTOpt.CS) && md.ftdc == fto.is(FTOpt.DC) && md.ftst == fto.is(FTOpt.ST) && fto.sw == null && (!fto.is(FTOpt.WC) || !md.ftfz);
  if (!ic.io)   return;
  final Tokenizer ft=new Tokenizer(word,fto);
  while (ic.is != 0 && ft.more())   ic.is=Math.min(ic.is,ic.data.nrIDs(ft));
  ic.iu=true;
}
