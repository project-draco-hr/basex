{
  final NodeType nt=(NodeType)type;
  final TokenBuilder tb=new TokenBuilder(nt.string()).add(' ');
switch (nt) {
case ATT:
case PI:
    tb.add(nname()).add(" { \"").add(Token.chop(string(),64)).add("\" }");
  break;
case ELM:
tb.add(nname()).add(" { ... }");
break;
case DOC:
tb.add("{ \"").add(data.text(pre,true)).add("\" }");
break;
default :
tb.add("{ \"").add(Token.chop(string(),64)).add("\" }");
break;
}
return tb.toString();
}
