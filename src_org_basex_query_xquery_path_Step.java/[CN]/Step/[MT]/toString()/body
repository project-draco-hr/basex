{
  final StringBuilder sb=new StringBuilder("");
  if (test == Test.NODE) {
    if (axis == Axis.PARENT)     return "..";
    if (axis == Axis.SELF)     return ".";
  }
  if (axis == Axis.ATTR)   sb.append("@");
 else   if (axis != Axis.CHILD)   sb.append(axis + "::");
  sb.append(test);
  for (  final Expr e : pred)   sb.append("[" + e + "]");
  return sb.toString();
}
