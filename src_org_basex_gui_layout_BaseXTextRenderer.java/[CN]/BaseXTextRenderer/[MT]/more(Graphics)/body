{
  if (!text.moreWords())   return false;
  int ww=0;
  final int p=text.pos();
  while (text.more()) {
    final int ch=text.next();
    if (ch == 0x02) {
      font(bfont);
    }
 else     if (ch == 0x03) {
      font(dfont);
    }
 else {
      ww+=charW(g,ch);
    }
  }
  text.pos(p);
  if (x + ww > w) {
    x=off;
    y+=fontH;
  }
  wordW=ww;
  return y < h;
}
