{
  if (!text.moreWords())   return false;
  wordW=0;
  word=text.nextWord();
  for (int c=0; c < word.length(); c++) {
    char ch=word.charAt(c);
    if (ch == 0x02) {
      setFont(GUIConstants.bfont);
    }
 else     if (ch == 0x03) {
      setFont(GUIConstants.font);
    }
 else {
      wordW+=charW(g,ch);
    }
  }
  if (x + wordW > w) {
    x=off;
    y+=fontH;
  }
  return y < h;
}
