{
  final XQuery query=new XQuery("declare variable $local:myVar := <a/>; <b> {$local:myVar} {attribute name {\"content\"}} </b>",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQTY0024"));
}
