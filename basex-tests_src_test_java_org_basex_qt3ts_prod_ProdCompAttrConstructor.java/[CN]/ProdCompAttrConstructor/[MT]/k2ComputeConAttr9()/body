{
  final XQuery query=new XQuery("<elem> <!-- comment --> { \"a string\", 999, (\"another string\", attribute name {\"content\"}, 383), xs:hexBinary(\"FF\") } </elem>",ctx);
  try {
    result=new QT3Result(query.value());
