{
  final XQuery query=new XQuery("\n" + "      \tdeclare function local:factorial($arg as xs:integer) as xs:integer { \n" + "      \t\tif ($arg le 1) then 1 else $arg * local:factorial($arg - 1) \n"+ "      \t}; \n"+ "      \t<element> { attribute { fn:QName(\"http://www.example.com/\", \"sgml:foo\") } { local:factorial(5) } } </element>\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<element xmlns:sgml=\"http://www.example.com/\" sgml:foo=\"120\"/>",false));
}
