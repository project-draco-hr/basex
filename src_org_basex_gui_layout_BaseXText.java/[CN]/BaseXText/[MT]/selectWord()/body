{
  text.pos(text.cursor());
  final boolean ch=Character.isLetterOrDigit(text.prev(true));
  while (text.pos() > 0) {
    int c=text.prev(true);
    if (c == '\n' || ch != Character.isLetterOrDigit(c))     break;
  }
  if (text.pos() != 0)   text.next(true);
  text.startMark();
  while (text.pos() < text.size) {
    int c=text.curr();
    if (c == '\n' || ch != Character.isLetterOrDigit(c))     break;
    text.next(true);
  }
  text.endMark();
}
