{
  addKeyListener(new KeyAdapter(){
    @Override public void keyPressed(    final KeyEvent e){
      if (ENTER.is(e)) {
        store(gprop,option);
      }
 else       if (NEXTLINE.is(e)) {
        final String[] qu=gprop.strings(option);
        if (hist < qu.length) {
          setText(qu[++hist]);
        }
      }
 else       if (PREVLINE.is(e)) {
        final String[] qu=gprop.strings(option);
        if (hist > 0) {
          setText(qu[++hist]);
        }
      }
    }
  }
);
}
