{
  final XQuery query=new XQuery("/child::works/child::employee[fn:position() = 5]/child::hours[fn:position() = 2]",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<hours>30</hours>",false));
}
