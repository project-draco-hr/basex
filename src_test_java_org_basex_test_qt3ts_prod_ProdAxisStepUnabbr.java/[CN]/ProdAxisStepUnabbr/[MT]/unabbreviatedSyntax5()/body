{
  final XQuery query=new XQuery("for $h in (/works/employee[2]) return $h/child::node()",ctx);
  query.context(node(file("docs/works-mod.xml")));
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("\n   <empnum>E1</empnum>\n   <pnum>P2</pnum>\n   <hours>70</hours>\n   <hours>20</hours>Text data from Employee[2]\n  ",false));
}
