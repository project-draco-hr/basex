{
  try {
    final String query="string(" + pn2xp(path,true) + "/child::*["+ offset+ "]/@name)";
    final QueryProcessor xq=new QueryProcessor(query,new Nodes(0,data),context);
    final SeqIter s=(SeqIter)xq.query();
    return s.size() != 1 ? null : string(s.next().str());
  }
 catch (  final QueryException e) {
    e.printStackTrace();
    return null;
  }
}
