{
  try {
    final StringBuilder qb=new StringBuilder();
    qb.append(pn2xp(path,dir));
    if (!dir && cont)     qb.append("/content");
    Nodes n=xquery(qb.toString());
    if (n.size() == 0)     return -1;
    data.delete(n.nodes[0]);
    refresh();
  }
 catch (  QueryException e) {
    e.printStackTrace();
    return -1;
  }
  return 0;
}
