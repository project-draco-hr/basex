{
  final XQuery query=new XQuery("\n" + "      declare function local:f($x as xs:integer) as xs:integer { $x + 3 }; \n" + "      declare function local:g($x as xs:integer) as xs:integer { $x + 4 }; \n"+ "      declare function local:h($x as xs:integer) as xs:integer { $x + 5 }; \n"+ "      let $f as (function(xs:integer) as xs:integer)* := (local:f#1, local:g#1, local:h#1) return $f[3](2)[1]\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("7"));
}
