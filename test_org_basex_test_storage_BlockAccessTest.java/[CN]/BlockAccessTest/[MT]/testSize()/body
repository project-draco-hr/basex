{
  assertEquals("Testfile size changed!",size,tba.size());
  assertTrue("Need at least 3 blocks for testing!",blocks > 2);
  assertEquals("Unexpected number of blocks!",blocks,tba.blocks());
  closeAndReload();
  assertEquals("Testfile size changed!",size,tba.size());
  assertTrue("Need at least 3 blocks for testing!",blocks > 2);
  assertEquals("Unexpected number of blocks!",blocks,tba.blocks());
}
