{
  final XQuery query=new XQuery("\n" + "      \tlet $x := zero-or-one((1 to 10)[. div 2 = 2]) \n" + "      \treturn if(empty($x)) then () else xs:string($x)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"4"));
}
