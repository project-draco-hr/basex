{
  query(APPLY.args(" true#0"," []"),"true");
  query(APPLY.args(" count#1"," [(1,2,3)]"));
  query(APPLY.args(" string-join#1"," [ reverse(1 to 5) ! string() ]"),"54321");
  query("let $func := function($a,$b,$c) { $a + $b + $c } " + "let $args := [ 1, 2, 3 ] " + "return fn:apply($func, $args)","6");
