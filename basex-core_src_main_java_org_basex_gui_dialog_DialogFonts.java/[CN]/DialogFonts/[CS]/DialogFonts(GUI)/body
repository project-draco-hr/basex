{
  super(main,CHOOSE_FONT,false);
  final String[] fonts=GraphicsEnvironment.getLocalGraphicsEnvironment().getAvailableFontFamilyNames();
  final BaseXBack p=new BaseXBack(new TableLayout(1,4,8,0));
  font=new BaseXList(fonts,this);
  p.add(font);
  font2=new BaseXList(fonts,this);
  p.add(font2);
  type=new BaseXList(FONT_TYPES,this);
  type.setWidth(90);
  p.add(type);
  size=new BaseXList(FTSZ,this);
  size.setWidth(50);
  p.add(size);
  final GUIOptions gopts=gui.gopts;
  font.setValue(gopts.get(GUIOptions.FONT));
  font2.setValue(gopts.get(GUIOptions.MONOFONT));
  type.setValue(FONT_TYPES[gopts.num(GUIOptions.FONTTYPE)]);
  size.setValue(Integer.toString(gui.gopts.num(GUIOptions.FONTSIZE)));
  set(p,BorderLayout.CENTER);
  finish(gopts.nums(GUIOptions.FONTSLOC));
}
