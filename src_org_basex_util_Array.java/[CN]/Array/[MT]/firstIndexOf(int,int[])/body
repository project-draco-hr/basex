{
  if (a == null || a.length == 0)   return -1;
  int f=0;
  int l=a.length - 1;
  while (f <= l) {
    int m=f + ((l - f) >> 1);
    if (a[m] < p) {
      f=m + 1;
    }
 else     if (a[m] > p) {
      l=m - 1;
    }
 else {
      while (m > -1 && a[m] == p)       m--;
      return m + 1;
    }
  }
  return -1;
}
