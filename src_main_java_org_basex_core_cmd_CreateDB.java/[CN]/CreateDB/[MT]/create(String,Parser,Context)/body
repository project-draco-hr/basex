{
  final Performance p=new Performance();
  ctx.register(true);
  try {
    final Data data=ctx.data();
    if (data != null) {
      Close.close(data,ctx);
      ctx.closeDB();
    }
    ctx.openDB(xml(name,parser,ctx));
  }
 catch (  final IOException ex) {
    throw new BaseXException(ex);
  }
 finally {
    ctx.unregister(true);
  }
  return Util.info(DBCREATED,name,p);
}
