{
  final Item item=ctx.item;
  if (item == null)   Err.or(XPNOCTX,this);
  final Iter iter=item.iter();
  return new NodeIter(){
    /** 
 * Temporary iterator. 
 */
    NodeIter ir;
    @Override public Nod next() throws XQException {
      while (true) {
        if (ir == null) {
          final Item it=iter.next();
          if (it == null) {
            ctx.item=item;
            return null;
          }
          if (!it.node())           Err.or(NODESPATH,this,it);
          ir=axis.init((Nod)it);
        }
        final Nod nod=ir.next();
        if (nod == null)         ir=null;
 else         if (test.e(nod,ctx)) {
          ctx.item=item;
          return nod.finish();
        }
      }
    }
    @Override public String toString(){
      return SimpleIterStep.this.toString();
    }
  }
;
}
