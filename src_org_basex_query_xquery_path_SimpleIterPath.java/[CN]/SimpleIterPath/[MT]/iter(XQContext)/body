{
  return new Iter(){
    final Item tmp=ctx.item;
    boolean first=true;
    NodeIter step;
    Item item;
    @Override public Item next() throws XQException {
      if (first) {
        item=ctx.iter(root).finish();
        ctx.item=item;
        step=(NodeIter)ctx.iter(expr[0]);
        first=false;
      }
      final Nod it=step.next();
      ctx.item=tmp;
      return it;
    }
  }
;
}
