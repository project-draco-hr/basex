{
  final Geometry geom=gmlReader(node,Q_GML_LINEARRING,Q_GML_LINESTRING);
  if (geom == null && gmlReader(node) != null)   throw GeoErrors.lineNeeded(node.qname().local());
  final int max=geom.getNumPoints();
  final long n=pointNumber.itr();
  if (n < 1 || n > max)   throw GeoErrors.outOfRangeIdx(pointNumber);
  return gmlWriter(geom instanceof LineString ? ((LineString)geom).getPointN((int)n - 1) : ((LinearRing)geom).getPointN((int)n - 1));
}
