{
  final AxisIter atts=node.attributes();
  for (ANode next; (next=atts.next()) != null; ) {
    final byte[] name=next.name();
    if (eq(A_NAME,name))     p.name=next.string();
 else     if (eq(A_ABBREV,name))     p.abbrev=next.string();
 else     if (eq(A_VERSION,name))     p.version=next.string();
 else     if (eq(A_SPEC,name))     p.spec=next.string();
 else     BXRE_DESC.thrw(info,Util.info(WHICHATTR,name));
  }
  if (p.name == null)   BXRE_DESC.thrw(info,Util.info(MISSATTR,A_NAME,root));
  if (p.version == null)   BXRE_DESC.thrw(info,Util.info(MISSATTR,A_VERSION,root));
  if (p.abbrev == null)   BXRE_DESC.thrw(info,Util.info(MISSATTR,A_ABBREV,root));
  if (p.spec == null)   BXRE_DESC.thrw(info,Util.info(MISSATTR,A_SPEC,root));
}
