{
  super(label,sel);
  setOpaque(false);
  setBorder(new EmptyBorder(0,0,dist,0));
  BaseXLayout.addHelp(this,hlp);
  if (list == null)   return;
  BaseXLayout.addDefaultKeys(this,list);
  addActionListener(new ActionListener(){
    public void actionPerformed(    final ActionEvent e){
      list.action(getText());
    }
  }
);
}
