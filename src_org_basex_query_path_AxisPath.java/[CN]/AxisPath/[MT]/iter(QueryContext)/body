{
  final Item it=root != null ? ctx.iter(root).finish() : ctx.item;
  if (!cache || citem == null || litem != it || it.type != Type.DOC) {
    litem=it;
    final Item c=ctx.item;
    final long cs=ctx.size;
    final long cp=ctx.pos;
    ctx.item=it;
    citem=new NodIter();
    iter(0,citem,ctx);
    citem.sort(true);
    ctx.item=c;
    ctx.size=cs;
    ctx.pos=cp;
  }
 else {
    citem.reset();
  }
  return citem;
}
