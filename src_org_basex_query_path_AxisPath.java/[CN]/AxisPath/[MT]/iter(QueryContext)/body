{
  final Item c=ctx.item;
  final long cs=ctx.size;
  final long cp=ctx.pos;
  final Item it=root != null ? ctx.iter(root).finish() : ctx.item;
  if (!cache || citer == null || litem.type != Type.DOC || it.type != Type.DOC || !((Nod)litem).is((Nod)it)) {
    litem=it;
    ctx.item=it;
    citer=new NodIter();
    iter(0,citer,ctx);
    citer.sort(true);
  }
 else {
    citer.reset();
  }
  ctx.item=c;
  ctx.size=cs;
  ctx.pos=cp;
  return citer;
}
