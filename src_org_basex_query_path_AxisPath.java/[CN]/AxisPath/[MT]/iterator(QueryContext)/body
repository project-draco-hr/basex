{
  if (root != null && root.uses(Use.VAR,ctx))   return this;
  if (step.length == 1 && step[0].axis.down)   return new SingleIterPath(root,step);
  boolean children=root != null && !root.duplicates(ctx);
  for (  final Step s : step)   children&=s.axis == Axis.CHILD || s.axis == Axis.PARENT;
  if (children)   return new SimpleIterPath(root,step);
  return this;
}
