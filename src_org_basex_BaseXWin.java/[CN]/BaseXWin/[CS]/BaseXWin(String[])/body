{
  Prop.read();
  GUIProp.read();
  final JFrame wait=waitPanel();
  Performance.sleep(50);
  GUIConstants.init();
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      init();
      GUI.get();
      if (args.length != 0) {
        String db=args[0].replace('\\','/');
        if (db.endsWith(".basex"))         db=db.replaceAll("^.*/(.*)/.*","$1");
        GUI.get().execute(Commands.CHECK,db);
      }
      wait.dispose();
    }
  }
);
}
