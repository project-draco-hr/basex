{
  if (module instanceof QueryModule) {
    final QueryModule mod=(QueryModule)module;
    mod.staticContext=sc;
    mod.queryContext=qc;
  }
  final Object[] jargs=javaArgs(params,vTypes,args,true);
  if (jargs != null) {
    try {
      return method.invoke(module,jargs);
    }
 catch (    final Exception ex) {
      Throwable e=ex;
      if (e.getCause() != null) {
        Util.debug(e);
        e=e.getCause();
      }
      if (e instanceof QueryException)       throw ((QueryException)e).info(info);
      Util.stack(e);
      throw JAVAERROR_X.get(info,Util.className(e) + ": " + e.getMessage());
    }
  }
  final TokenBuilder expect=new TokenBuilder();
  for (  final Class<?> param : method.getParameterTypes()) {
    if (!expect.isEmpty())     expect.add(", ");
    expect.add(Util.className(param));
  }
  throw JAVAARGS_X_X.get(info,method.getName() + '(' + expect+ ')',method.getName() + '(' + foundArgs(args)+ ')');
}
