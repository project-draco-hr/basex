{
  if (Prop.MAC)   return;
  final String label=b.getText();
  for (int l=0; l < label.length(); l++) {
    final char ch=Character.toLowerCase(label.charAt(l));
    if (!letter(ch) || mnem.indexOf(Character.toString(ch)) != -1)     continue;
    b.setMnemonic(ch);
    mnem.append(ch);
    break;
  }
}
