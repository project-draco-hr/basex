{
  final XQuery query=new XQuery("\n" + "\tdeclare default function namespace \"http://www.w3.org/2005/xquery-local-functions\";\n" + "\tdeclare function local:comment($arg) { fn:true() };\n"+ "\tcomment(1)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPST0003"));
}
