{
  final ByteList tb=new ByteList().add(name.string()).add('=').add('"');
  for (  final byte v : value) {
    if (v == '&')     tb.add(E_AMP);
 else     if (v == '\r')     tb.add(E_CR);
 else     if (v == '\n')     tb.add(E_NL);
 else     if (v == '"')     tb.add(E_QUOT);
  }
  return tb.add('"').toString();
}
