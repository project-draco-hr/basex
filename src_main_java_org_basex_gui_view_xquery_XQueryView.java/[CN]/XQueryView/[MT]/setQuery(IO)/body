{
  gui.prop.files(file);
  gui.context.query=file;
  try {
    if (!visible())     GUICommands.SHOWXQUERY.execute(gui);
    modified(false,true);
    final byte[] query=file.content();
    text.setText(query);
    if (gui.prop.is(GUIProp.EXECRT))     text.query();
  }
 catch (  final IOException ex) {
    Dialog.error(gui,NOTOPENED);
  }
}
