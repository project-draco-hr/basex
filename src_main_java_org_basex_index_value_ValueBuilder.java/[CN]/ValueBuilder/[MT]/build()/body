{
  abort();
  final Performance perf=Prop.debug ? new Performance() : null;
  Util.debug(det());
  final String f=text ? DATATXT : DATAATV;
  final int k=text ? Data.TEXT : Data.ATTR;
  for (pre=0; pre < size; ++pre) {
    if ((pre & 0x0FFF) == 0) {
      check();
      if (memFull()) {
        write(f + csize++,false);
        index=new IndexTree();
        Performance.gc(gc);
      }
    }
    if (data.kind(pre) == k && data.textLen(pre,text) <= data.meta.maxlen)     index.index(data.text(pre,text),data.meta.updindex ? data.id(pre) : pre);
  }
  if (merge) {
    write(f + csize++,false);
    index=null;
    Performance.gc(gc);
    merge();
  }
 else {
    write(f,true);
  }
  if (text)   data.meta.textindex=true;
 else   data.meta.attrindex=true;
  Util.memory(perf);
  return data.meta.updindex ? new UpdatableDiskValues(data,text) : new DiskValues(data,text);
}
