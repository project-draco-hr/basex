{
  file=new RandomAccessFile(f,"rw");
  fc=file.getChannel();
  len=file.length();
  dbbuffer=ByteBuffer.allocateDirect(DBBUFFERSIZE);
  if (len <= BUFFERSIZE) {
    mbytebuffer=fc.map(FileChannel.MapMode.READ_WRITE,0,len);
  }
 else {
    mbytebuffer=fc.map(FileChannel.MapMode.READ_WRITE,0,BUFFERSIZE);
  }
  off=0;
  writePosition=0;
}
