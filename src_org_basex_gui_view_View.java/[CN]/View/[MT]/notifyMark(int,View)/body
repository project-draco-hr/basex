{
  if (focused == -1)   return;
  final Context context=GUI.context;
  Nodes nodes=context.marked();
  if (mode == 0) {
    nodes=new Nodes(focused,context.data());
  }
 else   if (mode == 1) {
    nodes.union(new int[]{focused});
  }
 else {
    nodes.toggle(focused);
  }
  notifyMark(nodes,vw);
}
