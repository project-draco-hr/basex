{
  final int pre=ViewData.focusedPre;
  if (pre == -1)   return;
  final Context context=GUI.context;
  Nodes nodes=context.marked();
  if (mode == 0) {
    nodes=new Nodes(pre,context.data());
  }
 else   if (mode == 1) {
    nodes.add(pre);
  }
 else {
    nodes.toggle(pre);
  }
  notifyMark(nodes);
}
