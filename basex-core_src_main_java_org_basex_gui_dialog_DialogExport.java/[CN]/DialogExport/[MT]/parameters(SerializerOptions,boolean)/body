{
  final String[] ex=!excl ? new String[0] : new String[]{SerializerOptions.S_METHOD.name,SerializerOptions.S_ENCODING.name};
  final StringBuilder sb=new StringBuilder();
  for (  final String key : sopts) {
    if (Token.eq(key,ex))     continue;
    final Object val=sopts.get(key);
    if (!Serializer.OPTIONS.get(key).equals(val)) {
      if (sb.length() != 0)       sb.append(',');
      sb.append(key).append('=').append(val);
    }
  }
  return sb.toString();
}
