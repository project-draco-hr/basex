{
  final BaseXCombo cb=new BaseXCombo(dialog,ENCODINGS);
  boolean f=false;
  String enc=encoding == null ? Token.UTF8 : encoding;
  for (  final String s : ENCODINGS)   f|=s.equals(enc);
  if (!f) {
    enc=enc.toUpperCase(Locale.ENGLISH);
    for (    final String s : ENCODINGS)     f|=s.equals(enc);
  }
  cb.setSelectedItem(enc);
  return cb;
}
