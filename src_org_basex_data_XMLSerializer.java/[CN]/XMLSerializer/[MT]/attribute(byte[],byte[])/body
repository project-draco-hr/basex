{
  out.print(' ');
  out.print(n);
  out.print(ATT1);
  for (  final byte ch : v) {
switch (ch) {
case '&':
      out.print(E_AMP);
    break;
case '>':
  out.print(E_GT);
break;
case '<':
out.print(E_LT);
break;
case '"':
out.print(E_QU);
break;
case 0x9:
out.print(E_TAB);
break;
case 0xA:
out.print(E_NL);
break;
case 0xD:
out.print(E_CR);
break;
default :
out.write(ch);
}
}
out.print(ATT2);
}
