{
  final XQuery query=new XQuery("\n" + "        let $f := function-lookup(QName(\"http://exist-db.org/xquery/datetime\", \"days-in-month\"), 1)\n" + "        return if (exists($f)) then $f(xs:date(\"2012-02-28\")) else \"not-available\"\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertStringValue(false,"not-available") || assertStringValue(false,"29")));
}
