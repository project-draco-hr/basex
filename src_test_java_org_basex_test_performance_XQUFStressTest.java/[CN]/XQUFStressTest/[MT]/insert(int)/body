{
  for (int r=0; r < runs; r++) {
    new CreateDB(DB,"<doc/>").execute(ctx);
    new XQuery("for $i in 1 to " + NRNODES + " return insert node "+ "<section><page/></section> into /doc").execute(ctx);
    new XQuery("for $page in //page " + "let $par := $page/.. " + "return (delete node $page, insert node $page before $par)").execute(ctx);
    new DropDB(DB).execute(ctx);
  }
}
