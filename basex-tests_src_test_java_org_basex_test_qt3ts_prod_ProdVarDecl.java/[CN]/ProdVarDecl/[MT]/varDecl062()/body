{
  final XQuery query=new XQuery("declare variable $x := /processing-instruction() ; $x",ctx);
  try {
    query.context(node(file("op/union/bib2.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<?PI1 Processing Instruction 1?><?PI2 Processing Instruction 2?>",false));
}
