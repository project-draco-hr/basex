{
  final XQuery query=new XQuery("declare variable $x := '&lt;bold&gt;A sample element.&lt;/bold&gt;' ; $x",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"<bold>A sample element.</bold>"));
}
