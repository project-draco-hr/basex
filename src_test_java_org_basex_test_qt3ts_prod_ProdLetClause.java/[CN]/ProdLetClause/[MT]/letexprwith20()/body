{
  final XQuery query=new XQuery("let $var as xs:string := xs:string((xs:double(100E2))) return $var",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"10000"));
}
