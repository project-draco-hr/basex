{
  if (cols.length == 0)   return;
  final Nodes n=GUI.context.current();
  final boolean r=n.size == 1 && n.nodes[0] < 2;
  if (!create && r) {
    rows=rootRows;
    sortCol=-1;
  }
 else {
    createRows();
    if (r)     rootRows=rows;
  }
  if (cols[0].width == 0 && cols[0].hwidth == 0)   calcWidths();
}
