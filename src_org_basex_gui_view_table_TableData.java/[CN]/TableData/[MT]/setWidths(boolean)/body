{
  double sum=0;
  final int cs=cols.length;
  for (int c=0; c < cs; c++)   sum+=cols[c].width;
  final double min=force ? 0.0 : 0.5;
  for (int c=0; c < cs; c++)   cols[c].width=Math.max(min / cs,cols[c].width / sum);
  sum=0;
  for (int c=0; c < cs; c++)   sum+=cols[c].width;
  for (int c=0; c < cs; c++)   cols[c].width/=sum;
}
