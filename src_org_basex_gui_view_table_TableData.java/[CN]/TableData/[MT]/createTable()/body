{
  final Data data=GUI.context.data();
  int p=0;
  int pre=0;
  while (++p < data.size) {
    final int kind=data.kind(p);
    if (kind != Data.ELEM)     continue;
    final int tag=data.tagID(p);
    final int occ=data.tags.counter(rootTag);
    if (occ > data.tags.counter(tag) / 2 && occ > data.size / 100) {
      createCols(pre);
      return;
    }
    rootTag=tag;
    pre=p;
  }
}
