{
  final int ch=text.curr();
  if (tag) {
    if (quote != 0) {
      if (quote == ch)       quote=0;
      return RED;
    }
    if (ch == '"' || ch == '\'') {
      quote=ch;
      return RED;
    }
    if (ch == '>')     tag=false;
    if (ch == '=' || ch == '>' || ch == '/')     return BLUE;
    if (elem) {
      if (ch <= ' ')       elem=false;
      return BLUE;
    }
    return PINK;
  }
  if (ch == '<') {
    tag=true;
    elem=true;
    return BLUE;
  }
  return Color.black;
}
