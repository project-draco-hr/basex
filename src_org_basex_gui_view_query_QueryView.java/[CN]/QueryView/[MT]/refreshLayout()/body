{
  for (int i=0; i < NPANELS; i++)   BaseXLayout.select(input[i],mode == i);
  removeAll();
  add(back,BorderLayout.NORTH);
  search=panels[mode];
  search.init();
  search.query(GUIProp.showquery);
  filterbox.setSelected(GUIProp.filterrt);
  filterbox.setEnabled(mode == SIMPLE);
  revalidate();
  repaint();
}
