{
  for (int i=0; i < NPANELS; i++)   BaseXLayout.select(input[i],mode == i);
  removeAll();
  add(back,BorderLayout.NORTH);
  search=panels[mode];
  search.init();
  open.setEnabled(mode == 0);
  save.setEnabled(mode == 0);
  if (GUIProp.execrt)   search.query(force);
  revalidate();
  repaint();
  refreshLayout();
}
