{
  if (!(node instanceof DBNode))   return;
  final DBNode n=(DBNode)node;
  final Data d=n.data;
  final int pos=n.pre + d.size(n.pre,Nod.kind(node.type));
  n.data.insertSeq(pos,n.pre,m);
  final int l=pos - 1;
  if (d.parent(l,d.kind(l)) == d.parent(pos,d.kind(pos)) && mergeTextNodes(d,pos - 1,pos))   return;
  final int r=pos + m.size(0,m.kind(0));
  if (r < d.meta.size && d.parent(r,d.kind(r)) == d.parent(r - 1,d.kind(r - 1)))   mergeTextNodes(d,r,r - 1);
}
