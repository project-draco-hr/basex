{
  int i=p;
  if (l == 5) {
    array[i++]=(byte)0xC0;
    array[i++]=(byte)(v >>> 24);
    array[i++]=(byte)(v >>> 16);
    array[i++]=(byte)(v >>> 8);
  }
 else   if (l == 4) {
    array[i++]=(byte)(v >>> 24 | 0x80);
    array[i++]=(byte)(v >>> 16);
    array[i++]=(byte)(v >>> 8);
  }
 else   if (l == 2) {
    array[i++]=(byte)(v >>> 8 | 0x40);
  }
  array[i++]=(byte)v;
}
