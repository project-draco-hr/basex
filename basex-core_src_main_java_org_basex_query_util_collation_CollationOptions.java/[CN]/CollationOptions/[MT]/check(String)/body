{
  String error=null;
  for (  final String option : args.split(";")) {
    final String[] kv=option.split("=");
    final String key=kv[0], val=kv.length == 2 ? kv[1] : "";
    try {
      assign(key,val);
    }
 catch (    final BaseXException ex) {
      error=option;
    }
  }
  return error;
}
