{
  final boolean up=sig == Function._DB_ADD || sig == Function._DB_DELETE || sig == Function._DB_RENAME || sig == Function._DB_REPLACE || sig == Function._DB_OPTIMIZE || sig == Function._DB_STORE;
  return u == Use.CTX && (sig == Function._DB_TEXT || sig == Function._DB_ATTRIBUTE || sig == Function._DB_FULLTEXT || sig == Function._DB_EVENT || up) || u == Use.UPD && up || super.uses(u);
}
