{
  int root=par;
  final Data data=ctx.data();
  if (pos == 0) {
    root=par + data.size(par,kind);
  }
 else {
    int currPos=1;
    root=par + data.attSize(par,kind);
    while (currPos < pos) {
      final int k=data.kind(root);
      if (data.parent(root,k) != par)       break;
      root=root + data.size(root,k);
      currPos++;
    }
  }
  data.insert(root,par,name,Data.ELEM);
}
