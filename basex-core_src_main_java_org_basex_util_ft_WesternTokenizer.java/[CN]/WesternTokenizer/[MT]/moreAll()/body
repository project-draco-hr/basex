{
  final byte[] txt=text;
  final int txtl=txt.length;
  int cp=epos;
  final int lp=cp;
  spos=cp;
  boolean pa=false, sp=false;
  for (; cp < txtl; cp+=cl(txt,cp)) {
    final int ch=cp(txt,cp);
    if (ch == '\n')     pa=true;
 else     if (valid(ch))     break;
    sp=true;
  }
  para=pa;
  spec=sp;
  epos=cp;
  if (lp < cp)   return true;
  for (; cp < txtl; cp+=cl(txt,cp)) {
    final int ch=cp(txt,cp);
    if (!valid(ch))     break;
  }
  epos=cp;
  ++pos;
  return lp < cp;
}
