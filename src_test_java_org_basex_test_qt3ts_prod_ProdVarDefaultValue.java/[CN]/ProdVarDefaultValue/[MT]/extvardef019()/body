{
  final XQuery query=new XQuery("\n" + "        declare variable $x external := 10;\n" + "        declare variable $y external := 18 + $x;\n"+ "        $y\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("28"));
}
