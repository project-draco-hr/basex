{
  final XQuery query=new XQuery("\n" + "        declare variable $var as xs:integer := 17; \n" + "        declare variable $ext as xs:integer external := $var; \n"+ "        <out>{$ext}</out>\n"+ "      ",ctx);
  try {
    query.bind("ext",new XQuery("862",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<out>862</out>",false));
}
