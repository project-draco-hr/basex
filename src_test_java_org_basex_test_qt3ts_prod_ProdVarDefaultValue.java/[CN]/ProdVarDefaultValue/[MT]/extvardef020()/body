{
  final XQuery query=new XQuery("\n" + "        declare variable $x external := 5;\n" + "        declare variable $a := $x + 2;\n"+ "        declare function local:foo() {$x +$a};\n"+ "        declare variable $y external := 11 + local:foo() + $x;\n"+ "        $y\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("28"));
}
