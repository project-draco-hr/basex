{
  final XQuery query=new XQuery("\n" + "         declare variable $var as xs:integer := 17; \n" + "         declare variable $ext as element(a) external := <a>{$var}</a>; \n"+ "         <out>{$ext}</out>",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<out><a>17</a></out>",false));
}
