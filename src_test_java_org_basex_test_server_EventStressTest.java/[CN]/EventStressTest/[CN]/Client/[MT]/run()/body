{
  try {
    startSignal.await();
    try {
      session.execute(cmd);
    }
 catch (    final BaseXException e) {
      e.printStackTrace();
    }
 finally {
      session.close();
    }
  }
 catch (  final IOException e) {
    e.printStackTrace();
  }
catch (  final InterruptedException e) {
    return;
  }
 finally {
    stopSignal.countDown();
  }
}
