{
  final XQuery query=new XQuery("string-join((format-number(2392.14*36.58,'000,000.000000','myminus'),\n" + "                        format-number(2392.14*36.58,'000,000.000000;###,###.000###'),\n" + "                        format-number(2392.14*36.58,'000,000.000000;###,###.000###','myminus')), ' ')\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"087,504.481200 087,504.481200 087,504.481200"));
}
