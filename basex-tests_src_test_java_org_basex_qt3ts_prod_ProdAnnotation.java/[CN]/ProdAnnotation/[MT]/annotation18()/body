{
  final XQuery query=new XQuery("\n" + "         declare %Q{http://www.w3.org/2001/XMLSchema}x variable $foo := \"bar\";\n" + "         $foo\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0045"));
}
