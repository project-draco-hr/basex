{
  if (search == null)   return false;
  if (ESCAPE.is(e)) {
    search.deactivate(true);
  }
 else   if (FIND.is(e)) {
    search.activate(text.copy(),true);
  }
 else   if (FINDNEXT.is(e) || FINDNEXT2.is(e)) {
    find(true);
  }
 else   if (FINDPREV.is(e) || FINDPREV2.is(e)) {
    find(false);
  }
 else {
    return false;
  }
  return true;
}
