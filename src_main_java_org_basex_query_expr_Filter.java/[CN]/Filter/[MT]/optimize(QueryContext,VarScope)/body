{
  final Value cv=ctx.value;
  try {
    if (root.isEmpty())     return optPre(null,ctx);
    if (root instanceof AxisPath && !super.uses(Use.POS))     return ((AxisPath)root.copy(ctx,scp)).addPreds(ctx,scp,preds);
    return preds.length == 0 ? root : opt(ctx);
  }
  finally {
    ctx.value=cv;
  }
}
