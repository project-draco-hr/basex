{
  final VarScope sc=new VarScope(scp);
  for (  final Var v : vars)   vs.put(v.id,sc.newCopyOf(ctx,v));
  for (  final Entry<Var,Expr> e : closure.entrySet()) {
    final Var v=vs.get(e.getKey().id);
    final Expr ex=e.getValue().copy(ctx,scp,vs);
    sc.closure.put(v,ex);
  }
  sc.current.clear();
  return sc;
}
