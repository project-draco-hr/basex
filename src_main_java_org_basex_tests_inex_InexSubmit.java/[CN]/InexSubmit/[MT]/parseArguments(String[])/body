{
  final Args arg=new Args(args,this," [-ux]" + NL + "  -u[...] update submission times"+ NL+ "  -x      convert queries");
  try {
    while (arg.more()) {
      if (arg.dash()) {
        final char ca=arg.next();
        if (ca == 'u') {
          updateTimes(Arrays.copyOfRange(args,1,args.length));
          return false;
        }
 else         if (ca == 'x') {
          convertTopics();
          return false;
        }
      }
    }
    if (!arg.finish())     return false;
    session=new ClientSession(ctx,ADMIN,ADMIN);
    return true;
  }
 catch (  final Exception ex) {
    Util.errln("Please run BaseXServer for using server mode.");
    Util.stack(ex);
    return false;
  }
}
