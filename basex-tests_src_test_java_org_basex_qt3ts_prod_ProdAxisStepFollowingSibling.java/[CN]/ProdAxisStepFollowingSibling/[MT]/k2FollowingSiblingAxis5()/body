{
  final XQuery query=new XQuery("\n" + "        declare variable $i := <root> <child/> <child/> <child> <child2> <child3> <leaf/> </child3> </child2> </child> </root>; \n" + "        root($i)//following-sibling::node()\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<child/><child><child2><child3><leaf/></child3></child2></child>",false));
}
