{
  ++threadID;
  errPos=-1;
  errFile=null;
  info.setCursor(!ok && error(msg) ? GUIConstants.CURSORHAND : GUIConstants.CURSORARROW);
  final String m=msg.replaceAll(STOPPED_AT + " .*?(\\r?\\n\\[.*?\\] )?","").replaceAll(LINE_X.replaceAll("%",".*?") + COL,"");
  info.setText(m,ok ? Msg.SUCCESS : Msg.ERROR);
  info.setToolTipText(ok ? null : msg);
  stop.setEnabled(false);
  refreshMark();
}
