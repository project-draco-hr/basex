{
  ++threadID;
  info.setCursor(error(message,ok) ? GUIConstants.CURSORHAND : GUIConstants.CURSORARROW);
  info.setText(ok ? OK : message.replaceAll(STOPPED_AT + ".*\\r?\\n\\[.*?\\] ",""),ok ? Msg.SUCCESS : Msg.ERROR);
  info.setText(ok ? OK : message.replaceAll(STOPPED_AT + ".*\\r?\\n\\[.*?\\] ",""),ok ? Msg.SUCCESS : Msg.ERROR);
  info.setToolTipText(ok ? null : message);
  stop.setEnabled(false);
  go.setEnabled(true);
}
