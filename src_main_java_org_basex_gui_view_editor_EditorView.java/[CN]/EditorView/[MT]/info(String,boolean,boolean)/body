{
  ++threadID;
  errPos=-1;
  errFile=null;
  info.setCursor(!ok && error(msg) ? GUIConstants.CURSORHAND : GUIConstants.CURSORARROW);
  final String m=msg.replaceAll("^.*\r?\n\\[.*?\\]","").replaceAll(".*" + LINE_X.replaceAll("%",".*?") + COL,"");
  info.setText(m,ok ? Msg.SUCCESS : Msg.ERROR).setToolTipText(ok ? null : msg);
  if (up) {
    stop.setEnabled(false);
    refreshMark();
  }
}
