{
  System.out.println("blockplusone:");
  final String dbname="replaceTest";
  final Context ctx=new Context();
  try {
    new CreateDB(dbname,"<xml/>").execute(ctx);
    final XQuery xq=new XQuery("for $i in 1 to 128 return insert " + "node <n>{$i}</n> into /xml");
    xq.execute(ctx);
    new XQuery("for $i in //n return replace node $i with " + "<node>{$i/text()}</node>").execute(ctx);
    System.out.println("finished.");
  }
 catch (  BaseXException e) {
    e.printStackTrace();
  }
  System.out.println("\n\n");
}
