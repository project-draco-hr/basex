{
  final XQuery query=new XQuery("declare namespace functx = \"http://www.example.com/\";\n" + "                    (:~ : The next day : : @author Priscilla Walmsley, Datypic : @version 1.0 : @see http://www.xqueryfunctions.com/xq/functx_next-day.html : @param $date the date :)\n" + "         declare function functx:next-day ( $date as xs:anyAtomicType? ) as xs:date? { xs:date($date) + xs:dayTimeDuration('P1D') } ;\n"+ "                    (functx:next-day( xs:dateTime('2005-12-31T12:00:13')))",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"2006-01-01"));
}
