{
  final XQuery query=new XQuery("\n" + "         declare namespace functx = \"http://www.example.com/\";\n" + "         declare function functx:left-trim ( $arg as xs:string? ) as xs:string { replace($arg,'^\\s+','') } ;\n"+ "         (functx:left-trim(' xyz    x'))\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"xyz    x"));
}
