{
  if (gui.updating || e.isShiftDown())   return;
  if (!selection) {
    selection=true;
    selectRect=new ViewRect();
    selectRect.x=e.getX();
    selectRect.y=e.getY();
    selectRect.h=1;
    selectRect.w=1;
  }
 else {
    final int x=e.getX();
    final int y=e.getY();
    selectRect.w=x - selectRect.x;
    selectRect.h=y - selectRect.y;
  }
  repaint();
}
