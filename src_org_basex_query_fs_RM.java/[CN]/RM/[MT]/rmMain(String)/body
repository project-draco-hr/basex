{
  GetOpts g=new GetOpts(cmd,"Rh");
  int ch=g.getopt();
  while (ch != -1) {
switch (ch) {
case 'h':
      printHelp();
    fAccomplished=true;
  break;
case 'R':
fRecursive=true;
break;
case ':':
fError=true;
out.print("rm: missing argument");
break;
case '?':
fError=true;
out.print("rm: illegal option");
break;
}
if (fError || fAccomplished) {
return;
}
ch=g.getopt();
}
if (g.getPath() != null) {
remove(g.getPath());
}
}
