{
  final InputStreamReader isr=new InputStreamReader(in,cs);
  final BufferedReader br=new BufferedReader(isr);
  return new Thread(){
    @Override public void run(){
      try {
        for (int b; (b=br.read()) != -1; )         tb.add(b);
      }
 catch (      final IOException ex) {
        Util.stack(ex);
      }
    }
  }
;
}
