{
  if (session == null) {
    String pw=null;
    while (user == null || user.length() == 0) {
      Main.out(SERVERUSER);
      user=System.console().readLine();
    }
    while (pw == null || pw.length() == 0) {
      Main.out(SERVERPW);
      pw=new String(System.console().readPassword());
    }
    try {
      session=new ClientSession(context,user,pw);
    }
 catch (    final Exception ex) {
      Main.error(ex,true);
      success=false;
    }
  }
  return session;
}
