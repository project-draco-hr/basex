{
  if (session == null) {
    String pw=null;
    while (user == null) {
      Main.out(SERVERUSER + COLS);
      user=System.console().readLine();
    }
    while (pw == null) {
      Main.out(SERVERPW + COLS);
      pw=new String(System.console().readPassword());
    }
    session=new ClientSession(context,user,pw);
  }
  return session;
}
