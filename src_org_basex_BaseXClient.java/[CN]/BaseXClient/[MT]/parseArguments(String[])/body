{
  boolean ok=true;
  for (int a=0; a < args.length; a++) {
    ok=false;
    if (!args[a].startsWith("-")) {
      console=false;
      query=args[a];
      Prop.onthefly=true;
      Prop.mainmem=true;
      ok=true;
    }
 else {
      for (int i=1; i < args[a].length(); i++) {
        ok=false;
        final char c=args[a].charAt(i);
        if (c == 'c' && standalone) {
          execute(Commands.SET,Set.CHOP + " on",false);
          ok=true;
        }
 else         if (c == 'd') {
          Prop.debug=true;
          ok=true;
        }
 else         if (c == 'e' && standalone) {
          execute(Commands.SET,Set.ENTITY + Set.OFF,false);
          ok=true;
        }
 else         if (c == 'o') {
          if (++i == args[a].length()) {
            a++;
            i=0;
          }
          if (a == args.length)           break;
          output=args[a].substring(i);
          i=args[a].length();
          ok=true;
        }
 else         if (c == 'p' && !standalone) {
          if (++i == args[a].length()) {
            a++;
            i=0;
          }
          if (a == args.length)           break;
          final int p=Token.toInt(args[a].substring(i));
          if (p < 0) {
            error(null,BaseX.info(SERVERPORT,args[a].substring(i)));
            break;
          }
          port=p;
          i=args[a].length();
          ok=true;
        }
 else         if (c == 'q') {
          console=false;
          String input="";
          if (i + 1 < args[a].length())           input=args[a].substring(i + 1);
          for (++a; a < args.length; a++)           input+=' ' + args[a];
          commands=input.trim();
          return true;
        }
 else         if (c == 'r' && standalone) {
          if (++i == args[a].length()) {
            a++;
            i=0;
          }
          if (a == args.length)           break;
          Prop.runs=Math.max(1,Token.toInt(args[a].substring(i)));
          i=args[a].length();
          ok=true;
        }
 else         if (c == 's' && !standalone) {
          if (++i == args[a].length()) {
            a++;
            i=0;
          }
          if (a == args.length)           break;
          host=args[a].substring(i);
          i=args[a].length();
          ok=true;
        }
 else         if (c == 'v') {
          info=true;
          ok=true;
        }
 else         if (c == 'V') {
          allInfo=true;
          info=true;
          ok=true;
        }
 else         if (c == 'x') {
          execute(Commands.SET,Set.XMLOUTPUT + " " + Set.ON,false);
          ok=true;
        }
 else         if (c == 'y' && standalone) {
          Prop.mainmem=true;
          ok=true;
        }
 else         if (c == 'Y' && standalone) {
          Prop.onthefly=true;
          ok=true;
        }
 else         if (c == 'z') {
          execute(Commands.SET,Set.SERIALIZE + " " + Set.OFF,false);
          ok=true;
        }
 else {
          break;
        }
      }
    }
    if (!ok)     break;
  }
  if (!ok)   BaseX.outln(standalone ? LOCALINFO : CLIENTINFO);
  return ok;
}
