{
  final int l=text.length;
  pa=false;
  sc=false;
  lp=p;
  for (; p < l; p+=cl(text[p])) {
    final int c=cp(text,p);
    if (c == '\n') {
      pa=true;
      p+=cl((byte)' ');
      sc=true;
      break;
    }
 else     if (ftChar(c)) {
      break;
    }
    sc=true;
  }
  if (lp < p)   return true;
  pos++;
  s=p;
  if (p == l)   return false;
  for (; p < l; p+=cl(text[p])) {
    int c=cp(text,p);
    if (!ftChar(c)) {
      s=p - cl(text[p]);
      break;
    }
  }
  return true;
}
