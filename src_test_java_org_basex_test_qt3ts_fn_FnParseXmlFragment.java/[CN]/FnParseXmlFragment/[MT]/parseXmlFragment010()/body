{
  final XQuery query=new XQuery("parse-xml-fragment(\"<a/><!--comment--><?PI?><b/>\")",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<a/><!--comment--><?PI?><b/>",false));
}
