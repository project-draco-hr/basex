{
  final XQuery query=new XQuery("\n" + "      declare function local:ops() as (function(xs:string) as xs:string)*\n" + "      \t{ (upper-case#1, lower-case#1, function($x){translate($x, 'e', 'i')}, substring-before(?, ' ')) }; \n"+ "      string-join(for $f in local:ops() return $f('Michael Kay'), '~')\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"MICHAEL KAY~michael kay~Michail Kay~Michael"));
}
