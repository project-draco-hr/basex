{
  final XQuery query=new XQuery("\n" + "      declare function local:splitter($sep as xs:string) as (function(xs:string) as xs:string*) \n" + "      \t{ function($x as xs:string) { for $i in tokenize($x, $sep) return upper-case($i)} }; \n"+ "      string-join(local:splitter(\"\\s\")(\"A nice cup of tea\"), '|')\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"A|NICE|CUP|OF|TEA"));
}
