{
  final XQuery query=new XQuery("\n" + "        declare function local:f($x as xs:integer) as xs:integer {\n" + "            $x + 1\n"+ "        };\n"+ "        let $f as function(xs:integer) := local:f#1\n"+ "        return $f(3)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPST0003"));
}
