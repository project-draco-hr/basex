{
  final XQuery query=new XQuery("\n" + "declare function local:curry($f as function(item()*, item()*) as item()*) as function(item()*) as function(item()*) as item()*\n" + "{\n"+ "  function($a) { $f($a, ?) }\n"+ "};\n"+ "\n"+ "local:curry(substring-after#2)(\"foobar\")(\"foo\")\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("\"bar\""));
}
