{
  final XQuery query=new XQuery("\n" + "      declare function local:f($x as xs:integer) as xs:integer { $x + 3 }; \n" + "      let $f as function(xs:integer) as xs:integer := local:f#1 \n"+ "      return $f(2)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("5"));
}
