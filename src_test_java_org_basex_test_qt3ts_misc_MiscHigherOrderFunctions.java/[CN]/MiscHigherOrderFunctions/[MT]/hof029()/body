{
  final XQuery query=new XQuery("\n" + "      declare function local:splitter() as (function(xs:string) as xs:string+)? \n" + "      { function($x as xs:string) { for $i in tokenize($x, '\\s') return upper-case($i)} }; \n"+ "      string-join(local:splitter()(\"A nice cup of tea\"), '|')\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"A|NICE|CUP|OF|TEA"));
}
