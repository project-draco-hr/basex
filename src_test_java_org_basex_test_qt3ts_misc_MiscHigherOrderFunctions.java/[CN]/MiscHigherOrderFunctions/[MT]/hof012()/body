{
  final XQuery query=new XQuery("\n" + "      declare function local:f($x as xs:integer, $y as xs:long) as xs:integer { $x + $y }; \n" + "      let $f as function(xs:integer, xs:long) as xs:integer := local:f#2 \n"+ "      return $f(2, xs:long(5))\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertEq("7"));
}
