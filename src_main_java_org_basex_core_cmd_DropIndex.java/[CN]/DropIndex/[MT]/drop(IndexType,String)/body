{
  try {
    final Data data=context.data;
    data.closeIndex(index);
    data.meta.dirty=true;
    data.flush();
    return DropDB.drop(data.meta.name,pat + "." + IO.BASEXSUFFIX,prop) ? info(INDDROP,index,perf) : error(INDDROPERROR,index);
  }
 catch (  final IOException ex) {
    Util.debug(ex);
    return error(ex.getMessage());
  }
}
