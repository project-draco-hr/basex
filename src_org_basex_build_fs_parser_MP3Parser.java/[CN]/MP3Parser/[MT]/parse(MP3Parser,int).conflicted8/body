{
  final String encoding=obj.readEncoding();
  byte[] lang=obj.readText(3,"");
  for (  final byte b : lang) {
    if (ws(b) || b == 0) {
      lang=EMPTY;
      break;
    }
  }
  int pos=4;
  while (obj.bfc.get() != 0 && ++pos < size)   ;
  if (pos >= size)   return;
  if (ws(lang) || lang[0] == 'X')   lang=null;
  obj.fsparser.metaEvent(Element.COMMENT,DataType.STRING,Definition.NONE,lang,obj.readText(size - pos,encoding));
}
