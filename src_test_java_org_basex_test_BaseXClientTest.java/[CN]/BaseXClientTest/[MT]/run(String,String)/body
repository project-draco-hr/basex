{
  System.setOut(NULL);
  System.setErr(NULL);
  final BaseXServer bxs=new BaseXServer("-p9999 -e9998 " + sargs);
  final ArrayOutput ao=new ArrayOutput();
  System.setOut(new PrintStream(ao));
  try {
    new BaseXClient("-p9999 -U" + Text.ADMIN + " -P"+ Text.ADMIN+ " "+ args);
    return ao.toString();
  }
  finally {
    bxs.stop();
  }
}
