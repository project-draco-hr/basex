{
  final XQuery query=new XQuery("declare variable $ext as xs:integer* external := (0,1,2); <a>{sum($ext)}</a>",ctx);
  try {
    query.bind("ext",new XQuery("42",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<a>42</a>",false));
}
