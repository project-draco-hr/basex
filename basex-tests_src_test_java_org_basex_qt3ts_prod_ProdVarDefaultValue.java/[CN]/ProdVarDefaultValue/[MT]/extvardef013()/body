{
  final XQuery query=new XQuery("\n" + "        declare variable $y external;\n" + "        declare variable $z external := 10;\n"+ "        declare function local:aaa() { $z };\n"+ "        declare variable $x external := local:bbb() + local:aaa() + 2;\n"+ "        declare function local:bbb() { $y };\n"+ "        $x \n"+ "      ",ctx);
  try {
    query.bind("y",new XQuery("16",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("28"));
}
