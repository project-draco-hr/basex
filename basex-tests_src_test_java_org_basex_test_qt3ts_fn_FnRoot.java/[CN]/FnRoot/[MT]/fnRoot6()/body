{
  final XQuery query=new XQuery("let $var := <anElement>An Element Content</anElement> return fn:root($var)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<anElement>An Element Content</anElement>",false));
}
