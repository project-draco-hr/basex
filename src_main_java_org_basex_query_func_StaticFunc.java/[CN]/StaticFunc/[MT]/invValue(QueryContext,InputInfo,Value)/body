{
  final Value cv=ctx.value;
  final StaticContext cs=ctx.sc;
  ctx.sc=sc;
  ctx.value=null;
  final int fp=addArgs(ctx,ii,arg);
  try {
    final Value v=ctx.value(expr);
    return cast ? declType.funcConvert(ctx,info,v) : v;
  }
  finally {
    scope.exit(ctx,fp);
    ctx.value=cv;
    ctx.sc=cs;
  }
}
