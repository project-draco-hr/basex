{
  final boolean dsc=co > occMax[nr - 1];
  final byte[][] txt=dsc ? txtMax : txtMin;
  final int[] ocs=dsc ? occMax : occMin;
  for (int a=nr - 1; a >= 0; a--) {
    if (a == 0 || dsc && co < ocs[a - 1] || !dsc && co > ocs[a - 1]) {
      txt[a]=tx;
      ocs[a]=co;
      break;
    }
    txt[a]=txt[a - 1];
    ocs[a]=ocs[a - 1];
  }
}
