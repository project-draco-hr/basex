{
  final String a=cmd.args.length > arg ? cmd.args[arg] : null;
  if (a != null && !a.isEmpty()) {
    if (key != null)     tb.add(' ').add(key);
    tb.add(' ');
    if (a.indexOf(' ') != -1 || a.indexOf(';') != -1) {
      tb.add('"');
      tb.add(a.replaceAll("\"","\\\""));
      tb.add('"');
    }
 else {
      tb.add(a);
    }
  }
  return this;
}
