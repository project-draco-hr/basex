{
  final XQuery query=new XQuery("fn:dateTime(xs:date(\"1999-12-31\"), xs:time(\"12:00:00\"))",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"1999-12-31T12:00:00"));
}
