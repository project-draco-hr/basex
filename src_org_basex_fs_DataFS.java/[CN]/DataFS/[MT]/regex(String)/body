{
  final StringBuilder result=new StringBuilder();
  for (int i=0; i < expr.length(); i++) {
    final char c=expr.charAt(i);
    if (c == '*') {
      result.append(".*");
    }
 else     if (c == '?') {
      result.append(".");
    }
 else     if (c == '.') {
      result.append("\\.");
    }
 else {
      result.append(c);
    }
  }
  return result.toString();
}
