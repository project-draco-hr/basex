{
  final int oi=size >>> WORD_POWER;
  if (all && i >= size) {
    for (int j=0; j < oi; j++)     words[j]=WORD_MASK;
    words[oi]=Long.MAX_VALUE >> size % WORD_SIZE - 1;
    all=!(i > size);
  }
  final int wi=i >>> WORD_POWER;
  if (wi >= words.length)   resize(wi + 1);
  words[wi]|=1L << i;
  if (i >= size)   size=i + 1;
}
