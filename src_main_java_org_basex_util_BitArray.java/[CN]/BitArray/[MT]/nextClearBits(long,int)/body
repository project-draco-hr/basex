{
  final long[] t=new long[n];
  int cnt=0;
  long prev=i;
  while (cnt < n) {
    final long b=nextClearBit(prev);
    if (b >= 0 && b < length)     prev=(t[cnt++]=b) + 1L;
 else     break;
  }
  if (cnt == n)   return t;
  final long[] r=new long[cnt];
  System.arraycopy(t,0,r,0,cnt);
  return r;
}
