{
  super(Util.info(s,chop(e)));
  code=c;
  if (ii == null)   return;
  line=1;
  col=1;
  final int qp=Math.min(ii.pos - 1,ii.query.length());
  for (int i=0, ch; i < qp; i+=Character.charCount(ch)) {
    ch=ii.query.codePointAt(i);
    if (ch == 0x0A) {
      line++;
      col=1;
    }
 else     if (ch != 0x0D) {
      col++;
    }
  }
}
