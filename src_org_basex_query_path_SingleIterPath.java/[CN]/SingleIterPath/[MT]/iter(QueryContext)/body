{
  return new Iter(){
    Iter s;
    @Override public Item next() throws QueryException {
      final Item tmp=ctx.item;
      if (s == null) {
        if (root != null)         ctx.item=ctx.iter(root).finish();
        s=ctx.iter(step[0]);
      }
      final Item it=s.next();
      ctx.item=tmp;
      return it;
    }
    @Override public boolean ordered(){
      return true;
    }
  }
;
}
