{
  events.start();
  running=true;
  while (running) {
    try {
      final Socket s=socket.accept();
      if (stop.exists()) {
        if (!stop.delete())         log.write(Util.info(DBNOTDELETED,stop));
        quit();
      }
 else {
        new ClientListener(s,context,log,this).start();
      }
    }
 catch (    final IOException ex) {
      break;
    }
  }
}
