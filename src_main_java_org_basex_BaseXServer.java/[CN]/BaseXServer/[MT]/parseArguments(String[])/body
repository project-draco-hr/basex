{
  final Args arg=new Args(args,this,SERVERINFO,Util.info(CONSOLE,SERVERMODE));
  boolean daemon=false;
  while (arg.more()) {
    if (arg.dash()) {
switch (arg.next()) {
case 'c':
        commands=arg.remaining();
      break;
case 'd':
    context.mprop.set(MainProp.DEBUG,true);
  break;
case 'D':
daemon=true;
break;
case 'e':
context.mprop.set(MainProp.EVENTPORT,arg.num());
break;
case 'i':
console=true;
break;
case 'p':
context.mprop.set(MainProp.SERVERPORT,arg.num());
break;
case 's':
service=!daemon;
break;
case 'z':
quiet=true;
break;
default :
arg.usage();
}
}
 else {
if (arg.string().equalsIgnoreCase("stop")) {
stopped=true;
}
 else {
arg.usage();
}
}
}
if (context.mprop.num(MainProp.SERVERPORT) == context.mprop.num(MainProp.EVENTPORT)) {
throw new BaseXException(SERVERPORTS);
}
}
