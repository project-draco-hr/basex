{
  if (!running)   return;
  running=false;
  for (  final ClientListener cs : auth) {
    remove(cs);
    cs.quitAuth();
  }
  for (  final ClientListener cs : context.sessions) {
    cs.quit();
  }
  super.quit();
  try {
    if (console)     System.in.close();
    esocket.close();
    socket.close();
  }
 catch (  final IOException ex) {
    context.log.writeError(ex);
  }
  console=false;
}
