{
  final File stop=stopFile(port);
  try {
    stop.createNewFile();
    new Socket(LOCALHOST,eport).close();
    new Socket(LOCALHOST,port).close();
    while (ping(LOCALHOST,port))     Performance.sleep(50);
    Performance.sleep(50);
  }
 catch (  final IOException ex) {
    stop.delete();
    throw ex;
  }
}
