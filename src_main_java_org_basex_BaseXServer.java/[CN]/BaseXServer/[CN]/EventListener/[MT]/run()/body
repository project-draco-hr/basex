{
  while (running) {
    try {
      final Socket es=esocket.accept();
      if (stop.exists()) {
        esocket.close();
        break;
      }
      final BufferInput bi=new BufferInput(es.getInputStream());
      final long id=Long.parseLong(bi.readString());
      for (      final ServerProcess s : context.sessions) {
        if (s.getId() == id) {
          s.register(es);
          break;
        }
      }
    }
 catch (    final IOException ex) {
      break;
    }
  }
}
