{
  put(DB,null);
  put(DB + "/a",new ArrayInput(token("<a>A</a>")));
  put(DB + "/b",new ArrayInput(token("<b>B</b>")));
  assertEquals("2",get(DB + "?query=count(//text())"));
  assertEquals("2",get("?query=count(db:open('" + DB + "')//text())"));
  assertEquals("1",get("?query=count(db:open('" + DB + "/b')/*)"));
  delete(DB);
}
