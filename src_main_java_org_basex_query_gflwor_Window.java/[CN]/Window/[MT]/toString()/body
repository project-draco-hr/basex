{
  final StringBuilder sb=new StringBuilder(FOR).append(' ').append(sliding ? SLIDING : TUMBLING).append(' ').append(WINDOW).append(' ').append(var).append(' ').append(IN).append(' ').append(expr).append(' ').append(start);
  if (end != null) {
    if (only)     sb.append(' ').append(ONLY);
    sb.append(' ').append(end);
  }
  return sb.toString();
}
