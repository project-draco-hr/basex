{
  final Args arg=new Args(args,this," -v [pat]" + NL + " [pat] perform tests starting with a pattern"+ NL+ " -a  save all tests"+ NL+ " -d  debugging mode"+ NL+ " -e  ignore error codes"+ NL+ " -i  also save ignored files"+ NL+ " -s  print slow queries"+ NL+ " -v  verbose output",Util.info(Text.CONSOLE,Util.name(this)));
  while (arg.more()) {
    if (arg.dash()) {
      final char c=arg.next();
      if (c == 'v') {
        verbose=true;
      }
 else       if (c == 'a') {
        all=true;
      }
 else       if (c == 'd') {
        ctx.mprop.set(MainProp.DEBUG,true);
      }
 else       if (c == 'i') {
        ignoring=true;
      }
 else       if (c == 'e') {
        errors=false;
      }
 else       if (c == 's') {
        slow=new TreeMap<Long,String>();
      }
 else {
        arg.usage();
      }
    }
 else {
      single=arg.string();
      maxout=Integer.MAX_VALUE;
    }
  }
}
