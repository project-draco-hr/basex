{
  final Args arg=new Args(args,this," -v" + NL + " -v     verbose output",Util.info(CONSOLE,Util.name(this)));
  while (arg.more()) {
    if (arg.dash()) {
      final char c=arg.next();
      if (c == 'v') {
        verbose=true;
      }
 else {
        arg.usage();
      }
    }
 else {
      single=arg.string();
      maxout=Integer.MAX_VALUE;
    }
  }
}
