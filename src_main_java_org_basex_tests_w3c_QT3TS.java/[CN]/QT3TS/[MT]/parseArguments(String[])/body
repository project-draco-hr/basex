{
  final Args arg=new Args(args,this," -v [pat]" + NL + " [pat] perform tests starting with a pattern"+ NL+ " -d     debugging mode"+ NL+ " -v     verbose output",Util.info(CONSOLE,Util.name(this)));
  while (arg.more()) {
    if (arg.dash()) {
      final char c=arg.next();
      if (c == 'v') {
        verbose=true;
      }
 else       if (c == 'd') {
        ctx.mprop.set(MainProp.DEBUG,true);
      }
 else {
        arg.usage();
      }
    }
 else {
      single=arg.string();
      maxout=Integer.MAX_VALUE;
    }
  }
}
