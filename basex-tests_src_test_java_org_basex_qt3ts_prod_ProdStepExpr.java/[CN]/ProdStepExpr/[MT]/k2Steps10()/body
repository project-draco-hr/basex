{
  final XQuery query=new XQuery("declare variable $myVar := <e>text</e>; $myVar/text()/(<e/>, (), 1, <e/>)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0018"));
}
