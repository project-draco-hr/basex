{
  final XQuery query=new XQuery("declare variable $var := document {<a>123</a>}; let $doc := / return $doc/*",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPST0003"));
}
