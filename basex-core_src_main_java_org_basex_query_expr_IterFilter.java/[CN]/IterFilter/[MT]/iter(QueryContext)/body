{
  return new Iter(){
    /** 
 * Iterator. 
 */
    Iter iter;
    @Override public Item next() throws QueryException {
      if (iter == null)       iter=ctx.iter(root);
      for (Item it; (it=iter.next()) != null; ) {
        ctx.checkStop();
        if (preds(it,ctx))         return it;
      }
      return null;
    }
  }
;
}
