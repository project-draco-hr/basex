{
  final boolean scoring=qc.scoring;
  return new Iter(){
    /** 
 * Iterator. 
 */
    Iter iter;
    @Override public Item next() throws QueryException {
      if (iter == null)       iter=qc.iter(root);
      for (Item it; (it=iter.next()) != null; ) {
        qc.checkStop();
        if (preds(it,qc,scoring))         return it;
      }
      return null;
    }
  }
;
}
