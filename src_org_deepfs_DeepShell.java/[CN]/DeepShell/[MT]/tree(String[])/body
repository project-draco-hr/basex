{
  if (args.length == 1) {
    new TreePrinter().startTraversal(new File(Prop.WORK));
    return;
  }
  if (args.length == 2) {
    final File d=new File(args[1]);
    if (d.isDirectory()) {
      new TreePrinter().startTraversal(d);
      return;
    }
    System.out.println("No such directory " + d.getAbsolutePath());
  }
  help(new String[]{"help","tree"});
  return;
}
