{
  final XQuery query=new XQuery("\n" + "        declare variable $x as xs:decimal external := xs:integer(10);\n" + "        $x\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("10"));
}
