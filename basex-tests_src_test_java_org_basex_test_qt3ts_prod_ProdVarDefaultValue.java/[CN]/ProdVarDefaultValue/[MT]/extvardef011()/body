{
  final XQuery query=new XQuery("\n" + "        declare variable $a := $x;\n" + "        declare variable $x external := $a + 2;\n"+ "        $x\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQDY0054"));
}
