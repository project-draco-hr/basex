{
  final XQuery query=new XQuery("\n" + "        declare variable $x as xs:integer external := xs:int(5);\n" + "        declare variable $y as xs:decimal external := $x;\n"+ "        $y instance of xs:decimal\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("fn:true()"));
}
