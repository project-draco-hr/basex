{
  final XQuery query=new XQuery("let $in-xml := <a><x>123</x></a> return (root( (/) //item[1]))",ctx);
  try {
    query.context(node(file("app/FunctxFn/functx_order.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<order num=\"00299432\" date=\"2006-09-15\" cust=\"0221A\">\n  <item dept=\"WMN\" num=\"557\" quantity=\"1\" color=\"beige\"/>\n  <item dept=\"ACC\" num=\"563\" quantity=\"1\"/>\n  <item dept=\"ACC\" num=\"443\" quantity=\"2\"/>\n  <item dept=\"MEN\" num=\"784\" quantity=\"1\" color=\"blue/white\"/>\n  <item dept=\"MEN\" num=\"784\" quantity=\"1\" color=\"blue/red\"/>\n  <item dept=\"WMN\" num=\"557\" quantity=\"1\" color=\"sage\"/>\n</order>",false));
}
