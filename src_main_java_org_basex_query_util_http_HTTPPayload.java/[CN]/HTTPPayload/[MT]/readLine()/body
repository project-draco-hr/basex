{
  final TokenBuilder tb=new TokenBuilder();
  for (int b; (b=in.read()) != -1; ) {
    while (b == '\r') {
      b=in.read();
      if (b == '\n')       return tb.finish();
      tb.add('\r');
      if (b == -1)       return tb.finish();
    }
    tb.add(b);
  }
  return tb.isEmpty() ? null : tb.finish();
}
