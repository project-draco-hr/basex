{
  final XQuery query=new XQuery("\n" + "         let $e := <e><a>1</a><b>2</b><c>3</c></e>\n" + "         return fn:string-join($e/*)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"123"));
}
