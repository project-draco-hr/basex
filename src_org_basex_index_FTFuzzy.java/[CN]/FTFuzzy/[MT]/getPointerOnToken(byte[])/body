{
  final int tl=tok.length;
  int l=tp[tl];
  if (l == -1)   return -1;
  int r=-1;
  int i=1;
  do   r=tp[tl + i++];
 while (r == -1);
  final int o=tl + 9;
  while (l < r) {
    final int m=l + (r - l) / 2 / o * o;
    final int c=Token.diff(ti.readBytes(m,m + tl),tok);
    if (c == 0)     return m;
 else     if (c < 0)     l=m + o;
 else     r=m - o;
  }
  return r == l && Token.eq(ti.readBytes(l,l + tl),tok) ? l : -1;
}
