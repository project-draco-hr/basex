{
  off=(int)(p & IO.BLOCKSIZE - 1);
  final boolean ch=bm.cursor(p - off);
  final Buffer bf=bm.current();
  if (ch) {
    try {
      if (bf.dirty)       writeBlock(bf);
      bf.pos=p - off;
      file.seek(bf.pos);
      file.readFully(bf.data,0,(int)Math.min(len - bf.pos,IO.BLOCKSIZE));
    }
 catch (    final IOException ex) {
      Util.stack(ex);
    }
  }
  return bf;
}
