{
  final String fun=check(FunDef.TEXT,(Class<?>)null);
  new DropIndex("text").execute(CTX);
  query(fun + "('XML')","XML");
  new CreateIndex("text").execute(CTX);
  query(fun + "('XML')","XML");
  query(fun + "('XXX')","");
  new Close().execute(CTX);
  query("db:open('db')/" + fun + "('XML')","XML");
  error(fun + "('XXX')",Err.NODBCTX);
}
