{
  final XQuery query=new XQuery("\n" + "      \tdeclare function local:f($x as xs:integer) { \n" + "      \t\tif ($x = 2) then xs:dateTime(\"3000-12-01T12:00:00\") else current-dateTime() \n"+ "      \t}; \n"+ "      \tmax(for $x in (1,2,3) return local:f($x))\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"3000-12-01T12:00:00"));
}
