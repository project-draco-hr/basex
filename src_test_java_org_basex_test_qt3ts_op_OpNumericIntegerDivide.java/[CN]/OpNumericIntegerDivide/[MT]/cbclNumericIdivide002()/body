{
  final XQuery query=new XQuery("\n" + "      \tdeclare function local:square($arg as xs:double) as xs:double { $arg * $arg }; \n" + "      \tlocal:square(1e100) idiv 5e-100",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((error("FOAR0002") || (assertType("xs:integer") && assertQuery("string-length(string($result)) gt 299"))));
}
