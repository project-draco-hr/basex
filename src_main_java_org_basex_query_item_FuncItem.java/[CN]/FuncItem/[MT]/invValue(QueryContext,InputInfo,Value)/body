{
  final int s=ctx.vars.size();
  for (int i=closure.size; i-- > 0; )   ctx.vars.add(closure.vars[i].copy());
  for (int a=vars.length; a-- > 0; )   ctx.vars.add(vars[a].bind(args[a],ctx).copy());
  final Value cv=ctx.value;
  ctx.value=null;
  final Value v=ctx.value(expr);
  ctx.value=cv;
  ctx.vars.reset(s);
  return cast != null ? cast.promote(v,ctx,ii) : v;
}
