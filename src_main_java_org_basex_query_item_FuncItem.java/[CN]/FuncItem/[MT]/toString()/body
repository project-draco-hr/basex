{
  final FuncType ft=(FuncType)type;
  final StringBuilder sb=new StringBuilder(FUNCTION).append('(');
  for (  final Var v : vars)   sb.append(v).append(v == vars[vars.length - 1] ? "" : ", ");
  return sb.append(")").append(ft.ret != null ? " as " + ft.ret : "").append(" { ").append(expr).append(" }").toString();
}
