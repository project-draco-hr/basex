{
  final XQuery query=new XQuery("string(<elem attr=\"{comment {\" content \"}}\"/>/@attr)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false," content "));
}
