{
  if (v < 0 || v > 0x3FFFFFFF) {
    write(0xC0);
    write(v >>> 24);
    write(v >>> 16);
    write(v >>> 8);
    write(v);
  }
 else   if (v > 0x3FFF) {
    write(v >>> 24 | 0x80);
    write(v >>> 16);
    write(v >>> 8);
    write(v);
  }
 else   if (v > 0x3F) {
    write(v >>> 8 | 0x40);
    write(v);
  }
 else {
    write(v);
  }
}
