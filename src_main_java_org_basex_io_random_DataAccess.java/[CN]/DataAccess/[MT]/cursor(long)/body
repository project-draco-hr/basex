{
  off=(int)(p & IO.BLOCKSIZE - 1);
  final long b=p - off;
  if (!bm.cursor(b))   return;
  final Buffer bf=bm.current();
  try {
    if (bf.dirty)     writeBlock(bf);
    bf.pos=b;
    file.seek(bf.pos);
    file.readFully(bf.data,0,(int)Math.min(len - b,IO.BLOCKSIZE));
  }
 catch (  final IOException ex) {
    Util.stack(ex);
  }
}
