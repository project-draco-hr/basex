{
  final StringBuilder sb=new StringBuilder(string.length());
  boolean dash=false;
  for (int p=0; p < string.length(); p++) {
    final char ch=string.charAt(p);
    if (dash) {
      sb.append(Character.toUpperCase(ch));
      dash=false;
    }
 else {
      dash=ch == '-';
      if (!dash)       sb.append(ch);
    }
  }
  return sb.toString();
}
