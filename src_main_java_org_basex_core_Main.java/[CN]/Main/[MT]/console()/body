{
  final ConsoleReader cr=ConsoleReader.newInstance();
  while (console) {
    final String in=cr.readLine();
    if (in == null)     break;
    if (in.isEmpty())     continue;
    try {
      final CommandParser parser=new CommandParser(in,context);
      parser.password(cr.getPasswordReader());
      if (!execute(parser)) {
        Util.outln(BYE[new Random().nextInt(4)]);
        return;
      }
    }
 catch (    final IOException ex) {
      Util.errln(ex);
    }
  }
}
