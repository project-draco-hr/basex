{
  final File src=pr.dbpath(db);
  final File trg=new File(src.getParent() + '/' + newdb);
  trg.mkdir();
  String[] files=src.list();
  for (  String file : files) {
    FileChannel sc=null;
    FileChannel dc=null;
    try {
      sc=new FileInputStream(new File(src.getAbsolutePath() + '/' + file)).getChannel();
      dc=new FileOutputStream(new File(trg.getAbsolutePath() + '/' + file)).getChannel();
      dc.transferFrom(sc,0,sc.size());
    }
 catch (    final IOException ex) {
      trg.delete();
      return false;
    }
 finally {
      if (sc != null)       try {
        sc.close();
      }
 catch (      final IOException ex) {
      }
      if (dc != null)       try {
        dc.close();
      }
 catch (      final IOException ex) {
      }
    }
  }
  return true;
}
