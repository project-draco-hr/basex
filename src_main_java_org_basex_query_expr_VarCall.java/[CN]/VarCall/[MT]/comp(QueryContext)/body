{
  var=ctx.vars.get(var);
  if (var.expr == null)   return this;
  final NSLocal lc=ctx.ns;
  ctx.ns=lc.copy();
  if (ctx.nsElem.length != 0)   ctx.ns.add(new QNm(EMPTY,Uri.uri(ctx.nsElem)));
  Expr e=var.expr;
  if (ctx.nsElem.length != 0 || lc.size() != 0 || var.type != null || var.global || e.uses(Use.FRG,ctx) || e instanceof FunCall) {
    e=var.item(ctx);
  }
  ctx.ns=lc;
  return e;
}
