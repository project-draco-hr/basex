{
  assertEquals("2",post("","<query xmlns=\"" + URI + "\">"+ "<text>switch(1) case 1 return 2 default return 3</text>"+ "<option name='"+ MainOptions.XQUERY3.name+ "' value='true'/></query>",APP_XML));
  try {
    post("","<query xmlns=\"" + URI + "\">"+ "<text>switch(1) case 1 return 2 default return 3</text>"+ "<option name='"+ MainOptions.XQUERY3.name+ "' value='false'/></query>",APP_XML);
    fail("Error expected.");
  }
 catch (  final IOException ex) {
    assertContains(ex.getMessage(),"[XPST0003]");
  }
}
