{
  input=regex;
  IntList ls=null;
  for (int i=0; i < input.length; i++) {
    final byte c=input[i];
    if (c == '\r' || c == '\n') {
      i++;
      if (c == '\r' && i < input.length && input[i] == '\n')       i++;
      if (i < input.length) {
        if (ls == null)         ls=new IntList();
        ls.add(i);
      }
    }
  }
  lines=ls;
  skipWs=strip;
}
