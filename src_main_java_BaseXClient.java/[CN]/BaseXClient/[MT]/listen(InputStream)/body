{
  new Thread(){
    @Override public void run(){
      try {
        final BufferedInputStream bi=new BufferedInputStream(is);
        while (true) {
          ByteArrayOutputStream os=new ByteArrayOutputStream();
          receive(bi,os);
          final String name=new String(os.toByteArray(),UTF8);
          os=new ByteArrayOutputStream();
          receive(bi,os);
          final String data=new String(os.toByteArray(),UTF8);
          eventCache.add(new Event(name,data));
        }
      }
 catch (      final IOException ex) {
      }
    }
  }
.start();
  new Thread(){
    @Override public void run(){
      while (true) {
        try {
          Event e=eventCache.take();
          notifiers.get(e.getName()).notify(e.getValue());
        }
 catch (        InterruptedException e) {
          e.printStackTrace();
        }
      }
    }
  }
.start();
}
