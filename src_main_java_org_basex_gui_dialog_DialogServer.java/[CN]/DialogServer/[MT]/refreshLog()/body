{
  logc.removeAllItems();
  final File f=new File(logdir);
  final String[] files=f.list();
  final StringList sl=new StringList();
  if (files != null) {
    for (    final String s : files)     if (s.endsWith(".log"))     sl.add(s);
  }
  sl.sort(true,false);
  for (  final String s : sl.finish())   logc.addItem(s);
  action(refreshLog);
}
