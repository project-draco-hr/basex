{
  logc.removeAllItems();
  final String[] files=logdir.list();
  final StringList sl=new StringList();
  if (files != null) {
    for (    final String s : files)     if (s.endsWith(".log"))     sl.add(s);
  }
  sl.sort(false,false);
  for (  final String s : sl)   logc.addItem(s);
  action(refreshLog);
}
