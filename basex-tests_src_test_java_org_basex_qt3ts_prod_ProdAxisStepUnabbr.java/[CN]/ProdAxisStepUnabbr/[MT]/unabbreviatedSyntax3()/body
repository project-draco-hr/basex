{
  final XQuery query=new XQuery("for $h in (/works[1]/employee[2]) return $h/child::text()",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(true,"Text data from Employee[2]"));
}
