{
  final ByteList bl=new ByteList();
  final BufferedInputStream bis=new BufferedInputStream(new URL(path).openStream());
  try {
    for (int b; (b=bis.read()) != -1; )     bl.add(b);
  }
  finally {
    try {
      bis.close();
    }
 catch (    final IOException ex) {
    }
  }
  return bl.toArray();
}
