{
  final ByteList bl=new ByteList();
  BufferedInputStream bis=null;
  try {
    bis=new BufferedInputStream(new URL(path).openStream());
    for (int b; (b=bis.read()) != -1; )     bl.add(b);
  }
  finally {
    if (bis != null)     try {
      bis.close();
    }
 catch (    final IOException ex) {
    }
  }
  cont=bl.toArray();
}
