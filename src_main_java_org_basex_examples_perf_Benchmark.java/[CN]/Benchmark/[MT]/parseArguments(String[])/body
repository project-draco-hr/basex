{
  final Args arg=new Args(args,this," doc\n -r  number of runs");
  while (arg.more()) {
    if (arg.dash()) {
      arg.check(false);
      final char ch=arg.next();
      if (ch == 'r') {
        runs=arg.num();
        System.out.println("* Runs: " + runs);
      }
 else {
        arg.check(false);
      }
    }
 else {
      input=arg.string();
    }
  }
  if (input == null)   arg.check(false);
  return arg.finish();
}
