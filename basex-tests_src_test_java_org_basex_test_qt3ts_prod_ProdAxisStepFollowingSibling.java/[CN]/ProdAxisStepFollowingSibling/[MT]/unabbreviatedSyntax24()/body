{
  final XQuery query=new XQuery("for $h in (/works/employee[2]) return $h/following-sibling::employee[fn:position() = 1]",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<employee name=\"Jane Doe 3\" gender=\"female\">\n   <empnum>E1</empnum>\n   <pnum>P3</pnum>\n   <hours>80</hours>\n  </employee>",false));
}
