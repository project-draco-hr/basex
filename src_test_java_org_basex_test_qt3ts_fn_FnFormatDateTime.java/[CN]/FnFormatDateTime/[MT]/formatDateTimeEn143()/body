{
  final XQuery query=new XQuery("\n" + "        for $i in 0 to 1 return\n" + "        let $t := $b + xs:dayTimeDuration('PT12H')*$i return\n"+ "        translate(format-dateTime($t, '[h]~[m][P]', 'en', (), ()), '.- ', '')\n"+ "      ",ctx);
  query.bind("b",new XQuery("xs:dateTime('2011-07-01T00:00:00')",ctx).value());
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"12~00am 12~00pm"));
}
