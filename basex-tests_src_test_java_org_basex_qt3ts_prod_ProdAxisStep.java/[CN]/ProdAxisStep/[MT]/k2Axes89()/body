{
  final XQuery query=new XQuery("declare default element namespace \"http://typedecl\"; <r> { <e attr=\"foo\"/>/@attr } </r>",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<r xmlns=\"http://typedecl\" attr=\"foo\"/>",false));
}
