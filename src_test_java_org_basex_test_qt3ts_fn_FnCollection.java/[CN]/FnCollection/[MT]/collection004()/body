{
  final XQuery query=new XQuery("collection() | collection(())",ctx);
  try {
    query.addCollection("",new String[]{file("docs/bib.xml"),file("docs/reviews.xml")});
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(((assertQuery("count($result) = 2") && assertType("document-node()*")) || (assertQuery("count($result) = 4") && assertType("document-node()*"))));
}
