{
  final XQuery query=new XQuery("\n" + "        let $c1 := fn:collection() \n" + "        let $c2 := fn:collection() \n"+ "        for $c at $p in $c1 \n"+ "        return $c is exactly-one($c2[$p])",ctx);
  try {
    query.addCollection("",new String[]{file("docs/books.xml"),file("docs/bib.xml"),file("docs/reviews.xml")});
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"true true true"));
}
