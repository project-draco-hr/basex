{
  if (expr == null)   throw VAREMPTY.thrw(info,this);
  if (!compiled) {
    final Value[] sf=scope.enter(ctx);
    try {
      expr=expr.compile(ctx,scope);
      scope.cleanUp(this);
    }
  finally {
      scope.exit(ctx,sf);
    }
    if (expr.isValue())     bind((Value)expr);
    compiled=true;
  }
  return value != null ? value : this;
}
