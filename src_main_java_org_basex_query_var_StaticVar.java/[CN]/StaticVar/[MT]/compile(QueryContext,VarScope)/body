{
  if (compiled) {
    if (value == null)     throw Err.CIRCVAR.thrw(info,this);
    return value;
  }
  if (expr == null)   throw VAREMPTY.thrw(info,this);
  final Value[] sf=scope.enter(ctx);
  try {
    expr=expr.compile(ctx,scope);
    scope.cleanUp(this);
  }
  finally {
    scope.exit(ctx,sf);
  }
  final Value val=bind(value(ctx));
  compiled=true;
  return val;
}
