{
  final File path=pr.dbpath(db);
  final File[] files=path.listFiles();
  if (!path.exists() || files == null)   return false;
  for (  final File sub : files) {
    if (pat == null || sub.getName().matches(pat))     if (!sub.delete()) {
      return false;
    }
  }
  return pat != null || path.delete();
}
