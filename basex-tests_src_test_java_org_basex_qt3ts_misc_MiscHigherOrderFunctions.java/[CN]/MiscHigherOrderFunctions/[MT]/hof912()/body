{
  final XQuery query=new XQuery("\n" + "        declare function local:apply($fns as (function(xs:string) as xs:string)*, $s as xs:string) as xs:string* \n" + "        { for $f in $fns return $f($s) };\n"+ "        let $ops := (upper-case#1, lower-case#1, function($x){translate($x, 'e', 'i')}, \n"+ "            substring-before(?, ' ', ?)) \n"+ "        return string-join(local:apply($ops, 'Michael Kay'), '~')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
