{
  final XQuery query=new XQuery("\n" + "      declare function local:case($x as xs:boolean) as function(*) \n" + "      \t{ if ($x) then fn:upper-case#1 else fn:lower-case#1 }; \n"+ "      local:case(true())(\"Mike\"), local:case(false())(\"Mike\")\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"MIKE mike"));
}
