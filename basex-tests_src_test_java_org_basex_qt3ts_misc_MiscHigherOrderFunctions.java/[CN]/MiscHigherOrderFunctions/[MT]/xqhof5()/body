{
  final XQuery query=new XQuery("\n" + "         let $a := string-join(?, \"\")\n" + "         return $a((\"foo\", \"bar\", \"baz\"))\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("\"foobarbaz\""));
}
