{
  final XQuery query=new XQuery("\n" + "      declare function local:splitter() as (function(xs:string) as xs:string*) { function($x as xs:string) { tokenize($x, '\\s') } }; \n" + "      string-join(local:splitter()(\"A nice cup of tea\"), '|')\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"A|nice|cup|of|tea"));
}
