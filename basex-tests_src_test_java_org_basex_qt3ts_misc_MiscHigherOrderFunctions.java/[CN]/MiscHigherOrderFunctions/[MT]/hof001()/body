{
  final XQuery query=new XQuery("\n" + "        declare function local:f($x as xs:integer) as xs:integer { $x + 1 }; \n" + "        let $f := local:f#1 return $f(2)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("3"));
}
