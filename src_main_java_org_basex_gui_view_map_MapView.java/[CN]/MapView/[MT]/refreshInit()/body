{
  if (painter != null)   painter.close();
  painter=null;
  mainRects=null;
  focused=null;
  textLen=null;
  zoomStep=0;
  final Data data=gui.context.data;
  final GUIProp gprop=gui.gprop;
  if (data != null && visible()) {
    painter=new MapDefault(this,gprop);
    mainMap=createImage();
    zoomMap=createImage();
    refreshLayout();
  }
}
