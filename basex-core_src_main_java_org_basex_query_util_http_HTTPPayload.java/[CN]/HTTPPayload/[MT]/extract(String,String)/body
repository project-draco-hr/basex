{
  final BufferedInputStream bis=new BufferedInputStream(in);
  try {
    final ByteList bl=new ByteList();
    for (int i; (i=bis.read()) != -1; )     bl.add(i);
    if (isXML(ctype) || isText(ctype))     return new TextInput(new IOContent(bl.toArray())).encoding(ce).content();
    return bl.toArray();
  }
  finally {
    bis.close();
  }
}
