{
  final ByteList bl=new ByteList();
  for (int b; (b=in.read()) != -1; ) {
    while (b == '\r') {
      b=in.read();
      if (b == '\n')       return bl.toArray();
      bl.add('\r');
      if (b == -1)       return bl.toArray();
    }
    bl.add(b);
  }
  return bl.isEmpty() ? null : bl.toArray();
}
