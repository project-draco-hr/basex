{
  final XQuery query=new XQuery("for $i in 1 to 7 return let $d2 := $d + xs:dayTimeDuration('P1D')*$i return\n" + "         format-date($d2, '[Fn]', 'en', (), ()) ",ctx);
  try {
    query.bind("d",new XQuery("xs:date('2003-12-07')",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(true,"\n             monday tuesday wednesday thursday friday saturday sunday\n         "));
}
