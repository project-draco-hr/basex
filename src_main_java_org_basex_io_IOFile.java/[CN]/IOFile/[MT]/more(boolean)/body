      }
      if (isArchive()) {
        is=new ZipInputStream(new FileInputStream(file)){
          @Override public void close() throws IOException {
            if (zip == null)             super.close();
          }
        }
;
      }
    }
    if (is != null) {
      if (is instanceof ZipInputStream && moreZIP())       return true;
      is.close();
      is=null;
      return false;
    }
  }
  return super.more(archives);
}
