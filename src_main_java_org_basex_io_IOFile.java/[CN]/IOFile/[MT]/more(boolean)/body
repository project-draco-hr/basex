{
  if (archives) {
    if (is == null) {
      if (path.toLowerCase(Locale.ENGLISH).endsWith(GZSUFFIX)) {
        is=new GZIPInputStream(new FileInputStream(file));
        init(name + XMLSUFFIX);
        len=-1;
