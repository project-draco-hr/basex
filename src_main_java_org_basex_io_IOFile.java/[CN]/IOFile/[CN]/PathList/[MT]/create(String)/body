{
  final TokenBuilder tb=new TokenBuilder();
  final int l=path.length();
  for (int i=0; i < l; ++i) {
    final char ch=path.charAt(i);
    if (ch == '\\' || ch == '/')     add(tb);
 else     tb.add(ch);
  }
  add(tb);
  for (int s=0; s < size; ++s) {
    if (s != 0 || path.startsWith("/"))     tb.add('/');
    tb.add(list[s]);
  }
  return tb.toString();
}
