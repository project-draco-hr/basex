{
  final XQuery query=new XQuery("for $i in (1, 2, current-time())[1] where fn:boolean($i treat as xs:integer) return true()",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(true));
}
