{
  if (dunit == null)   return true;
  int l=-1;
  for (int i=0; i < size; i++) {
    boolean o=false;
    for (int j=0; j < pos[i].size; j++) {
      final int p=calcPosition(pos[i].get(j),dunit);
      final int d=Math.abs(p - l) - 1;
      if (i == 0 || (d >= mn && d <= mx)) {
        o=true;
        l=p;
        break;
      }
    }
    if (!o)     return false;
  }
  return true;
}
