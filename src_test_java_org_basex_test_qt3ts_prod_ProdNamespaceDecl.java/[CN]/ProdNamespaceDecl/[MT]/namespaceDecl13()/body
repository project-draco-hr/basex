{
  final XQuery query=new XQuery("declare namespace local = \"http://www.example.com/examples\"; let $var := <local:someElement>some context</local:someElement> return $var",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<local:someElement xmlns:local=\"http://www.example.com/examples\">some context</local:someElement>",false));
}
