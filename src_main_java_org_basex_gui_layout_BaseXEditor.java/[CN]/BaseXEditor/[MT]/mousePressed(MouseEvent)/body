{
  if (!isEnabled() || !isFocusable())   return;
  requestFocusInWindow();
  cursor(true);
  if (SwingUtilities.isMiddleMouseButton(e))   copy();
  if (SwingUtilities.isLeftMouseButton(e)) {
    final int c=e.getClickCount();
    if (c == 1) {
      rend.select(scroll.pos(),e.getPoint(),false);
    }
 else     if (c == 2) {
      text.selectWord();
    }
 else {
      text.selectLine();
    }
  }
 else   if (!text.marked()) {
    rend.select(scroll.pos(),e.getPoint(),false);
  }
}
