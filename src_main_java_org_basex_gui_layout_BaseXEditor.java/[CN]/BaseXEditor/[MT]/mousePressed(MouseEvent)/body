{
  super.mousePressed(e);
  if (!isEnabled() || !isFocusable())   return;
  requestFocusInWindow();
  cursor(true);
  if (!SwingUtilities.isLeftMouseButton(e))   return;
  final int c=e.getClickCount();
  if (c == 1) {
    rend.select(scroll.pos(),e.getPoint(),false);
  }
 else   if (c == 2) {
    selectWord();
  }
 else {
    selectLine();
  }
}
