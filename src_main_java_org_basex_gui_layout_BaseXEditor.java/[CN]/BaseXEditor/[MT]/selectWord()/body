{
  text.pos(text.cursor());
  final boolean ch=ftChar(text.prev(true));
  while (text.pos() > 0) {
    final int c=text.prev(true);
    if (c == '\n' || ch != ftChar(c))     break;
  }
  if (text.pos() != 0)   text.next(true);
  text.startMark();
  while (text.pos() < text.size()) {
    final int c=text.curr();
    if (c == '\n' || ch != ftChar(c))     break;
    text.next(true);
  }
  text.endMark();
}
