{
  final String path=stripLeadingSlash(p);
  final String dbpath=db + SEP + path;
  final Query q=s.query("declare variable $d as xs:string external; " + "declare variable $p as xs:string external; " + "count(db:list($d)[starts-with(., $p)])");
  q.bind("$d",dbpath);
  q.bind("$p",path);
  return parseInt(q.execute());
}
