{
  final XQuery query=new XQuery("(:*******************************************************:)\n" + "(: Test: K-XQueryComment-15                              :)\n" + "(: Written by: Frans Englich                             :)\n"+ "(: Date: 2007-11-22T11:31:22+01:00                       :)\n"+ "(: Purpose: A comment inside a comment that isn't terminated. :)\n"+ "(:*******************************************************:)\n"+ "1(: content (: this comment does not end :)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPST0003"));
}
