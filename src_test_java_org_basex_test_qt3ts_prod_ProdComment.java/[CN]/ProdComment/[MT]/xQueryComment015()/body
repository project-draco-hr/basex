{
  final XQuery query=new XQuery("(: Name: XQueryComment015 :)\n" + "(: Description: Incorrect comment syntax :)\n" + "\n"+ "\n"+ "(! Wrong syntax :)\n"+ "<empty/>",ctx);
  try {
    result=new QT3Result(query.value());
