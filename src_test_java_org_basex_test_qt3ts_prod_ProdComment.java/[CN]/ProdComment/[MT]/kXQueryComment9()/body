{
  final XQuery query=new XQuery("(:*******************************************************:)\n" + "(: Test: K-XQueryComment-9                               :)\n" + "(: Written by: Frans Englich                             :)\n"+ "(: Date: 2007-11-22T11:31:22+01:00                       :)\n"+ "(: Purpose: An empty comment inbetween the 'eq' operator and a number literal. :)\n"+ "(:*******************************************************:)\n"+ "1 eq (::)1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(true));
}
