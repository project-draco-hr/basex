{
  final XQuery query=new XQuery("(:*******************************************************:)\n" + "(: Test: K-XQueryComment-11                              :)\n" + "(: Written by: Frans Englich                             :)\n"+ "(: Date: 2007-11-22T11:31:22+01:00                       :)\n"+ "(: Purpose: An empty comment after a function's paranteses. :)\n"+ "(:*******************************************************:)\n"+ "true()(::)",ctx);
