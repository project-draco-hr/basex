{
  if (literals.length() > 0) {
    final String decoded=decode(literals.toString());
    final int n=decoded.length();
    for (int i=0; i < n; ++i) {
      final char c=decoded.charAt(i);
      if (isRegexChar(c))       result.append('\\');
      result.append(c);
    }
    literals.setLength(0);
  }
}
