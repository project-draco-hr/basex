{
  try {
    final String info;
    final ClientSession cs=login(user,pass);
    try {
      ClientQuery q=cs.query("declare variable $p as xs:string external; " + "db:info($p)");
      q.bind("$p",db);
      info=q.execute();
    }
  finally {
      cs.close();
    }
    final String timestamp="Time Stamp: ";
    final int p=info.indexOf(timestamp);
    if (p >= 0) {
      final String date=info.substring(p + timestamp.length(),info.indexOf(Text.NL,p));
      if (date.length() > 0)       return DATEFORMAT.parse(date);
    }
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  return null;
}
