{
  final TokenBuilder tb=new TokenBuilder();
  if (label != null)   tb.add(label);
  tb.add(value);
  final String info=tb.toString();
  if (ctx.listen != null || ctx.context.listener != null) {
    ctx.evalInfo(info);
    if (ctx.listen != null)     ctx.listen.info(info);
  }
 else {
    Util.errln(info);
  }
}
