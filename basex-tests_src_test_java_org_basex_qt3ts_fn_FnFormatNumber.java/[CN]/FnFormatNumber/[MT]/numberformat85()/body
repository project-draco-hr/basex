{
  final XQuery query=new XQuery("string-join((\n" + "                format-number(0, '#'),\n" + "                format-number(0.0, '#'),\n"+ "                format-number(0.0e0, '#'),\n"+ "                format-number(xs:float(0), '#')), '|')\n"+ "        \n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"0|0|0|0"));
}
