{
  final XQuery query=new XQuery("format-number(1234.567,'#*###*###!###','foo:decimal1')",ctx);
  try {
    query.namespace("foo","http://foo.ns");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"1*234!567"));
}
