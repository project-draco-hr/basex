{
  final DBNode n=(DBNode)node;
  final int par=n.pre + add;
  final Data d=n.data;
  final int pre=par + d.attSize(par,Data.ELEM);
  while (par + d.size(par,Data.ELEM) > pre) {
    d.delete(pre);
  }
  if (txt.length > 0) {
    final MemData md=new MemData(n.data);
    md.insertText(0,pre - par,txt,Data.TEXT);
    d.insert(pre,par,md);
  }
}
