{
  if (proc == null)   return;
  info.setText(proc.detail());
  final String header=proc.title();
  if (!header.equals(title)) {
    title=header;
    setTitle(header);
  }
  if (progress != null) {
    final int v=progress.getValue();
    final int nv=(int)(proc.progress() * ww);
    if (v != nv)     progress.setValue(nv);
  }
}
