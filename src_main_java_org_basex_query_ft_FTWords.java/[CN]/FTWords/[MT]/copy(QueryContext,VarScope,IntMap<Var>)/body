{
  final FTWords ftw=new FTWords(info,query.copy(ctx,scp,vs),mode,occ == null ? null : Arr.copyAll(ctx,scp,vs,occ));
  if (data != null)   ftw.data=data;
  if (ftt != null)   ftw.ftt=ftt.copy(ftw);
  if (matches != null)   ftw.matches=matches.copy();
  if (txt != null)   ftw.txt=txt.copy();
  ftw.first=first;
  ftw.tokNum=tokNum;
  ftw.fast=fast;
  return ftw;
}
