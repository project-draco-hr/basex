{
  final FTLexer intok=new FTLexer(ftt.opt);
  final FTTokens qtok=ftt.cache(lex.get());
  return new FTIndexIterator(){
    int pre=-1;
    int s;
    @Override public double score(){
      return -1;
    }
    @Override public int next(){
      return pre;
    }
    @Override public boolean more(){
      while (++pre < data.meta.size) {
        if (data.kind(pre) != Data.TEXT)         continue;
        intok.init(data.text(pre,true));
        all.reset(0);
        try {
          s=ftt.contains(qtok,intok);
          if (s != 0)           return true;
        }
 catch (        final QueryException ex) {
        }
      }
      return false;
    }
    @Override public FTMatches matches(){
      return all;
    }
    @Override public int indexSize(){
      return s;
    }
  }
;
}
