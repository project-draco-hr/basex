{
  final XQuery query=new XQuery("\n" + "         let $f := xs:ENTITIES#1\n" + "         return $f(($f(\"abcd\"), $f(\"defg\")))\n"+ "       ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
