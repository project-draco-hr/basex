{
  final XQuery query=new XQuery("\n" + "         \"a b c\" cast as xs:IDREFS\n" + "       ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertDeepEq("'a', 'b', 'c'") && assertType("xs:IDREF*")));
}
