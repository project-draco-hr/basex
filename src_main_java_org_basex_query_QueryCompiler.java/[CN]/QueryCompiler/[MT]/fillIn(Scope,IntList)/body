{
  curr.visit(new ASTVisitor(){
    @Override public boolean staticVar(    final StaticVar var){
      return add(var);
    }
    @Override public boolean funcCall(    final UserFuncCall call){
      return add(call.func());
    }
    @Override public boolean subScope(    final Scope sub){
      return sub.visit(this);
    }
    private boolean add(    final Scope var){
      for (int i=0; i < scopes.size(); i++) {
        if (scopes.get(i) == var) {
          if (!adj.contains(i))           adj.add(i);
          return true;
        }
      }
      adj.add(scopes.size());
      scopes.add(var);
      adjacent.add(null);
      return true;
    }
  }
);
}
