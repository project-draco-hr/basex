{
  final XQuery query=new XQuery("\n" + "        declare variable $x := $y + 3;\n" + "        declare variable $y := 17;\n"+ "        $x + 5\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("25"));
}
