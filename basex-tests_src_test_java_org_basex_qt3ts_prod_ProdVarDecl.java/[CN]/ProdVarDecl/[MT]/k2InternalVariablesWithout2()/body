{
  xquery10();
  final XQuery query=new XQuery("\n" + "        declare variable $local:myVar := local:myFunction(); \n" + "        declare function local:myFunction() { $local:myVar, 1, local:myFunction() }; \n"+ "        $local:myVar\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0054"));
}
