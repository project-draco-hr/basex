{
  final long start=checkItr(arg[1]);
  final long end=arg.length > 2 ? start + checkItr(arg[2]) : Long.MAX_VALUE;
  return new Iter(){
    long c=0;
    @Override public Item next() throws XQException {
      while (true) {
        final Item i=arg[0].next();
        if (i == null || ++c >= end)         return null;
        if (c >= start)         return i;
      }
    }
  }
;
}
