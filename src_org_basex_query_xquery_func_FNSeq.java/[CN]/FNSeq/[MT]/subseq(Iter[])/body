{
  final long s=Math.round(checkDbl(arg[1]));
  final long e=arg.length > 2 ? s + Math.round(checkDbl(arg[2])) : Long.MAX_VALUE;
  return new Iter(){
    long c=0;
    @Override public Item next() throws XQException {
      while (true) {
        final Item i=arg[0].next();
        if (i == null || ++c >= e)         return null;
        if (c >= s)         return i;
      }
    }
  }
;
}
