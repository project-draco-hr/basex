{
  final long pos=Math.max(1,checkItr(arg[1]));
  return new Iter(){
    long p=pos;
    boolean last;
    @Override public Item next() throws XQException {
      if (last)       return p > 0 ? arg[2].next() : null;
      boolean sub=p == 0 || --p == 0;
      final Item i=arg[sub ? 2 : 0].next();
      if (i != null)       return i;
      if (sub)       --p;
 else       last=true;
      return next();
    }
  }
;
}
