{
  final File[] ch=dir.listFiles();
  if (ch == null)   return;
  if (rec) {
    for (    final File f : ch) {
      if (f.isDirectory() && !mayBeLink(f))       list(root,f,list,rec,pat);
    }
  }
  for (  final File f : ch) {
    if (pat == null || pat.matcher(f.getName()).matches()) {
      list.add(f.getPath().substring(root));
    }
  }
}
