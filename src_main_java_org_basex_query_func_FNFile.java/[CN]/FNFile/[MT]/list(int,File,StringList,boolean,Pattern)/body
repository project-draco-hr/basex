{
  final File[] ch=dir.listFiles();
  if (ch == null)   return;
  if (rec) {
    for (    final File f : ch) {
      if (!mayBeLink(f) && f.isDirectory())       list(root,f,list,rec,pat);
    }
  }
  for (  final File f : ch) {
    if (pat == null || pat.matcher(f.getName()).matches() && !f.isDirectory())     list.add(f.getPath().substring(root));
  }
}
