{
  if (file.exists() && !file.isDirectory())   Err.or(input,FILEEXISTS,file.getName());
  if (recursive) {
    final File parent=getExistingParent(file);
    if (!parent.canWrite())     Err.or(input,MKDIR,file.getPath(),parent.getPath());
    if (!file.mkdirs())     Err.or(input,CANNOTMKDIR,file.getPath());
  }
 else {
    if (!file.mkdir())     Err.or(input,CANNOTMKDIR,file.getPath());
  }
  return null;
}
