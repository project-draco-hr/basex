{
  final boolean append=expr.length == 4 && checkType(expr[3].item(ctx,input),Type.BLN).bool(input);
  if (!append && file.exists())   FILEEXISTS.thrw(input,file.getPath());
  final Iter ir=expr[1].iter(ctx);
  try {
    final PrintOutput out=new PrintOutput(file.getPath());
    try {
      final XMLSerializer xml=new XMLSerializer(out,FNGen.serialPar(this,2,ctx));
      Item it;
      while ((it=ir.next()) != null)       it.serialize(xml);
      xml.close();
    }
  finally {
      out.close();
    }
  }
 catch (  final IOException e) {
    FILEWRITE.thrw(input,file.getName());
  }
  return null;
}
