{
  final boolean recursive=expr.length == 2 && checkType(expr[1].item(ctx,input),Type.BLN).bool(input);
  if (file.exists() && !file.isDirectory())   FILEEXISTS.thrw(input,file.getName());
  if (recursive) {
    final File parent=getExistingParent(file);
    if (!parent.canWrite())     MKDIR.thrw(input,file.getPath(),parent.getPath());
    if (!file.mkdirs())     CANNOTMKDIR.thrw(input,file.getPath());
  }
 else {
    if (!file.mkdir())     CANNOTMKDIR.thrw(input,file.getPath());
  }
  return null;
}
