{
  final int s=size;
  final int cl=chars.length;
  final int l=cp <= 0x7F ? 1 : cp <= 0x7FF ? 2 : cp <= 0xFFF ? 3 : 4;
  if (s + l > cl) {
    final int ns=Math.max(s + l,(int)(cl * Array.RESIZE));
    chars=Arrays.copyOf(chars,ns);
  }
  Array.move(chars,pos,l,size - pos);
  size=pos;
  add(cp);
  size=s + l;
  return this;
}
