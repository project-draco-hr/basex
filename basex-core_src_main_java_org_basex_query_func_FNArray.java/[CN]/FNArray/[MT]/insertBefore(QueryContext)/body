{
  final Array array=array(0,qc);
  final int s=checkIndex(array,checkItr(exprs[1],qc),true);
  final Value ins=qc.value(exprs[2]);
  final int as=array.arraySize();
  final ValueList vl=new ValueList(as + 1);
  for (int a=0; a < as; a++) {
    if (a == s)     vl.add(ins);
    vl.add(array.get(a));
  }
  if (s == as)   vl.add(ins);
  return vl.array();
}
