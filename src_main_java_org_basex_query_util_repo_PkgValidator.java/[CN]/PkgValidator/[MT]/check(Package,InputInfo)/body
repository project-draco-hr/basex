{
  if (pkg.uri == null)   PKGDESCINV.thrw(ii,Util.info(MISSATTR,"name"));
 else   if (pkg.abbrev == null)   PKGDESCINV.thrw(ii,Util.info(MISSATTR,"abbrev"));
 else   if (pkg.version == null)   PKGDESCINV.thrw(ii,Util.info(MISSATTR,"version"));
 else   if (pkg.spec == null)   PKGDESCINV.thrw(ii,Util.info(MISSATTR,"spec"));
  if (context.repo.pkgDict.get(pkg.getName()) != null)   PKGINSTALLED.thrw(ii);
  checkDepends(pkg,ii);
  checkComps(pkg,ii);
}
