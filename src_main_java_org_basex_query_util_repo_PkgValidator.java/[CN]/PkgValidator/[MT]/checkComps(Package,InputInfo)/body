{
  for (  final Component comp : pkg.comps) {
    if (comp.namespace == null)     PKGDESCINV.thrw(ii,Util.info(MISSCOMP,"namespace"));
 else     if (comp.file == null)     PKGDESCINV.thrw(ii,Util.info(MISSCOMP,"file"));
    if (isInstalled(comp,pkg.uri,ii))     MODISTALLED.thrw(ii,comp.getName());
  }
}
