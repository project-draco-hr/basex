{
  if (Arrays.equals(pos,ps))   return;
  final int psl=ps.length;
  final int pol=pos.length;
  final int[] ts=new int[psl + pol];
  for (int i=0, si=0, oi=0; i < ts.length; i++) {
    final boolean s=si == psl || oi < pol && pos[oi] < ps[si];
    ts[i]=s ? pos[oi++] : ps[si++];
  }
  pos=ts;
  int x=-1;
  for (  final int i : pos) {
    sorted=sorted && i >= x;
    x=i;
    if (!sorted)     break;
  }
}
