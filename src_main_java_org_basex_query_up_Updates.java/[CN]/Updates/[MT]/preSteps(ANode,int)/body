{
  if (node.id == trgID)   return 0;
  int s=1;
  ANode n;
  AxisIter it=node.attributes();
  while ((n=it.next()) != null) {
    final int st=preSteps(n,trgID);
    if (st == 0)     return s;
    s+=st;
  }
  it=node.children();
  while ((n=it.next()) != null && n.id <= trgID) {
    s+=preSteps(n,trgID);
  }
  return s;
}
