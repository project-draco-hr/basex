{
  final XQuery query=new XQuery("<new xmlns:foo=\"http://www.example.com\">{//*:child1}</new>",ctx);
  try {
    query.context(node(file("prod/DirElemContent.namespace/inscope.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<new xmlns:foo=\"http://www.example.com\"><child1 xmlns:foo=\"http://www.example.com/parent1\" attr=\"child\"/></new>",false));
}
