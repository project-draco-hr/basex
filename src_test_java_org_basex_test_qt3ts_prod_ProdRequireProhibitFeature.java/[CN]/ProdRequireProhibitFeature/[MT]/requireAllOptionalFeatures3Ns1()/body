{
  final XQuery query=new XQuery("\n" + "      declare option prohibit-feature \"higher-order-function\";\n" + "      declare option require-feature \"all-optional-features\";\n"+ "      1 instance of function(*)\n"+ "    ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0120"));
}
