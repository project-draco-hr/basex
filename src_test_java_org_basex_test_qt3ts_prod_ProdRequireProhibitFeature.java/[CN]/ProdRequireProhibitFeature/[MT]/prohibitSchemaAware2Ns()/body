{
  final XQuery query=new XQuery("\n" + "    declare option prohibit-feature \"schema-aware\";\n" + "    (validate lax { <element\n"+ "                         xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\"\n"+ "                         xmlns:xs=\"http://www.w3.org/2001/XMLSchema\"\n"+ "                         xsi:type=\"xs:integer\">42</element> }) instance of element(*, xs:integer)\n"+ "      \n"+ "    ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0075"));
}
