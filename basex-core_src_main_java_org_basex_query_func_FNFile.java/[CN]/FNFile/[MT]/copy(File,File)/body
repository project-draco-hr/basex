{
  if (src.isDirectory()) {
    if (!trg.mkdir())     FILE_CREATE.thrw(info,trg);
    final File[] files=src.listFiles();
    if (files == null)     FILE_LIST.thrw(info,src);
    for (    final File f : files)     copy(f,new File(trg,f.getName()));
  }
 else {
    new IOFile(src).copyTo(new IOFile(trg));
  }
}
