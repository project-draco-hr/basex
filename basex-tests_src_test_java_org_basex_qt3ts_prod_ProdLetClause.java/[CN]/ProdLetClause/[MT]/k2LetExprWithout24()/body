{
  final XQuery query=new XQuery("declare function local:function() { let $b := (i/a) return 1 }; local:function()",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertEq("1") || error("XPDY0002")));
}
