{
  if (edit) {
    if (showLines) {
      final int lx=offset - OFFSET * 3 / 2;
      g.setColor(GUIConstants.lgray);
      g.drawLine(lx,0,lx,height);
    }
    if (margin != -1) {
      final int lx=offset + fontWidth(g,' ') * margin;
      g.setColor(GUIConstants.lgray);
      g.drawLine(lx,0,lx,height);
    }
  }
}
