{
  int y=yy;
  if (content.length() != 0) {
    if (my < y) {
      g.setFont(bfont);
      int x=8;
      x+=BaseXLayout.chopString(g,Token.token(header),x,y,w - bw - 8);
      g.setFont(font);
      BaseXLayout.chopString(g,Token.token(content),x,y,w - bw - x- 8);
    }
    y+=fh * 2;
  }
  return y;
}
