{
  final int l=stat.size();
  if (l == 0)   return;
  focus=-1;
  if (e.getY() < h) {
    for (int i=0; i < l; i++) {
      final int bx=w - bw + bs * i;
      if (e.getX() >= bx && e.getX() < bx + bs)       focus=i;
    }
  }
  final int runs=gui.context.prop.num(Prop.RUNS);
  final int f=focus == -1 ? l - 1 : focus;
  timer.setText(f == -1 ? "" : " " + strings.get(f) + ": "+ Performance.getTimer(stat.get(f) * 10000L * runs,runs));
  repaint();
}
