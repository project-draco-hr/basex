{
  final int l=stat.size;
  if (l == 0)   return;
  focus=-1;
  final int x=e.getX();
  final int y=e.getY();
  for (int i=0; i < l; i++) {
    final int bx=w - bw + bs * i;
    if (x >= bx && x < bx + bs)     focus=i;
  }
  final boolean f=hy - sy > h && x >= w - bw - 30 && x < w - bw - 10 && y >= h - (sy < 0 ? 40 : 20) && y < h - (hy > h ? 0 : 20);
  GUI.get().setCursor(f ? CURSORHAND : CURSORARROW);
  repaint();
}
