{
  super.mousePressed(e);
  if (hy - sy <= h)   return;
  final int x=e.getX();
  final int y=e.getY();
  if (hy - sy > h && x >= w - bw - 30 && x < w - bw - 10 && y >= h - (sy < 0 ? 40 : 20) && y < h - (hy > h ? 0 : 20)) {
    if (y < h - 20) {
      down=true;
      new Thread(this).start();
    }
 else {
      up=true;
      new Thread(this).start();
    }
  }
}
