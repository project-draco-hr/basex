{
  super(path,ta);
  final ParserProp props=new ParserProp(prop.get(Prop.PARSEROPT));
  row=props.is(ParserProp.HEADER) ? 0 : 1;
  String s=props.get(ParserProp.SEPARATOR).toLowerCase();
  separator=s.equals("comma") ? ',' : s.equals("semicolon") ? ';' : s.equals("tab") ? '\t' : -1;
  if (separator == -1)   throw new IOException(Util.info(SETVAL,ParserProp.SEPARATOR[0],s));
  s=props.get(ParserProp.FORMAT).toLowerCase();
  simple=s.equals("simple");
  if (!simple && !s.equals("verbose"))   throw new IOException(Util.info(SETVAL,ParserProp.FORMAT[0],s));
}
