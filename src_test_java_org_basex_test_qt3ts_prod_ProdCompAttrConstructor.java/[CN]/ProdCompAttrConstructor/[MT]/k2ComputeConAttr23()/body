{
  final XQuery query=new XQuery("declare variable $myVar := (<elem/>, attribute name {\"content\"}); <b> {$myVar[2]} </b>",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<b name=\"content\"/>",false));
}
