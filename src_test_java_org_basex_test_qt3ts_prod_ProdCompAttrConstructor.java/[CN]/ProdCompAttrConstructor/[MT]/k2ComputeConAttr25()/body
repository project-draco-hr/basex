{
  final XQuery query=new XQuery("declare function local:myFunc($recurse as xs:integer) { attribute {concat(\"name\", $recurse)} {\"content\"} , if ($recurse = 0) then () else local:myFunc($recurse - 1) }; <b> {local:myFunc(2)} {attribute name {\"content\"}} </b>",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<b name2=\"content\" name1=\"content\" name0=\"content\" name=\"content\"/>",false));
}
