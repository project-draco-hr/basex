{
  final int l=text.length;
  int i=0;
  while (i < l) {
    int cl=cl2(text[i]);
    if (cl <= 0 || cl > l - i++)     return false;
    if (l == i)     return true;
    final byte b=text[i];
    if (b >= 0 && b < ' ' && !ws(b))     return false;
    while (--cl > 0)     if (cl2(text[i++]) != 0)     return false;
  }
  return true;
}
