{
  final XQuery query=new XQuery("\n" + "         declare namespace opts = \"http://www.w3.org/2011/xquery-options\";\n" + "         declare %opts:x function local:foo() {\n"+ "            \"bar\"\n"+ "         };\n"+ "         local:foo()\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(error("XQST0045"));
}
