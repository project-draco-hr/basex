{
  final XQuery query=new XQuery("\n" + "         declare namespace opts = \"http://www.w3.org/2012/xquery\";\n" + "         declare %opts:x function local:foo() {\n"+ "            \"bar\"\n"+ "         };\n"+ "         local:foo()\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0045"));
}
