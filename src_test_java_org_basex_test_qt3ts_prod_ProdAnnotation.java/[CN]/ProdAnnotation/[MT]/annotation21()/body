{
  final XQuery query=new XQuery("\n" + "         declare %fn:x function local:foo() {\n" + "            \"bar\"\n"+ "         };\n"+ "         local:foo()\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0045"));
}
