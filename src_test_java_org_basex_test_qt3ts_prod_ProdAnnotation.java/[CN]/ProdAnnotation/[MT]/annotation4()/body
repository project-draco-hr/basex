{
  final XQuery query=new XQuery("\n" + "         declare namespace java = \"http://example.com\";\n" + "\n"+ "         declare %java:variable(\"java.lang.Integer.MAX_VALUE\") variable $max := 0;\n"+ "\n"+ "         declare %java:method(\"java.lang.Math.sin\") function local:sin($arg) { 0 }; \n"+ "\n"+ "         local:sin($max)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("0",false));
}
