{
  final XQuery query=new XQuery("\n" + "         declare namespace opts = \"http://www.w3.org/2012/xquery\";\n" + "         () instance of %opts:x function(*) \n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0045"));
}
