{
  final XQuery query=new XQuery("let $var := (100+200) div 10 return ($var cast as xs:integer treat as xs:integer) + 10",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("40"));
}
