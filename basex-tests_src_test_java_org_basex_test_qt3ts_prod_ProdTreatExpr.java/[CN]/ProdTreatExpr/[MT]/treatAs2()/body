{
  final XQuery query=new XQuery("let $var := \"String 1\" return fn:concat($var treat as xs:string,\"String 2\")",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"String 1String 2"));
}
