{
  final XQuery query=new XQuery("format-number(12.34, '0.000,00', concat(if (current-date() lt xs:date('1900-01-01')) then ' a' else ' b', ':one '))",ctx);
  try {
    query.namespace("a","http://a.ns/");
    query.namespace("b","http://b.ns/");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"0.012,34"));
}
