{
  final XQuery query=new XQuery("\n" + "      \tdeclare function local:tag($arg) as element() { element { 'tag' } { $arg } }; \n" + "      \t<element> { comment { 'comment', local:tag('--') } } </element>\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQDY0072"));
}
