{
  int costs=0;
  final ExprList ex=new ExprList(exprs.length);
  for (  final Expr expr : exprs) {
    if (!expr.indexAccessible(ii) || ii.seq)     return false;
    if (ii.costs == 0)     continue;
    costs+=ii.costs;
    ex.add(ii.expr);
  }
  ii.costs=costs;
  ii.expr=ex.size() == 1 ? ex.get(0) : new Union(info,ex.finish());
  return true;
}
