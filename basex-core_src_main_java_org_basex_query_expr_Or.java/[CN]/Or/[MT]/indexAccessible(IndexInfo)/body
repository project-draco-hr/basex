{
  int costs=0;
  final ExprList el=new ExprList(exprs.length);
  for (  final Expr expr : exprs) {
    if (!expr.indexAccessible(ii))     return false;
    if (ii.costs == 0)     continue;
    costs+=ii.costs;
    el.add(ii.expr);
  }
  ii.costs=costs;
  ii.expr=el.size() == 1 ? el.get(0) : new Union(info,el.array());
  return true;
}
