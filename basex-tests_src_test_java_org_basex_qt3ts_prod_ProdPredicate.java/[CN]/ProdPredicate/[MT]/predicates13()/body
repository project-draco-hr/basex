{
  final XQuery query=new XQuery("(/root/boolean[xs:boolean(.) = fn:true()])",ctx);
  try {
    query.context(node(file("docs/atomicns.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<boolean>true</boolean>",false));
}
