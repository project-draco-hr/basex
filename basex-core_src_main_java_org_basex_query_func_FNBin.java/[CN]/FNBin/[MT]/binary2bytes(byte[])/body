{
  final int bl=bytes.length;
  final int r=bl & 7, l=8 - r & 7, s=bl + 7 >>> 3;
  final byte[] tmp=new byte[s];
  for (int i=0; i < bl; i++) {
    final byte b=bytes[i];
    if (b == '1') {
      tmp[l + i >>> 3]|=0x80 >>> (i - r & 7);
    }
 else     if (b != '0') {
      throw BIN_NNC.thrw(info);
    }
  }
  return tmp;
}
