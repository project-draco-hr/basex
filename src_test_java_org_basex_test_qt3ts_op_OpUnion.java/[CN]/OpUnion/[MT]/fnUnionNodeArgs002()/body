{
  final XQuery query=new XQuery("(/bib/book/title | /bib/book)/local-name()",ctx);
  try {
    query.context(node(file("op/union/bib2.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"book title book title book title book title"));
}
