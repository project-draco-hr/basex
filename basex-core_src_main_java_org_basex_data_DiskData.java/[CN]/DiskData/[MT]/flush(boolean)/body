{
  try {
    table.flush(all);
    if (all) {
      write();
      texts.flush();
      values.flush();
      if (textIndex != null)       textIndex.flush();
      if (attrIndex != null)       attrIndex.flush();
      if (attrTokenIndex != null)       attrTokenIndex.flush();
    }
  }
 catch (  final IOException ex) {
    Util.stack(ex);
  }
}
