{
  for (  final String d : DAYS)   if (consume(d))   break;
  consume(',');
  if (!skipWs())   throw error("whitespace");
  if (datespec()) {
    if (!skipWs())     throw error("whitespace");
    if (!time())     throw error("time");
  }
 else   if (!asctime()) {
    throw error("day, or name of month");
  }
  if (more())   throw error("end of input");
}
