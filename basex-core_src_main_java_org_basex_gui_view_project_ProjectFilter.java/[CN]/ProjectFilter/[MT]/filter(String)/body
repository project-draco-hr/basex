{
  final int thread=++threadID;
  while (running) {
    Thread.yield();
    if (threadID != thread)     return;
  }
  running=true;
  setCursor(CURSORWAIT);
  init();
  final TreeSet<String> files=filter(pattern,thread);
  if (files != null)   project.list.addElements(files);
  setCursor(CURSORARROW);
  running=false;
}
