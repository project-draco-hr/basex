{
  final int il=input.length, pl=pattern.length;
  int p=0;
  for (int i=off; i < il && p < pl; i++) {
    final byte ic=input[i];
    final byte pc=pattern[p];
    if (pc == ic || pc > 0x61 && pc < 0x7a && pc == (ic | 0x20) || (pc == '/' || pc == '\\') && (ic == '/' || ic == '\\'))     p++;
  }
  return p == pl;
}
