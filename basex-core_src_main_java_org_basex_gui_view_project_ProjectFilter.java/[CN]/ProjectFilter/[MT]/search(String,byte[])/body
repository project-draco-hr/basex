{
  final int cl=cont.length;
  if (cl == 0)   return true;
  BufferInput bi=null;
  try {
    bi=new BufferInput(new IOFile(path));
    for (int c=0, b=0; (b=bi.read()) != -1; ) {
      if (b == cont[c]) {
        c++;
        if (c == cl)         return true;
      }
 else {
        c=0;
      }
    }
  }
 catch (  final IOException ex) {
    Util.errln(ex);
  }
 finally {
    if (bi != null)     try {
      bi.close();
    }
 catch (    final IOException ignored) {
    }
  }
  return false;
}
