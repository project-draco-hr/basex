{
  final String string=ea.searchString();
  if (string != null) {
    contents.requestFocusInWindow();
    contents.setText(string);
    if (ea.opened()) {
      final String name=ea.file().name();
      final int i=name.lastIndexOf('.');
      final String pattern=files.getText();
      if (i != -1 && (!pattern.contains("*") && !pattern.contains("?")) || !Pattern.compile(IOFile.regex(pattern)).matcher(name).matches()) {
        files.setText("*" + name.substring(i));
      }
    }
    refresh(false);
  }
 else {
    files.requestFocusInWindow();
  }
}
