{
  final int al=ai.length, bl=bi.length;
  final IntList c=new IntList();
  int a=0, b=0;
  while (a != al && b != bl) {
    final int d=ai[a] - bi[b];
    c.add(d <= 0 ? ai[a++] : bi[b++]);
    if (d == 0)     b++;
  }
  while (a != al)   c.add(ai[a++]);
  while (b != bl)   c.add(bi[b++]);
  return c.finish();
}
