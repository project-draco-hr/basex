{
  if (type != Kind.CAT) {
    final double range=max - min;
    if (range == 0) {
      nrCaptions=3;
      captionStep=0;
      return;
    }
    captionStep=calculatedCaptionStep;
    nrCaptions=(int)(range / captionStep) + 1;
    if (nrCaptions * ScatterView.itemSize(false) * 2 > space) {
      captionStep*=2;
      nrCaptions=(int)(range / captionStep) + 1;
    }
  }
 else {
    nrCaptions=nrCats;
  }
}
