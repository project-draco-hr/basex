{
  if (numeric) {
    final int range=(int)(max - min);
    captionStep=calculatedCaptionStep;
    nrCaptions=(int)(range / captionStep) + 1;
    if (nrCaptions * ScatterView.CAPTIONWHITESPACE > space) {
      captionStep*=2;
      nrCaptions=(int)(range / captionStep) + 1;
    }
  }
 else {
    nrCaptions=nrCats;
  }
}
