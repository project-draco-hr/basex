{
  int k=kind(pre);
  final int s=size(pre,k);
  int par=pre;
  if (k == ATTR) {
    par=parent(par,ATTR);
    attSize(par,ELEM,attSize(par,ELEM) - 1);
    size(par,ELEM,size(par,ELEM) - 1);
  }
  while (par > 0) {
    k=kind(par);
    if (k == DOC)     break;
    par=parent(par,k);
    size(par,k,size(par,k) - s);
  }
  table.delete(pre,s);
  size-=s;
  updateDist(pre,-s);
}
