{
  final Language lang=ln != null ? ln : Language.DEFAULT;
  boolean supp=false;
  for (  final Tokenizer t : Tokenizer.IMPL) {
    if (t.supports(lang)) {
      supp=true;
      break;
    }
  }
  if (supp && is(ST) && sd == null) {
    supp=false;
    for (    final Stemmer s : Stemmer.IMPL) {
      if (s.supports(lang)) {
        supp=true;
        break;
      }
    }
  }
  return supp;
}
