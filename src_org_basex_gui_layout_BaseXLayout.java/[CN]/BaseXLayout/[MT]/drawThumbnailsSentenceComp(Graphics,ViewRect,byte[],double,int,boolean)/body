{
  final int xx=r.x;
  final int ww=r.w;
  int yy=r.y + 3;
  int wl=0;
  int ll=0;
  final FTTokenizer ftt=new FTTokenizer(s);
  final Color textc=GUIConstants.COLORS[7];
  g.setColor(textc);
  int count=-1;
  int pp=0;
  int cs=0;
  IntList col;
  int cc;
  boolean m=ftt.more();
  while (m) {
    col=new IntList();
    cc=0;
    while (cs == ftt.sent && (r.pos == null || (pp < r.pos.length && count < r.pos[pp]) || pp == r.pos.length)) {
      wl+=(int)((ftt.p - ftt.s) * f);
      count++;
      if (draw && r.pos != null && pp < r.pos.length && count == r.pos[pp])       col.add(r.poi[pp++]);
      m=ftt.more();
      if (!m)       break;
    }
    cs++;
    int l=0;
    while (l < wl) {
      int tw=col.size == 0 ? wl : (wl / col.size) + 1;
      while (ll + tw > ww) {
        if (draw) {
          if (col.size > 0)           g.setColor(thumbnailcolor[col.list[cc]]);
          g.fillRect(xx + ll,yy,ww - ll,fh);
        }
        l+=ww - ll;
        tw-=ww - ll;
        ll=0;
        yy+=fh + 1;
        if (yy + 3 >= r.y + r.h)         return yy - r.y;
      }
      if (draw) {
        if (col.size > 0)         g.setColor(thumbnailcolor[col.list[cc]]);
        g.fillRect(xx + ll,yy,tw,fh);
        g.setColor(textc);
      }
      ll+=tw;
      l+=tw;
      if (col.size > 0)       cc++;
    }
    wl=0;
  }
  return yy - r.y;
}
