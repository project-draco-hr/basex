{
  if (l == null)   return;
  c.addKeyListener(new KeyAdapter(){
    @Override public void keyPressed(    final KeyEvent e){
      if (e.getKeyCode() == KeyEvent.VK_ENTER) {
        if (!(e.getSource() instanceof BaseXButton))         l.close();
      }
 else       if (e.getKeyCode() == KeyEvent.VK_ESCAPE) {
        l.cancel();
      }
    }
  }
);
}
