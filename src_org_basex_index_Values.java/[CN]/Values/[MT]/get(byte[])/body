{
  int l=0, h=size - 1;
  while (l <= h) {
    int m=(l + h) >>> 1;
    final int pos=idxr.read4(m);
    idxl.readNum(pos);
    final int pre=idxl.readNum();
    final byte[] txt=text ? data.text(pre) : data.attValue(pre);
    int d=Token.diff(txt,key);
    if (d == 0)     return pos;
    if (d < 0)     l=m + 1;
 else     h=m - 1;
  }
  return 0;
}
