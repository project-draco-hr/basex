{
  return new Iter(){
    /** 
 * Iterator. 
 */
    Iter iter;
    @Override public Item next() throws QueryException {
      if (iter == null)       iter=ctx.iter(root);
      while (true) {
        ctx.checkStop();
        final Item it=iter.next();
        if (it == null)         return null;
        ctx.resource.value=it;
        if (preds(it,ctx))         return it;
      }
    }
  }
;
}
