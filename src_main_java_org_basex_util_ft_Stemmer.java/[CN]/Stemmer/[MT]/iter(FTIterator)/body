{
  return new FTIterator(){
    @Override public FTIterator init(    final byte[] txt){
      iter.init(txt);
      return this;
    }
    @Override public boolean hasNext(){
      return iter.hasNext();
    }
    @Override public Span next(){
      final Span s=iter.next();
      s.text=stem(s.text);
      return s;
    }
    @Override public byte[] nextToken(){
      return stem(iter.nextToken());
    }
  }
;
}
