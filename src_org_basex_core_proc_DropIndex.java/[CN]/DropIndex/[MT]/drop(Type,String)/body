{
  try {
    final Data data=context.data();
    data.flush();
    data.closeIndex(index);
    return DropDB.delete(data.meta.name,pat + "." + IO.BASEXSUFFIX,prop) ? info(DBDROP,perf.getTimer()) : error(DBDROPERR);
  }
 catch (  final IOException ex) {
    BaseX.debug(ex);
    return error(ex.getMessage());
  }
}
