{
  final XQuery query=new XQuery("declare namespace output = \"http://www.w3.org/2010/xslt-xquery-serialization\";\n" + "         (: An unsupported xml version which matches the VersionNum of XML Recommendation XML10 :)\n" + "         declare option output:version \"1.14159265\";\n"+ "         <result>ok</result>\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertSerialization("<result>ok</result>",false) || assertSerialError("SESU0013")));
}
