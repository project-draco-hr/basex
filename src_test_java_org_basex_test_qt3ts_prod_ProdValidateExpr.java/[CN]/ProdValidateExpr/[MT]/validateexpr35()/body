{
  final XQuery query=new XQuery("\n" + "        validate lax { <a xsi:type='xs:integer' xmlns:xs=\"http://www.w3.org/2001/XMLSchema\">42</a> }\n" + "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<a xsi:type='xs:integer' \n           xmlns:xs=\"http://www.w3.org/2001/XMLSchema\"\n           xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\">42</a>",false));
}
