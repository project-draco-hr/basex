{
  final boolean createDB=ctx.context.options.get(MainOptions.FORCECREATE);
  if (createDB && !openDB)   throw BXXQ_NEWDB.get(info);
  if (!ctx.context.user.has(Perm.READ))   throw BXXQ_PERM.get(info,Util.info(Text.PERM_REQUIRED_X,Perm.READ));
  final IO source=checkPath(input,baseIO,info);
  if (single && source.isDir())   WHICHRES.get(info,baseIO);
  try {
    final Data dt=createDB ? CreateDB.create(source,ctx.context) : CreateDB.mainMem(source,ctx.context);
    input.path="";
    addData(dt);
    return dt;
  }
 catch (  final IOException ex) {
    throw IOERR.get(info,ex);
  }
}
