{
  final XQuery query=new XQuery("for tumbling window $w in (1, 2, 3, 4) \n" + "      start at $s when fn:true()\n" + "      end at $e  when $s - $e eq 1\n"+ "      return $s",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertQuery("$result[1] instance of xs:integer"));
}
