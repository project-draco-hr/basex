{
  final XQuery query=new XQuery("\n" + "          for $i in 1 to 3\n" + "          count $r\n"+ "          for sliding window $w in (1 to 10)\n"+ "          start $s when true()\n"+ "          end $e when $e - $s eq 2\n"+ "          where $w = $r + 1\n"+ "          return <window num=\"{$r}\">{$w}</window>\n"+ "        ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<window num=\"1\">1 2 3</window><window num=\"1\">2 3 4</window><window num=\"2\">1 2 3</window><window num=\"2\">2 3 4</window><window num=\"2\">3 4 5</window><window num=\"3\">2 3 4</window><window num=\"3\">3 4 5</window><window num=\"3\">4 5 6</window>",false));
}
