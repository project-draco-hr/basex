{
  final TreeNode n=selection();
  if (n == null)   return;
  final InputDialog d=new InputDialog(BUTTONRENAME,n.completePath(),RENAMEAS);
  if (!d.ok())   return;
  DialogProgress.execute(dialog,"",new Rename(n.completePath(),d.input()));
  final TreeFolder par=(TreeFolder)n.getParent();
  if (par != null)   refreshFolder(par);
}
