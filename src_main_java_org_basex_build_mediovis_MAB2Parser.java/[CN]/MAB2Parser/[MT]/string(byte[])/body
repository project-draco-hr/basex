{
  final byte[] tmp=new byte[line.length - 4];
  int c=0;
  final int l=line.length;
  boolean space=false;
  for (int s=4; s < l; ++s) {
    byte b=line[s];
    if (b == -121)     b='+';
 else     if (b == -84)     b=' ';
 else     if (b == '<')     b='[';
 else     if (b == '>')     b=']';
    if (b == ' ' && (space || s == 4))     continue;
    space=b == ' ';
    tmp[c++]=b;
  }
  return c == tmp.length ? tmp : Arrays.copyOf(tmp,c);
}
