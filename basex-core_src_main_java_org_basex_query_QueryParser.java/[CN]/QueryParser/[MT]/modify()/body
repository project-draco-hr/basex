{
  final Expr e=comparison();
  if (e != null) {
    if (wsConsumeWs(UPDATE)) {
      final int s=openSubScope();
      final boolean u=ctx.updating;
      ctx.updating(false);
      final Expr m=check(single(),COPYEXPR);
      closeSubScope(s);
      ctx.updating=u;
      return new Modify(info(),e,m);
    }
  }
  return e;
}
