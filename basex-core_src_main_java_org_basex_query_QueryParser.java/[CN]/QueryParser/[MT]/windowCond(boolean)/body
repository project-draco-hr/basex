{
  skipWs();
  final InputInfo ii=info();
  final Var var=curr('$') ? localVars.add(varName(),null,false) : null, at=wsConsumeWs(AT) ? localVars.add(varName(),null,false) : null, prv=wsConsumeWs(PREVIOUS) ? localVars.add(varName(),null,false) : null, nxt=wsConsumeWs(NEXT) ? localVars.add(varName(),null,false) : null;
  wsCheck(WHEN);
  return new Condition(start,var,at,prv,nxt,check(single(),NOEXPR),ii);
}
