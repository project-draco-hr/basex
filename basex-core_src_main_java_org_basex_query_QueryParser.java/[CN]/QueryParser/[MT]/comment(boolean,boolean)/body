{
  while (++pos < length) {
    char curr=curr();
    if (curr == '(' && next() == ':') {
      ++pos;
      comment(true,doc);
      curr=curr();
    }
    if (curr == ':' && next() == ')') {
      pos+=2;
      if (!nested && moduleDoc.isEmpty()) {
        moduleDoc=currDoc.toString().trim();
        currDoc.setLength(0);
      }
      return;
    }
    if (doc)     currDoc.append(curr);
  }
  throw error(COMCLOSE);
}
