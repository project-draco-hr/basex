{
  Var[] args={};
  while (true) {
    skipWs();
    if (curr() != '$') {
      if (args.length == 0)       break;
      check('$');
    }
    final Var var=localVars.add(varName(),optAsType(),true);
    for (    final Var v : args)     if (v.name.eq(var.name))     throw error(FUNCDUPL_X,var);
    args=Array.add(args,new Var[args.length + 1],var);
    if (!consume(','))     break;
  }
  return args;
}
