{
  ++pos;
  final boolean doc=next() == '~';
  if (doc) {
    currDoc.setLength(0);
    ++pos;
  }
  while (++pos < length) {
    char curr=curr();
    if (curr == '(' && next() == ':') {
      comment();
      curr=curr();
    }
    if (curr == ':' && next() == ')') {
      pos+=2;
      if (moduleDoc.isEmpty()) {
        moduleDoc=currDoc.toString().trim();
        currDoc.setLength(0);
      }
      return;
    }
    if (doc)     currDoc.append(curr);
  }
  error(COMCLOSE);
}
