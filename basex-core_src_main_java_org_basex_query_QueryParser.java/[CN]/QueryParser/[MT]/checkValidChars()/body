{
  if (!more())   error(QUERYEMPTY);
  for (int i=0; i < length; ) {
    int cp=input.charAt(i);
    final boolean hs=cp >= Character.MIN_HIGH_SURROGATE;
    if (hs)     cp=input.codePointAt(i);
    if (!XMLToken.valid(cp)) {
      pos=i;
      error(QUERYINV,cp);
    }
    i+=hs ? Character.charCount(cp) : 1;
  }
}
