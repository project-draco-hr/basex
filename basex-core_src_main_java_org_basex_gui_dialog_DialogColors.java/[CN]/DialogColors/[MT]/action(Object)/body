{
  if (comp instanceof BaseXButton) {
    sliderRed.setValue(GUIOptions.COLORRED.value());
    sliderGreen.setValue(GUIOptions.COLORGREEN.value());
    sliderBlue.setValue(GUIOptions.COLORBLUE.value());
  }
  sliderRed.assign();
  sliderGreen.assign();
  sliderBlue.assign();
  gui.updateLayout();
}
