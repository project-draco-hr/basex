{
  Session s=null;
  try {
    s=session.login();
    s.execute(new CreateDB(dbname(newName)));
    return new BXDatabase(newName,session);
  }
 catch (  final Exception ex) {
    throw error(ex);
  }
 finally {
    try {
      if (s != null)       s.close();
    }
 catch (    final IOException e) {
      error(e);
    }
  }
}
