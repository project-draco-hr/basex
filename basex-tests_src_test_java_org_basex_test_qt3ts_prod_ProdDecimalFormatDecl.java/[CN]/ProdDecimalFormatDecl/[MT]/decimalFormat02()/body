{
  final XQuery query=new XQuery("\n" + "        declare default decimal-format digit=\"#\" grouping-separator=\",\" decimal-separator=\".\";\n" + "      \tformat-number(12792.14*96.58,'##,###,000.000###')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"1,235,464.8812"));
}
