{
  final XQuery query=new XQuery("\n" + "        declare default decimal-format  per-mille=\"m\";\n" + "        format-number(0.4857,'###.###m')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"485.7m"));
}
