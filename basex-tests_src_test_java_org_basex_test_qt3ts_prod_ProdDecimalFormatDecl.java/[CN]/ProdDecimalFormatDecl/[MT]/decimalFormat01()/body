{
  final XQuery query=new XQuery("\n" + "        declare default decimal-format zero-digit=\"0\" grouping-separator=\",\" decimal-separator=\".\";\n" + "      \tformat-number(2392.14*36.58,'000,000.000000')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"087,504.481200"));
}
