{
  final XQuery query=new XQuery("\n" + "        declare context item as xs:double external;\n" + "        declare context item as xs:integer := 15;\n"+ "        . = 17\n"+ "      ",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0099"));
}
