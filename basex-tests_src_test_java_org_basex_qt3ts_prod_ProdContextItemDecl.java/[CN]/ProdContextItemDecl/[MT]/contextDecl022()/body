{
  final XQuery query=new XQuery(" declare context item as xs:string := 2; . ",ctx);
  try {
    query.context(new XQuery("'London'",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((error("XPTY0004") || assertEq("'London'")));
}
