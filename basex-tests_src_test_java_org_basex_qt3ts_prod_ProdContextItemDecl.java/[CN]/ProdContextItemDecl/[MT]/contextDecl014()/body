{
  final XQuery query=new XQuery("\n" + "        declare variable $x := . + 5;\n" + "        declare context item := 17;\n"+ "        $x\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("22"));
}
