{
  final XQuery query=new XQuery("\n" + "        declare context item := <a id=\"qwerty\">bananas</a>;\n" + "        string-length(@id)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("6"));
}
