{
  final FTIter ir=expr[0].iter(ctx);
  return new FTIter(){
    @Override public FTItem next() throws QueryException {
      FTItem it;
      while ((it=ir.next()) != null) {
        if (filter(ctx,it,content() ? new FTLexer(it.atom(),ctx.context.prop) : null))         break;
      }
      return it;
    }
  }
;
}
