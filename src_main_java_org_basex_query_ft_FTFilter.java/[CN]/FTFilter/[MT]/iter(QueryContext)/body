{
  final FTIter ir=expr[0].iter(ctx);
  return new FTIter(){
    @Override public FTNode next() throws QueryException {
      FTNode it;
      while ((it=ir.next()) != null) {
        if (filter(ctx,it,content() ? new FTLexer().init(it.atom()) : null))         break;
      }
      return it;
    }
  }
;
}
