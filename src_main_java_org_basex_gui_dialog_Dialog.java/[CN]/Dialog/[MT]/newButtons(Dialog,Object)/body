{
  final BaseXBack panel=new BaseXBack(Fill.NONE).border(12,0,0,0).layout(new TableLayout(1,buttons.length,8,0));
  for (  final Object b : buttons) {
    panel.add(b instanceof Component ? (Component)b : new BaseXButton(b.toString(),dialog));
  }
  final BaseXBack but=new BaseXBack(Fill.NONE).layout(new BorderLayout());
  but.add(panel,BorderLayout.EAST);
  return but;
}
