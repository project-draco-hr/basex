{
  String[] filenames=pr.dbpath(db).list();
  final Date now=new Date();
  byte[] buf=new byte[1024];
  try {
    File zip=new File(pr.get(Prop.DBPATH) + Prop.SEP + db+ "-"+ DATE.format(now)+ "-"+ TIME.format(now)+ ".zip");
    ZipOutputStream out=new ZipOutputStream(new FileOutputStream(zip));
    for (    String file : filenames) {
      FileInputStream in=new FileInputStream(pr.dbpath(db) + Prop.SEP + file);
      out.putNextEntry(new ZipEntry(file));
      int len;
      while ((len=in.read(buf)) > 0) {
        out.write(buf,0,len);
      }
      out.closeEntry();
      in.close();
    }
    out.close();
    return true;
  }
 catch (  IOException e) {
    return false;
  }
}
