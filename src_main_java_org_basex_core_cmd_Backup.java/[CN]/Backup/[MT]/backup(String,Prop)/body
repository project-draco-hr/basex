{
  try {
    final File inFolder=pr.dbpath(db);
    final File outFile=new File(pr.get(Prop.DBPATH) + Prop.SEP + db+ "-"+ DATE.format(new Date())+ IO.ZIPSUFFIX);
    final byte[] data=new byte[IO.BLOCKSIZE];
    final ZipOutputStream zos=new ZipOutputStream(new BufferedOutputStream(new FileOutputStream(outFile)));
    for (    final File f : inFolder.listFiles()) {
      final BufferedInputStream bis=new BufferedInputStream(new FileInputStream(f),IO.BLOCKSIZE);
      zos.putNextEntry(new ZipEntry(inFolder.getName() + "/" + f.getName()));
      int c;
      while ((c=bis.read(data)) != -1)       zos.write(data,0,c);
      zos.closeEntry();
      bis.close();
    }
    zos.close();
    return true;
  }
 catch (  final IOException e) {
    return false;
  }
}
