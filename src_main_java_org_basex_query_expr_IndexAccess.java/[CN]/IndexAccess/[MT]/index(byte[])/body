{
  final Data data=ictx.data;
  final boolean text=ind == IndexType.TXT;
  final byte kind=text ? Data.TEXT : Data.ATTR;
  return term.length <= MAXLEN ? new Iter(){
    final IndexIterator ii=data.ids(new ValuesToken(ind,term));
    @Override public Item next(){
      return ii.more() ? new DBNode(data,ii.next(),kind) : null;
    }
  }
 : new Iter(){
    int pre=-1;
    @Override public Item next(){
      while (++pre != data.meta.size) {
        if (data.kind(pre) == kind && eq(data.text(pre,text),term))         return new DBNode(data,pre);
      }
      return null;
    }
  }
;
}
