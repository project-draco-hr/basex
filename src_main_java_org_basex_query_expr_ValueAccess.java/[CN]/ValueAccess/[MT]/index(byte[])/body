{
  final Data data=ictx.data;
  final IndexIterator ii=term.length <= data.meta.maxlen && (itype == IndexType.TEXT ? data.meta.textindex : data.meta.attrindex) ? data.iter(new ValuesToken(itype,term)) : scan(term);
  return new AxisIter(){
    final byte kind=itype == IndexType.TEXT ? Data.TEXT : Data.ATTR;
    final boolean mem=data.inMemory();
    @Override public ANode next(){
      while (ii.more()) {
        final int p=ii.next();
        if (!mem || data.kind(p) == kind)         return new DBNode(data,p,kind);
      }
      return null;
    }
  }
;
}
