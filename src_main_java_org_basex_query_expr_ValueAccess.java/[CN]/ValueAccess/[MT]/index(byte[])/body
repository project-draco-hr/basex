{
  final Data data=ictx.data;
  final IndexIterator ii=term.length <= data.meta.maxlen && (itype == IndexType.TEXT ? data.meta.textindex : data.meta.attrindex) ? data.iter(new StringToken(itype,term)) : scan(term);
  return new AxisIter(){
    final byte kind=itype == IndexType.TEXT ? Data.TEXT : Data.ATTR;
    @Override public ANode next(){
      return ii.more() ? new DBNode(data,ii.next(),kind) : null;
    }
  }
;
}
