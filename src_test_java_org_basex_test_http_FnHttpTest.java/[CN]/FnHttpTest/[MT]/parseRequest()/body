{
  final String req="<http:request " + "xmlns:http='http://expath.org/ns/http-client' " + "method='POST' href='http://basex.org'>"+ "<http:header name='hdr1' value='hdr1val'/>"+ "<http:header name='hdr2' value='hdr2val'/>"+ "<http:body media-type='text/xml'>"+ "Test body content"+ "</http:body>"+ "</http:request>";
  final DBNode dbNode=new DBNode(new IOContent(req),ctx.prop);
  final HTTPRequestParser rp=new HTTPRequestParser(null);
  final HTTPRequest r=rp.parse(dbNode.children().next(),null);
  assertEquals(2,r.attrs.size());
  assertEquals(2,r.headers.size());
  assertTrue(r.bodyContent.size() != 0);
  assertEquals(1,r.payloadAttrs.size());
}
