{
  final Value cv=ctx.value;
  ctx.value=null;
  final StaticContext s=ctx.sc;
  ctx.sc=sc;
  final Atts ns=ctx.sc.ns.reset();
  try {
    final Item it=expr.item(ctx,ii);
    return cast ? ret.cast(it,false,ctx,info,this) : it;
  }
  finally {
    ctx.sc.ns.stack(ns);
    ctx.sc=s;
    ctx.value=cv;
  }
}
