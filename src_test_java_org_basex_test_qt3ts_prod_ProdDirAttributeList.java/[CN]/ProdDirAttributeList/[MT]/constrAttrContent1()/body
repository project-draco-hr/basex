{
  final XQuery query=new XQuery("<elem attr=\"abxxyz123890!@#$%^*()[]\\|?/>:;\"/>",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertSerialization("<elem attr=\"abxxyz123890!@#$%^*()[]\\|?/&gt;:;\"/>",false) || assertSerialization("<elem attr=\"abxxyz123890!@#$%^*()[]\\|?/>:;\"/>",false)));
}
