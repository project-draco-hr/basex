{
  final XQuery query=new XQuery("declare namespace foo=\"http://www.w3.org/XQueryTest/Construct\"; <elem foo:attr=\"value\"/>",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<elem xmlns:foo=\"http://www.w3.org/XQueryTest/Construct\" foo:attr=\"value\"/>",false));
}
