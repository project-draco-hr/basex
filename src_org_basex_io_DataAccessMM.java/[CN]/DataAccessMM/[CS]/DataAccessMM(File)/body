{
  file=new RandomAccessFile(f,"rw");
  rwChannel=file.getChannel();
  len=file.length();
  if (len <= BUFFERSIZE) {
    mbytebuffer=rwChannel.map(FileChannel.MapMode.READ_WRITE,0,len);
    off=0;
  }
 else {
    mbytebuffer=rwChannel.map(FileChannel.MapMode.READ_WRITE,0,BUFFERSIZE);
  }
  mbytebuffer.force();
}
