{
  new Close().run(context);
  final QueryInput qi=new QueryInput(args[0]);
  qi.db=qi.io.dbname();
  final boolean create=context.user.has(Perm.CREATE);
  final Command cmd=progress(!create || mprop.dbpath(qi.db).exists() ? new Open(qi.db) : new CreateDB(qi.db,qi.io.exists() ? qi.original : null));
  final boolean ok=cmd.run(context);
  final String msg=cmd.info().trim();
  return ok ? info(msg) : error(msg);
}
