{
  final XQuery query=new XQuery("fn:root(document {<anElement><anInternalElement>element content</anInternalElement></anElement>})",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<anElement><anInternalElement>element content</anInternalElement></anElement>",false));
}
