{
  if (View.updating || !e.isControlDown())   return;
  final char key=e.getKeyChar();
  if (key == '+' || key == '-' || key == '=') {
    GUIProp.fontsize=Math.max(1,GUIProp.fontsize + (key == '-' ? -1 : 1));
    View.notifyLayout();
  }
 else   if (key == '0') {
    GUIProp.fontsize=12;
    View.notifyLayout();
  }
}
