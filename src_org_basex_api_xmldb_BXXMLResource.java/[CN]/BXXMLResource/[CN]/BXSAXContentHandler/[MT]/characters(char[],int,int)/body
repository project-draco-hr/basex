{
  for (int k=0; k < j; k++) {
    char c=ac[i + k];
switch (c) {
case 38:
      cont.append("&amp;");
    break;
case 60:
  cont.append("&lt;");
break;
case 62:
cont.append("&gt;");
break;
case 34:
cont.append("&quot;");
break;
case 39:
cont.append("&apos;");
break;
default :
if (c > '\177') cont.append("&#" + (int)c + ";");
 else cont.append(c);
break;
}
}
}
