{
  for (int k=0; k < j; k++) {
    char c=ac[i + k];
switch (c) {
case 38:
      xmlContent.append("&amp;");
    break;
case 60:
  xmlContent.append("&lt;");
break;
case 62:
xmlContent.append("&gt;");
break;
case 34:
xmlContent.append("&quot;");
break;
case 39:
xmlContent.append("&apos;");
break;
default :
if (c > '\177') xmlContent.append("&#" + (int)c + ";");
 else xmlContent.append(c);
break;
}
}
}
