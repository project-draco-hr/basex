{
  final String op="INSERTBEFORE";
  p(op);
  final String sec="<section><page/></section>";
  final String doc="<doc/>";
  final String db=DBNAME + op;
  try {
    new CreateDB(db,doc).execute(ctx);
    new XQuery("for $i in 1 to " + NRNODES + " return insert node "+ sec+ "into /doc").execute(ctx);
    p("DB created.");
    p("querying ...");
    new XQuery("for $page in //page " + "let $par := $page/parent::node()" + "return (delete node $page, insert node $page before $par)").execute(ctx);
    p("finished.");
    new DropDB(db).execute(ctx);
  }
 catch (  final BaseXException e) {
    e.printStackTrace();
  }
  p("insert finished.\n");
}
