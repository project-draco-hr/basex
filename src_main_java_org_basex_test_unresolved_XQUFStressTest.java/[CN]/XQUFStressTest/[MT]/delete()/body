{
  final String op="DELETE";
  p(op);
  final String db=DBNAME + op;
  try {
    new CreateDB(db,"<doc/>").execute(ctx);
    new XQuery("for $i in 1 to " + NRNODES + " return insert node <node/> into /doc").execute(ctx);
    p("DB created.");
    p("querying ...");
    new XQuery("delete nodes //node").execute(ctx);
    p("finished.");
    new DropDB(db).execute(ctx);
  }
 catch (  BaseXException e) {
    e.printStackTrace();
  }
  p("delete finished.\n");
}
