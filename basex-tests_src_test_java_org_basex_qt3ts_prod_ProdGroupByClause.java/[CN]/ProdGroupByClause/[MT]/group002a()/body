{
  final XQuery query=new XQuery(" \n" + "            for $x in //employee \n" + "            group by $key := $x/@gender \n"+ "            return concat($key, ':',  \n"+ "                   string-join(for $e in $x return $e/@name/string(), ',')) \n"+ "      ",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertPermutation("\n            \"female:Jane Doe 1,Jane Doe 3,Jane Doe 5,Jane Doe 7,Jane Doe 9,Jane Doe 11,Jane Doe 13\",\n            \"male:John Doe 2,John Doe 4,John Doe 6,John Doe 8,John Doe 10,John Doe 12\"\n         "));
}
