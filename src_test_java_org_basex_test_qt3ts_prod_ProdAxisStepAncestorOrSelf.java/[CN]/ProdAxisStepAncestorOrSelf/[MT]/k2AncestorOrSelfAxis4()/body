{
  final XQuery query=new XQuery("1, <!-- content -->/ancestor-or-self::node(), 1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("1<!-- content -->1",false));
}
