{
  final StringBuilder sb=new StringBuilder();
  boolean slash=false;
  for (int p=0; p < path.length(); p++) {
    final char c=path.charAt(p);
    if (c == '\\' || c == '/') {
      if (!slash && p != 0)       sb.append('/');
      slash=true;
    }
 else {
      if (Prop.WIN && ":*?\"<>\\|".indexOf(c) != -1)       return null;
      if (slash)       slash=false;
      sb.append(c);
    }
  }
  return sb.toString();
}
