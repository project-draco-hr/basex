{
  final boolean exists=pr.dbpath(db).exists();
  if (!exists || path.equals(db))   return exists;
  DataInput in=null;
  try {
    in=new DataInput(file(db,DATAINFO,pr));
    String str="", k;
    IO f=null;
    long t=0;
    while (!(k=Token.string(in.readBytes())).isEmpty()) {
      final String v=Token.string(in.readBytes());
      if (k.equals(DBSTR))       str=v;
 else       if (k.equals(DBFNAME))       f=IO.get(v);
 else       if (k.equals(DBTIME))       t=Token.toLong(v);
    }
    return f != null && f.eq(IO.get(path)) && STORAGE.equals(str) && f.date() == t;
  }
 catch (  final IOException ex) {
    Main.debug(ex);
    return false;
  }
 finally {
    try {
      if (in != null)       in.close();
    }
 catch (    final IOException ex) {
    }
  }
}
