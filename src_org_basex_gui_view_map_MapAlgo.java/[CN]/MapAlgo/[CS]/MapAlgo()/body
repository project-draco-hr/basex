{
switch (GUIProp.maplayout) {
case 0:
    border=new MapRect(0,0,0,0);
  break;
case 1:
border=new MapRect(1,1,2,2);
break;
case 2:
border=new MapRect(0,o,0,o);
break;
case 3:
border=new MapRect(2,o - 1,4,o + 1);
break;
case 4:
border=new MapRect(o >> 2,o,o >> 1,o + (o >> 2));
break;
case 5:
border=new MapRect(o >> 1,o,o,o + (o >> 1));
break;
default :
}
}
