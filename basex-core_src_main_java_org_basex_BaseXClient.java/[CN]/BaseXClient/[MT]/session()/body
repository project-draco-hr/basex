{
  if (session == null) {
    String user=context.globalopts.string(GlobalOptions.USER);
    String pass=context.globalopts.string(GlobalOptions.PASSWORD);
    while (user.isEmpty()) {
      Util.out(USERNAME + COLS);
      user=Util.input();
    }
    while (pass.isEmpty()) {
      Util.out(PASSWORD + COLS);
      pass=Util.password();
    }
    session=new ClientSession(context,user,pass,out);
  }
  return session;
}
