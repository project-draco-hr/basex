{
  if (p instanceof Put)   putIds.add(i);
  UpdatePrimitive[] l=op.get(i);
  final int pos=p.type().ordinal();
  if (l == null) {
    l=new UpdatePrimitive[PrimitiveType.values().length];
    l[pos]=p;
    op.put(i,l);
  }
 else   if (l[pos] == null) {
    l[pos]=p;
  }
 else {
    l[pos].merge(p);
  }
}
