{
  super(Token.token("Status Bar"));
  BaseXLayout.setHeight(this,getFont().getSize() + 6);
  final MouseInputAdapter mouse=new MouseInputAdapter(){
    @Override public void mousePressed(    final MouseEvent e){
      if (memfocus) {
        Performance.gc(4);
        repaint();
        final Runtime rt=Runtime.getRuntime();
        final long occ=rt.totalMemory();
        max=rt.maxMemory();
        used=occ - rt.freeMemory();
        final String inf=MEMTOTAL + Performance.formatSize(max,true) + Prop.NL+ MEMRESERVED+ Performance.formatSize(occ,true)+ Prop.NL+ MEMUSED+ Performance.formatSize(used,true)+ Prop.NL+ Prop.NL+ MEMHELP;
        JOptionPane.showMessageDialog(GUI.get(),inf,MEMTITLE,JOptionPane.INFORMATION_MESSAGE);
      }
    }
    @Override public void mouseMoved(    final MouseEvent e){
      memfocus=e.getX() > getWidth() - MEMW;
      if (memfocus)       GUI.get().focus(GUIStatus.this,HELPMEM);
      GUI.get().setCursor(memfocus ? GUIConstants.CURSORHAND : GUIConstants.CURSORARROW);
    }
    @Override public void mouseExited(    final MouseEvent e){
      memfocus=false;
      GUI.get().setCursor(GUIConstants.CURSORARROW);
    }
  }
;
  addMouseListener(mouse);
  addMouseMotionListener(mouse);
}
