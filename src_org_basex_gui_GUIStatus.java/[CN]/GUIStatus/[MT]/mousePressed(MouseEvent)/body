{
  if (memfocus) {
    Performance.gc(4);
    repaint();
    final Runtime rt=Runtime.getRuntime();
    final long occ=rt.totalMemory();
    max=rt.maxMemory();
    used=occ - rt.freeMemory();
    final String inf=MEMTOTAL + Performance.format(max,true) + NL+ MEMRESERVED+ Performance.format(occ,true)+ NL+ MEMUSED+ Performance.format(used,true)+ NL+ NL+ MEMHELP;
    Dialog.info(gui,inf);
  }
}
