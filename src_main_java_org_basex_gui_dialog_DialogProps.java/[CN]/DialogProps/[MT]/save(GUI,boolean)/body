{
  final BaseXFileChooser fc=new BaseXFileChooser(SAVE_AS,gui.gprop.get(GUIProp.SAVEPATH),gui);
  fc.addFilter(XML_DOCUMENTS,IO.XMLSUFFIX);
  final IO file=fc.select(single ? BaseXFileChooser.Mode.FSAVE : BaseXFileChooser.Mode.DSAVE);
  if (file != null)   gui.gprop.set(GUIProp.SAVEPATH,file.path());
  return file;
}
