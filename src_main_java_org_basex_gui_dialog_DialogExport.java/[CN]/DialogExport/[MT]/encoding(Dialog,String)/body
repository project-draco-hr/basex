{
  final BaseXCombo cb=new BaseXCombo(dialog,DialogExport.ENCODINGS);
  boolean f=false;
  String enc=encoding;
  for (  final String s : DialogExport.ENCODINGS)   f|=s.equals(enc);
  if (!f) {
    enc=enc.toUpperCase();
    for (    final String s : DialogExport.ENCODINGS)     f|=s.equals(enc);
  }
  cb.setSelectedItem(enc);
  cb.addKeyListener(dialog.keys);
  return cb;
}
