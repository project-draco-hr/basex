{
  new Thread(){
    @Override public void run(){
      try {
        while (true) {
          final ArrayOutput o=new ArrayOutput();
          bi=new BufferInput(sin);
          first=bi.read();
          if (first == 1) {
            System.out.println("TRIGGER");
          }
 else {
synchronized (mutex) {
              mutex.notifyAll();
              try {
                mutex.wait();
              }
 catch (              InterruptedException e) {
                e.printStackTrace();
              }
            }
          }
          o.close();
        }
      }
 catch (      IOException e) {
        if (!SOCKET_CLOSED.equals(e.getMessage()))         e.printStackTrace();
      }
    }
  }
.start();
}
