{
  new Thread(){
    @Override public void run(){
      try {
        while (true) {
          final BufferInput bi=new BufferInput(in);
          final EventNotifier n=notifiers.get(bi.readString());
          final String l=bi.readString();
          if (n != null)           n.notify(l);
        }
      }
 catch (      final IOException ex) {
      }
    }
  }
.start();
}
