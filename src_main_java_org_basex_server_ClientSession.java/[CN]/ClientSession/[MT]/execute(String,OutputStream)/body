{
synchronized (mutex) {
    try {
      send(cmd);
      mutex.wait();
      int l;
      if (first != 0) {
        os.write(first);
        while ((l=bi.read()) != 0)         os.write(l);
      }
      info=bi.readString();
      if (!ok()) {
        throw new BaseXException(info);
      }
    }
 catch (    Exception ex) {
      mutex.notifyAll();
      throw new BaseXException(ex);
    }
    mutex.notifyAll();
  }
}
