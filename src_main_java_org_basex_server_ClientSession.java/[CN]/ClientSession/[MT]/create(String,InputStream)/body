{
  try {
    out.write(3);
    send(name);
    int l;
    while ((l=input.read()) != -1)     out.write(l);
    out.write(0);
    out.flush();
    final BufferInput bi=new BufferInput(in);
    info=bi.readString();
    if (bi.read() != 0)     throw new BaseXException(info);
  }
 catch (  final IOException ex) {
    throw new BaseXException(ex);
  }
}
