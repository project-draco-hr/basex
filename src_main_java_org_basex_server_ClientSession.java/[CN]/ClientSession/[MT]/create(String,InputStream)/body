{
  try {
    out.write(8);
    send(name);
    int l;
    while ((l=input.read()) != -1)     out.write(l);
    out.write(0);
    out.flush();
    final BufferInput bi=bufIn();
    info=bi.readString();
    if (!ok(bi))     throw new BaseXException(info);
  }
 catch (  final IOException ex) {
    throw new BaseXException(ex);
  }
}
