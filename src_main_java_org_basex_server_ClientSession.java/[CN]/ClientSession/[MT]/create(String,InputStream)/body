{
  try {
    sout.write(8);
    send(name);
    int l;
    while ((l=input.read()) != -1)     sout.write(l);
    sout.write(0);
    sout.flush();
    final BufferInput bi=new BufferInput(sin);
    info=bi.readString();
    if (!ok(bi))     throw new BaseXException(info);
  }
 catch (  final IOException ex) {
    throw new BaseXException(ex);
  }
}
