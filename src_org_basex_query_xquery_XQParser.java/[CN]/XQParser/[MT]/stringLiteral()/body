{
  skipWS();
  final char delim=curr();
  if (!quote(delim))   Err.or(NOQUOTE,found());
  consume();
  tok.reset();
  while (true) {
    while (!consume(delim)) {
      if (curr() == 0)       Err.or(NOQUOTE,found());
      entity(tok);
    }
    if (!consume(delim))     break;
    tok.add(delim);
  }
  return tok.finish();
}
