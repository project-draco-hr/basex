{
  skipWS();
  Expr nm;
  if (XMLToken.isXMLLetter(curr())) {
    nm=Str.get(qName(null));
  }
 else {
    if (!consumeWS2(BRACE1))     return null;
    nm=expr();
    check(BRACE2);
  }
  check(BRACE1);
  final Expr expr=expr();
  check(BRACE2);
  return new CAttr(nm,new Expr[]{expr == null ? Seq.EMPTY : expr},true);
}
