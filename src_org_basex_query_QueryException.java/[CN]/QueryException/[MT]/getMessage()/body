{
  final StringBuilder sb=new StringBuilder();
  if (line != 0) {
    sb.append(STOPPED);
    sb.append(BaseX.info(LINEINFO,line));
    if (col != 0)     sb.append(BaseX.info(COLINFO,col));
    if (file != null)     sb.append(BaseX.info(FILEINFO,file));
    sb.append(": \n");
  }
  return sb.append(extended()).toString();
}
