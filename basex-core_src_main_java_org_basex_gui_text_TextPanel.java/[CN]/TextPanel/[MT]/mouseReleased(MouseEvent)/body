{
  if (linkListener == null)   return;
  if (SwingUtilities.isLeftMouseButton(e)) {
    text.checkSelect();
    if (!text.selected()) {
      final TextIterator iter=rend.jump(e.getPoint());
      final String link=iter.link();
      if (link != null)       linkListener.linkClicked(link);
    }
  }
}
