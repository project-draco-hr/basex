{
  byte[] txt=t;
  if (Token.contains(t,'\r')) {
    int ns=0;
    for (int r=0; r < s; ++r) {
      final byte b=t[r];
      if (b != '\r')       t[ns++]=b;
    }
    txt=Arrays.copyOf(t,ns);
  }
  if (editor.text(txt)) {
    if (hist != null)     hist.store(txt,editor.pos(),0);
  }
  if (isShowing())   resizeCode.invokeLater();
}
