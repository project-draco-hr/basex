{
synchronized (mutex) {
    try {
      while (true) {
        if (!writer) {
          if (w) {
            if (readers == 0) {
              writer=true;
              break;
            }
          }
 else {
            readers++;
            break;
          }
        }
        mutex.wait();
      }
    }
 catch (    final InterruptedException ex) {
      Util.stack(ex);
    }
  }
}
