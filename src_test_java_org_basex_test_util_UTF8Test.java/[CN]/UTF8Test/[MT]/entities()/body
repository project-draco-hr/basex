{
  for (int i=0xA0; i <= Character.MAX_CODE_POINT; i++) {
    final String qu=new XQuery("'&#" + i + ";'").execute(CONTEXT);
    assertEquals(new String(Character.toChars(i)),qu);
    if (i == 0x400)     i=0xFFF;
 else     if (i == 0x1400)     i=0xFFFF;
 else     if (i == 0x10400)     i=0x10FBFF;
  }
}
