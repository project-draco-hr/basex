{
  final JTree jt=new MainTree(title,client).getTree();
  jt.addMouseListener(new MouseAdapter(){
    @Override public void mouseClicked(    final MouseEvent evt){
      if (evt.getButton() == MouseEvent.BUTTON1 && evt.getClickCount() == 2) {
        TreeNode node=(TreeNode)jt.getLastSelectedPathComponent();
        if (node.getType() == 1) {
          String t=node.getParent().toString() + " - " + node.toString();
          try {
            addTab(t,node.getIcon());
          }
 catch (          BaseXException e) {
            e.printStackTrace();
          }
        }
      }
    }
  }
);
  return jt;
}
