{
  final char ch=word.charAt(0);
  if (quote == 0 && (ch == '"' || ch == '\'')) {
    quote=ch;
    return GUIConstants.COLORERROR;
  }
  if (quote != 0) {
    if (ch == quote)     quote=0;
    return GUIConstants.COLORERROR;
  }
  if (ch == '$') {
    var=true;
    return VAR;
  }
  if (var) {
    var&=XMLToken.isLetterOrDigit(ch);
    return VAR;
  }
  if (keys.contains(word))   return GUIConstants.COLORQUOTE;
  if (!XMLToken.isXMLLetterOrDigit(ch))   return KEY;
  return Color.black;
}
