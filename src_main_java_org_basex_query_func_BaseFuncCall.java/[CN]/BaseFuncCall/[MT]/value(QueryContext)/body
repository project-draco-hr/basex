{
  StaticUserFunc fun=func;
  Value[] args=args(ctx);
  final int calls=ctx.tailCalls;
  try {
    do {
      ctx.tailCalls=0;
      try {
        return fun.invValue(ctx,info,args);
      }
 catch (      final Continuation c) {
        fun=c.getFunc();
        args=c.getArgs();
      }
    }
 while (true);
  }
 catch (  final QueryException ex) {
    ex.add(info);
    throw ex;
  }
 finally {
    ctx.tailCalls=calls;
  }
}
