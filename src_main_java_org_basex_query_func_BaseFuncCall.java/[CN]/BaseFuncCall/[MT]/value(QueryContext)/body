{
  UserFunc fun=func;
  Value[] args=args(ctx);
  final int calls=ctx.tailCalls;
  try {
    do {
      final int fp=addArgs(ctx,info,fun.scope,fun.args,args);
      ctx.tailCalls=0;
      try {
        return ctx.value(fun);
      }
 catch (      final Continuation c) {
        fun=c.getFunc();
        args=c.getArgs();
      }
 finally {
        fun.scope.exit(ctx,fp);
      }
    }
 while (true);
  }
 catch (  final QueryException ex) {
    ex.add(info);
    throw ex;
  }
 finally {
    ctx.tailCalls=calls;
  }
}
