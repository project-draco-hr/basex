{
  if (keyword.isEmpty())   return false;
  final int sl=keyword.length();
  final int wl=text.length();
  if (wl < sl)   return false;
  final int p=text.pos();
  int s=-1;
  while (++s != sl) {
    if (Character.toLowerCase(text.next()) != keyword.charAt(s))     break;
  }
  text.pos(p);
  return s == sl;
}
