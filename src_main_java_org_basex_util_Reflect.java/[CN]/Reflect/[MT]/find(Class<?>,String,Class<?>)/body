{
  if (clazz == null)   return null;
  Method m=null;
  try {
    try {
      m=clazz.getMethod(name,types);
    }
 catch (    final Exception ex) {
      m=clazz.getDeclaredMethod(name,types);
      m.setAccessible(true);
    }
  }
 catch (  final Exception ex) {
    Util.debug(ex);
  }
  return m;
}
