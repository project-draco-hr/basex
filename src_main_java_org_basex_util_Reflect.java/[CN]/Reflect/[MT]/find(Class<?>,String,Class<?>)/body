{
  try {
    try {
      return clazz != null ? clazz.getMethod(name,types) : null;
    }
 catch (    final Exception ex) {
      final Method m=clazz.getDeclaredMethod(name,types);
      m.setAccessible(true);
      return m;
    }
  }
 catch (  final Exception ex) {
    Util.debug(ex);
    return null;
  }
}
