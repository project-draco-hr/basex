{
  Performance.gc(3);
  repaint();
  final Runtime rt=Runtime.getRuntime();
  final long occ=rt.totalMemory();
  final long max=rt.maxMemory();
  final long used=occ - rt.freeMemory();
  final String inf=TOTAL_MEM_C + Performance.format(max,true) + NL+ RESERVED_MEM_C+ Performance.format(occ,true)+ NL+ MEMUSED_C+ Performance.format(used,true)+ NL+ NL+ H_USED_MEM;
  BaseXDialog.info(gui,inf);
}
