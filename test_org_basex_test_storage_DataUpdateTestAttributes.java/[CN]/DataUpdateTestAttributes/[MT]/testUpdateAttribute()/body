{
  final Data data=ctx.data();
  data.update(7,token("name"),token("junit"));
  assertEquals(size,data.meta.size);
  assertByteArraysEqual(token("name"),data.attName(7));
  assertByteArraysEqual(token("junit"),data.attValue(7));
  reload();
  assertEquals(size,data.meta.size);
  assertByteArraysEqual(token("name"),data.attName(7));
  assertByteArraysEqual(token("junit"),data.attValue(7));
}
