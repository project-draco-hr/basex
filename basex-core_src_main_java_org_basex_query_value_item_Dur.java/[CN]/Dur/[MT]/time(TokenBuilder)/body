{
  if (sec.remainder(DAYSECONDS).signum() == 0)   return;
  tb.add('T');
  final long h=hou();
  if (h != 0) {
    tb.addLong(Math.abs(h));
    tb.add('H');
  }
  final long m=min();
  if (m != 0) {
    tb.addLong(Math.abs(m));
    tb.add('M');
  }
  final BigDecimal sc=sec();
  if (sc.signum() == 0)   return;
  tb.add(Token.chopNumber(Token.token(sc.abs().toPlainString()))).add('S');
}
