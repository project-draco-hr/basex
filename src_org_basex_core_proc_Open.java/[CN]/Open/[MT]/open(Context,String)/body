{
  Data data=ctx.pin(db);
  if (data == null) {
    if (!ctx.prop.dbpath(db).exists())     throw new FileNotFoundException(Main.info(DBNOTFOUND,db));
    data=new DiskData(db,ctx.prop);
    ctx.addToPool(data);
  }
  if (ctx.perm(User.READ,data) != -1) {
    Close.close(ctx,data);
    throw new IOException(Main.info(PERMNO,CmdPerm.READ));
  }
  return data;
}
