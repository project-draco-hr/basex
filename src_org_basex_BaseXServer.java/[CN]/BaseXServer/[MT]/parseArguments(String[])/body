{
  final Args arg=new Args(args);
  boolean ok=true;
  while (arg.more() && ok) {
    if (arg.dash()) {
      final char c=arg.next();
      if (c == 'd') {
        ok=set(Prop.DEBUG,true);
      }
 else       if (c == 'i') {
        interactive=true;
      }
 else       if (c == 'p') {
        ok=set(Prop.PORT,arg.string());
      }
 else       if (c == 's') {
        ok=set(Prop.HOST,arg.string());
      }
 else       if (c == 'v') {
        verbose=true;
      }
 else {
        ok=false;
      }
    }
 else {
      ok=false;
      if (arg.string().equals("stop")) {
        quit();
        return false;
      }
    }
  }
  if (!ok)   BaseX.outln(SERVERINFO);
  return ok;
}
