{
  final XQuery query=new XQuery("declare variable $x external; xs:float($x)",ctx);
  try {
    query.bind("x",new XQuery("12.5E10",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertStringValue(false,"1.25E11") || error("XPTY0004")));
}
