{
  final XQuery query=new XQuery("declare variable $x external; $x",ctx);
  try {
    query.bind("x",new XQuery("'2006-02-07+05:00'",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertStringValue(false,"2006-02-07+05:00") || error("XPTY0004")));
}
