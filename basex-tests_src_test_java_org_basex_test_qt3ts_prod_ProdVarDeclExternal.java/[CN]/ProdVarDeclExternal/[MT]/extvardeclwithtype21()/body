{
  final XQuery query=new XQuery("declare variable $x as xs:string external; fn:lower-case($x)",ctx);
  try {
    query.bind("x",new XQuery("let $var := upper-case(\"THIS STRING SHOULD ALL BE IN LOWER CASE\") return $var",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"this string should all be in lower case"));
}
