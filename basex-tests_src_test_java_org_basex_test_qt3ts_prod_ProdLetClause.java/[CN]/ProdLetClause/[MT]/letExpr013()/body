{
  final XQuery query=new XQuery("let $x:=\"hello\", $y:=concat($x,\" there\") return $y",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"hello there"));
}
