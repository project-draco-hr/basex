{
  final DBNode n=(DBNode)node;
  final int p=n.pre + add;
  final Data d=n.data;
  if (md == null) {
    d.delete(p);
    return;
  }
  final int par=d.parent(p,Nod.kind(n.type));
  if (n.type == Type.ATT) {
    d.insertAttr(p,par,md);
  }
 else {
    d.insert(p,par,md);
  }
  d.delete(p + md.meta.size);
  mergeTextNodes(d,p,p + 1);
  mergeTextNodes(d,p - 1,p);
}
