{
  final XQuery query=new XQuery("\n" + "        <XMark-result-Q1> { \n" + "            let $auction := (/)\n"+ "            return for $b in $auction/site/people/person[@id = \"person0\"] \n"+ "            return $b/name/text() } </XMark-result-Q1>",ctx);
  try {
    query.context(node(file("app/XMark/XMarkAuction.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<XMark-result-Q1>Seongtaek Mattern</XMark-result-Q1>",false));
}
