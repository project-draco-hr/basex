{
  int i=p;
  if (l == 5) {
    a[i++]=(byte)0xC0;
    a[i++]=(byte)(v >>> 24);
    a[i++]=(byte)(v >>> 16);
    a[i++]=(byte)(v >>> 8);
  }
 else   if (l == 4) {
    a[i++]=(byte)(v >>> 24 | 0x80);
    a[i++]=(byte)(v >>> 16);
    a[i++]=(byte)(v >>> 8);
  }
 else   if (l == 2) {
    a[i++]=(byte)(v >>> 8 | 0x40);
  }
  a[i++]=(byte)v;
}
