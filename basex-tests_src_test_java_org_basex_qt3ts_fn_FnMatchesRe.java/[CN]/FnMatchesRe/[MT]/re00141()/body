{
  final XQuery query=new XQuery("(every $s in tokenize('a????', ',') satisfies matches($s, '^(?:\\p{Ll}*)$')) and (every $s in tokenize('??', ',') satisfies not(matches($s, '^(?:\\p{Ll}*)$')))",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(true));
}
