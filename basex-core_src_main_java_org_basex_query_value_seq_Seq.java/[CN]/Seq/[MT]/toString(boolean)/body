{
  final StringBuilder sb=new StringBuilder(PAR1);
  for (int i=0; i < size; ++i) {
    sb.append(i == 0 ? "" : SEP);
    final Item it=itemAt(i);
    sb.append(error ? it.toErrorString() : it.toString());
    if (sb.length() <= 24 || i + 1 == size)     continue;
    sb.append(SEP + DOTS);
    break;
  }
  return sb.append(PAR2).toString();
}
