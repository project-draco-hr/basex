{
  if (!declared || expr == null)   FUNCUNKNOWN.thrw(input,name.string());
  final boolean u=expr.uses(Use.UPD);
  if (updating) {
    if (ret != null)     UPFUNCTYPE.thrw(input);
    if (!u && !expr.isVacuous())     UPEXPECTF.thrw(input);
  }
 else   if (u) {
    UPNOT.thrw(input,description());
  }
}
