{
  super.paintComponent(g);
  final int w=getWidth();
  final int h=getHeight();
  if (w + h != viewDimension) {
    viewDimension=w + h;
    plotChanged=true;
  }
  plotWidth=w - 2 * XMARGIN;
  plotHeight=h - 2 * YMARGIN;
  g.setColor(new Color(90,90,150,50));
  g.fillRect(XMARGIN,YMARGIN,plotWidth,plotHeight);
  drawGrid(g);
  drawXaxis(g);
  drawYaxis(g);
  if (scatterData.size == 0)   return;
  if (plotImg == null || plotChanged)   plotImg=createPlotImage();
  g.drawImage(plotImg,0,0,this);
  if (focusedItem != -1)   drawItem(g,scatterData.xAxis.co[focusedItem],scatterData.yAxis.co[focusedItem],true);
  plotChanged=false;
}
