{
  final int width=getWidth();
  final int height=getHeight();
  g.setColor(Color.gray);
  g.drawLine(XMARGIN + NOVALUEBORDER,YMARGIN,width - XMARGIN,YMARGIN);
  g.drawLine(XMARGIN + NOVALUEBORDER,height - YMARGIN - NOVALUEBORDER,width - XMARGIN,height - YMARGIN - NOVALUEBORDER);
  g.drawLine(XMARGIN + NOVALUEBORDER,YMARGIN,XMARGIN + NOVALUEBORDER,height - YMARGIN - NOVALUEBORDER);
  g.drawLine(width - XMARGIN,YMARGIN,width - XMARGIN,height - YMARGIN - NOVALUEBORDER);
}
