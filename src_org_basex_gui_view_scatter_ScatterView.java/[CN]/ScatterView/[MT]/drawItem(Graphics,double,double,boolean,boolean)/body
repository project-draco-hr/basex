{
  final int x1=calcCoordinate(true,x);
  final int y1=calcCoordinate(false,y);
  if (drawFocused) {
    g.drawImage(itemFocusedImg,x1 - ITEMSIZEFOCUSED / 2,y1 - ITEMSIZEFOCUSED / 2,this);
  }
 else {
    g.drawImage(!marked ? itemImg : markedItemImg,x1 - ITEMSIZE / 2,y1 - ITEMSIZE / 2,this);
  }
}
