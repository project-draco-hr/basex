def opts():
    try:
        (opts, args) = getopt.getopt(sys.argv[1:], '-p:-h', ['port', 'host'])
    except getopt.GetoptError as err:
        print err
        sys.exit()
    global host
    global port
    host = 'localhost'
    port = 1984
    for (o, a) in opts:
        if (o == '-p'):
            port = int(a)
        if (o == '-h'):
            host = a
