{
  if (reset)   files.reset();
  filter.refresh(true);
  if (gui.gopts.get(GUIOptions.PARSEPROJ) && (!parsed || parse)) {
    parsed=false;
    if (getWidth() == 0)     return;
    new GUIThread(){
      @Override public void run(){
        try {
          files.parse(root.file,gui.context);
          parsed=true;
          refreshTree();
        }
 catch (        final InterruptedException ignore) {
        }
      }
    }
.start();
  }
}
