{
  if (!contains(n,'\\'))   return n;
  final TokenBuilder tb=new TokenBuilder();
  boolean bs=false;
  for (  byte c : n) {
    if (c == '\\') {
      bs=true;
    }
 else     if (bs) {
      if (Character.isLetterOrDigit(c))       tb.add(c);
      bs=false;
    }
 else {
      tb.add(c);
    }
  }
  return tb.finish();
}
