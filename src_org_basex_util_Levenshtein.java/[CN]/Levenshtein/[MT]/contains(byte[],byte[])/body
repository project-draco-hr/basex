{
  final int tl=tok.length;
  final int sl=sub.length;
  if (sl == 0)   return false;
  int ts=0;
  int t=-1;
  while (++t < tl) {
    if (ftChar(tok[t]))     continue;
    if (ls(tok,ts,t - ts,sub))     return true;
    while (++t < tl && !ftChar(tok[t]))     ;
    ts=t;
  }
  return ts == tl ? false : ls(tok,ts,t - ts,sub);
}
