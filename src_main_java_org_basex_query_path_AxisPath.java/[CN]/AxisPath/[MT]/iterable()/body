{
  if (root == null || root.uses(Use.VAR) || root.duplicates())   return false;
  final int sl=step.length;
  for (int s=0; s < sl; ++s) {
switch (step[s].axis) {
case ANC:
case ANCORSELF:
case PREC:
case PRECSIBL:
      return false;
case DESC:
case DESCORSELF:
case FOLL:
case FOLLSIBL:
    return s + 1 == sl || s + 2 == sl && step[s + 1].axis == Axis.ATTR;
default :
}
}
return true;
}
