{
  ser=new XMLSerializer(System.out);
  new Thread(){
    @Override public void run(){
      new BaseXServer();
    }
  }
.start();
  Thread.sleep(1000);
  session=new ClientSession("localhost",1984,"admin","admin");
  CachedOutput result=new CachedOutput();
  launch("xquery for $x in doc('input') return $x",result);
  new CreateDB(result.toString(),LOCALDB).execute(CTX,System.out);
  QueryProcessor qp=new QueryProcessor("//text()",CTX);
  Nodes ns=qp.queryNodes();
  ns.serialize(ser);
  System.out.println("\n\n=== Stop the server:");
  session.close();
  new BaseXServer("stop");
  new Close().execute(CTX);
  new DropDB(LOCALDB).execute(CTX);
}
