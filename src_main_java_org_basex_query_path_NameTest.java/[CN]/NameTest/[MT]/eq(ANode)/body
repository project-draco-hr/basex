{
  if (node.type != type)   return false;
switch (mode) {
case ALL:
    return true;
case NAME:
  return Token.eq(ln,Token.local(node.name()));
case NS:
return Token.eq(name.uri(),node.qname(tmpq).uri());
default :
return type == NodeType.ATT && !name.hasPrefix() ? Token.eq(ln,node.name()) : name.eq(node.qname(tmpq));
}
}
