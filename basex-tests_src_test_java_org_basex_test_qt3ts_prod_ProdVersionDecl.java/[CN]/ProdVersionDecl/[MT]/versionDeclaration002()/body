{
  final XQuery query=new XQuery("(:encoding \"utf-8xx\":)xquery version \"1.0\"; <bib/>",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertSerialization("<bib/>",false) || error("*")));
}
