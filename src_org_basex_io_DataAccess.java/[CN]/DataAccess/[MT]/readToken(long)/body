{
  cursor(p);
  int l=readNum();
  final byte[] b=new byte[l];
  int ll=BUFSIZE - off;
  if (ll >= l) {
    System.arraycopy(buffer[c],off,b,0,l);
  }
 else {
    System.arraycopy(buffer[c],off,b,0,ll);
    l-=ll;
    while (l > BUFSIZE) {
      nextBlock();
      System.arraycopy(buffer[c],0,b,ll,BUFSIZE);
      l-=BUFSIZE;
      ll+=BUFSIZE;
    }
    nextBlock();
    System.arraycopy(buffer[c],0,b,ll,l);
  }
  return b;
}
