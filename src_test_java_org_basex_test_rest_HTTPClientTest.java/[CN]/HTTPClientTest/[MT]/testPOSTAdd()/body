  final Command postAdd=new XQuery("http:send-request(" + "<http:request method='post' status-only='true'>" + "<http:body media-type='text/xml'>"+ "<book id='4'>"+ "<name>The Celebrated Jumping Frog of Calaveras County</name>"+ "<author>Twain</author>"+ "</book>"+ "</http:body>"+ "</http:request>, " + URL + ")");
