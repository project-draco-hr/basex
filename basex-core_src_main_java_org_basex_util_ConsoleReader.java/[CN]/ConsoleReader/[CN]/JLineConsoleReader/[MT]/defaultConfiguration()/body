{
  final Class<?> historyClass=Reflect.find(JLINE_HISTORY);
  final File hist=new File(Prop.HOME,HISTORY_FILE);
  final Object history=Reflect.get(Reflect.find(historyClass,File.class),hist);
  Reflect.invoke(Reflect.method(readerClass,"setUseHistory",boolean.class),reader,true);
  Reflect.invoke(Reflect.method(readerClass,"setBellEnabled",boolean.class),reader,false);
  Reflect.invoke(Reflect.method(readerClass,"setHistory",historyClass),reader,history);
  restoreDefaultPrompt();
}
