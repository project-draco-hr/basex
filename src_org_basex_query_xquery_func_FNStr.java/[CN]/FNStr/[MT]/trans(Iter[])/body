{
  final byte[] str=checkStr(arg[0]);
  final byte[] sea=checkStr(arg[1].atomic(this,false));
  final byte[] rep=checkStr(arg[2].atomic(this,false));
  return Str.get(ascii(str) && ascii(sea) && ascii(rep) ? translate(str,sea,rep) : token(Pattern.compile(string(sea),Pattern.LITERAL).matcher(string(str)).replaceAll(string(rep)))).iter();
}
