{
  final XQuery query=new XQuery("\n" + "        declare namespace eg = \"http://example.org\"; \n" + "        declare function eg:noContextFunction() { fn:lang(\"en\") }; \n"+ "        eg:noContextFunction()\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPDY0002"));
}
