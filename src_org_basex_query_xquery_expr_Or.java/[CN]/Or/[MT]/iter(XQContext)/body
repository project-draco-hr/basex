{
  double d=0;
  boolean found=false;
  for (  final Expr e : expr) {
    final Item it=ctx.iter(e).ebv();
    if (it.bool()) {
      final double s=it.score();
      if (s == 0)       return Bln.TRUE.iter();
      d=Scoring.or(d,s);
      found=true;
    }
  }
  return (d == 0 ? Bln.get(found) : new Bln(true,d)).iter();
}
