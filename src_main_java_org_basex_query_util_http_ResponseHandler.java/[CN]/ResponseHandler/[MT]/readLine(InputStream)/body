{
  final TokenBuilder tb=new TokenBuilder();
  for (int b; (b=in.read()) != -1; ) {
    if (b == '\r') {
      while (true) {
        final int b2=in.read();
        if (b2 == '\n') {
          return tb.finish();
        }
 else         if (b2 == -1) {
          return tb.add(b).finish();
        }
 else         if (b2 == '\r') {
          tb.add(b);
        }
 else {
          tb.add(b).add(b2);
          break;
        }
      }
    }
 else {
      tb.add(b);
    }
  }
  return tb.isEmpty() ? null : tb.finish();
}
