{
  while (true) {
    final int p=qp;
    if (!consumeWS(DECLARE))     return;
    if (consumeWS(VARIABLE)) {
      varDecl();
    }
 else     if (consumeWS(FUNCTION)) {
      functionDecl();
    }
 else     if (consumeWS(OPTION)) {
      optionDecl();
    }
 else     if (consumeWS(FTOPTION)) {
      ftMatchOption(ctx.ftopt);
    }
 else {
      qp=p;
      return;
    }
    skipWS();
    check(';');
  }
}
