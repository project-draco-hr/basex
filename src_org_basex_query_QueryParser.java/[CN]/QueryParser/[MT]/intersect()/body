{
  final Expr e=instanceoff();
  if (consumeWS(INTERSECT)) {
    Expr[] list={simple(e)};
    do     list=add(list,simple(instanceoff()));
 while (consumeWS(INTERSECT));
    return new InterSect(list);
  }
 else   if (consumeWS(EXCEPT)) {
    Expr[] list={simple(e)};
    do     list=add(list,simple(instanceoff()));
 while (consumeWS(EXCEPT));
    return new Except(list);
  }
 else {
    return e;
  }
}
