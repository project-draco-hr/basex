{
  final XQuery query=new XQuery("\n" + "        declare decimal-format local:df minus-sign=\"-\" currency-symbol=\"??\" decimal-separator=\".\";\n" + "      \tformat-number(95.4857,'??###.####', \"local:df\")",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPST0003"));
}
