{
  final XQuery query=new XQuery("\n" + "        declare decimal-format local:df2 infinity=\"off-the-scale\";\n" + "        format-number(1 div 0e0,'###############################', 'local:df2')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"off-the-scale"));
}
