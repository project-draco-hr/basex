{
  final XQuery query=new XQuery("\n" + "        declare default decimal-format minus-sign=\"-\" grouping-separator=\",\" decimal-separator=\".\";\n" + "      \tformat-number(2792.14*(-36.58),'000,000.000###')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"-102,136.4812"));
}
