{
  final XQuery query=new XQuery("\n" + "         declare default decimal-format decimal-separator=\"|\" grouping-separator=\".\"; \n" + "         format-number(931.4857,'000.000|###')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"000.931|486"));
}
