{
  final XQuery query=new XQuery("fn:avg( ( ( xs:decimal(\"-1.000000000001\"), xs:integer(\"-100\"))))",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertEq("-50.5000000000005") || assertEq("-50.5")));
}
