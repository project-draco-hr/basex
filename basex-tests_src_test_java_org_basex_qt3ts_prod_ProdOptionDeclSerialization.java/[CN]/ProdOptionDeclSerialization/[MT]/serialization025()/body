{
  final XQuery query=new XQuery("declare namespace output = \"http://www.w3.org/2010/xslt-xquery-serialization\";\n" + "         declare option output:method \"html\";\n" + "         (: control characters not allowed in html :)\n"+ "         <result>ok&#x7f;</result>\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertSerialization("<result>ok\u007f</result>",false) || assertSerialError("SEPM0014")));
}
