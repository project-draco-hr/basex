{
  final XQuery query=new XQuery("\n" + "         declare namespace output = \"http://www.w3.org/2010/xslt-xquery-serialization\";\n" + "         declare option output:method \"xml\";\n"+ "         declare option output:standalone \"yes\";\n"+ "\t\t (<a/>,<b/>)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((serializationMatches("<\\?xml[^t]+\\?><a/><b/>","") || assertSerialError("SEPM0004")));
}
