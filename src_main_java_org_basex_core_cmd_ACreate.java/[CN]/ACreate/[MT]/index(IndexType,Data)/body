{
  if (d instanceof MemData)   return;
  IndexBuilder b=null;
switch (i) {
case TEXT:
    b=new ValueBuilder(d,true);
  break;
case ATTRIBUTE:
b=new ValueBuilder(d,false);
break;
case FULLTEXT:
b=FTBuilder.get(d);
break;
case PATH:
b=new PathBuilder(d);
break;
default :
Util.notexpected();
}
d.closeIndex(i);
d.meta.dirty=true;
progress(b);
d.setIndex(i,b.build());
}
