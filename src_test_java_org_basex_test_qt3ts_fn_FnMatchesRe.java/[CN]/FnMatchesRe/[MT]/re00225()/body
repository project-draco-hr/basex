{
  final XQuery query=new XQuery("(every $s in tokenize('\u0600??,\u0600\u0601\u0602\u0603\u0604\u0605??????\u0609\u060a??\u060c\u060d??????????????????????????\u061b\u061c\u061d\u061e\u061f????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????\u066a\u066b\u066c\u066d????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????\u06d4????????????????\u06dd????????????????????????????????????????????????????????????????????', ',') satisfies matches($s, '^(?:\\p{IsArabic}+)$')) and (every $s in tokenize('', ',') satisfies not(matches($s, '^(?:\\p{IsArabic}+)$')))",ctx);
