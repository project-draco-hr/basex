{
  final XQuery query=new XQuery("(: Name: XQueryComment006 :)\n" + "(: Description: Comment containing ':' :)\n" + "\n"+ "\n"+ "(: this is a comment ::)\n"+ "<result/>\n"+ "",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<result/>",false));
}
