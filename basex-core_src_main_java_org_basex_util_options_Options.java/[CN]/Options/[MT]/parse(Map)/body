{
  for (  final Item name : map.keys()) {
    if (!name.type.isStringOrUntyped())     throw new BaseXException(Text.OPT_EXPECT,AtomType.STR,name.type,name);
    final Value value=map.get(name,null);
    if (!(value instanceof Item))     throw new BaseXException(Text.OPT_EXPECT,AtomType.ITEM,value.seqType(),value);
    assign(name,(Item)value);
  }
}
