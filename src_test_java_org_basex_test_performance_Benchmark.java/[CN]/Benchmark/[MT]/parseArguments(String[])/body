{
  final Args arg=new Args(args,this," [-lr] document\n" + " -l        use local session\n" + " -m<max>   maximum #ms for a single query\n"+ " -M<max>   total maximum #ms\n"+ " -r<runs>  number of runs");
  while (arg.more()) {
    if (arg.dash()) {
      final char ch=arg.next();
      if (ch == 'r') {
        runs=arg.num();
        out.println("- number of runs: " + runs);
      }
 else       if (ch == 'l') {
        local=true;
        out.println("- local session");
      }
 else       if (ch == 'm') {
        max=arg.num();
        out.println("- maximum #ms: " + max);
      }
 else       if (ch == 'M') {
        totalMax=arg.num();
        out.println("- total maximum #ms: " + totalMax);
      }
 else {
        arg.check(false);
      }
    }
 else {
      input=arg.string();
      out.println("- Document: " + input);
    }
  }
  return arg.finish();
}
