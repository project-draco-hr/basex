{
  if (first == null)   first=new LogNode(pre,-size);
 else {
    LogNode pointer=first;
    LogNode b4pointer=null;
    while (pointer != null && pointer.id < pre) {
      b4pointer=pointer;
      pointer=pointer.next;
    }
    if (pointer != null && pointer.id == pre)     pointer.addend-=size;
 else {
      final LogNode newNode=new LogNode(pre,-size);
      if (b4pointer == null)       first=newNode;
 else       b4pointer.next=newNode;
      newNode.next=pointer;
    }
  }
}
