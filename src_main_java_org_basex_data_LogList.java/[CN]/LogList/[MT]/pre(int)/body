{
  int addend=0;
  LogNode pointer=first;
  while (pointer != null) {
    if (pointer.id <= id) {
      addend+=pointer.addend;
      if (pointer.hasSub()) {
        final int subaddend=pointer.getSubAddend(id);
        if (subaddend != Integer.MIN_VALUE) {
          addend+=subaddend;
          break;
        }
      }
      pointer=pointer.next;
    }
 else {
      pointer=null;
    }
  }
  return id + addend;
}
