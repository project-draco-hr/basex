{
  int addend=0;
  Node pointer=first;
  while (pointer != null) {
    if (pointer.id <= id) {
      addend+=pointer.addend;
      if (pointer.hasSub()) {
        int subaddend=pointer.getSubAddend(id);
        if (subaddend != Integer.MIN_VALUE) {
          addend+=subaddend;
          pointer=null;
        }
      }
      if (pointer != null)       pointer=pointer.next;
    }
 else     pointer=null;
  }
  return id + addend;
}
