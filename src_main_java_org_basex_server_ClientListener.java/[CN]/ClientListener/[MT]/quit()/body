{
  if (!running)   return;
  running=false;
  if (log != null)   log.write(this,"LOGOUT " + (null != context.user ? context.user.name : ""),OK);
  if (command != null) {
    command.stop();
    while (command != null)     Performance.sleep(50);
  }
  context.delete(this);
  try {
    new Close().run(context);
    socket.close();
    if (events) {
      esocket.close();
      for (      final Sessions s : context.events.values())       s.remove(this);
    }
  }
 catch (  final Throwable ex) {
    if (log != null)     log.write(this,ex.getMessage());
    Util.stack(ex);
  }
}
