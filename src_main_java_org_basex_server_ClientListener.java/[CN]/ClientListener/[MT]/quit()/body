{
  if (!running)   return;
  running=false;
  if (command != null) {
    command.stop();
    do     Performance.sleep(50);
 while (command != null);
  }
  context.delete(this);
  try {
    new Close().run(context);
    socket.close();
    if (events) {
      esocket.close();
      for (      final Sessions s : context.events.values())       s.remove(this);
    }
  }
 catch (  final Throwable ex) {
    log(ex,false);
    Util.stack(ex);
  }
}
