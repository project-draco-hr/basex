{
  if (painter != null)   painter.close();
  painter=null;
  mainRects=null;
  focused=null;
  textLen=null;
  zoomStep=0;
  final Data data=gui.context.data();
  if (data != null && getWidth() != 0) {
    if (!GUIProp.showmap)     return;
    if (!GUIProp.fsmeta)     painter=GUIProp.mapfs && data.fs != null ? new MapFS(this,data.fs) : new MapDefault(this);
 else     painter=data.fs != null ? new MapFS(this,data.fs) : new MapDefault(this);
    mainMap=createImage();
    zoomMap=createImage();
    refreshLayout();
    repaint();
  }
}
