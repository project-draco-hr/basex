{
  if (painter != null)   painter.close();
  painter=null;
  mainRects=null;
  focused=null;
  textLen=null;
  zoomStep=0;
  final Data data=gui.context.data();
  if (data != null && getWidth() != 0) {
    if (!GUIProp.showmap)     return;
    painter=data.fs != null ? new MapFS(this,data.fs) : new MapDefault(this);
    mainMap=createImage();
    zoomMap=createImage();
    if (GUIProp.mapinteraction == 2)     hugeMap=new BufferedImage(fkt * getWidth(),fkt * getHeight(),BufferedImage.TYPE_INT_BGR);
    refreshLayout();
    repaint();
  }
}
