{
  if (gui.updating)   return;
  super.mouseMoved(e);
  mouseX=e.getX();
  mouseY=e.getY();
  if (focus()) {
    if (!(mouseX > tinyx && mouseX < tinyx + tinyw && mouseY > tinyy && mouseY < tinyy + tinyh)) {
      tinyw=0;
      tinyh=0;
    }
    repaint();
  }
 else   if (GUIProp.mapinteraction == 2 && e.isControlDown()) {
    constMag=true;
    repaint();
  }
 else   if (GUIProp.mapinteraction == 2 && !e.isControlDown() && constMag) {
    constMag=false;
    repaint();
  }
}
