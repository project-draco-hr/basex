{
  if (gui.updating)   return;
  super.mouseMoved(e);
  mouseX=e.getX();
  mouseY=e.getY();
  if (focus()) {
    if (!(mouseX > tinyx && mouseX < tinyx + tinyw && mouseY > tinyy && mouseY < tinyy + tinyh)) {
      thumbMap=false;
    }
    repaint();
  }
 else   if (GUIProp.mapinteraction && e.isControlDown()) {
    constMag=true;
    repaint();
  }
 else   if (GUIProp.mapinteraction && !e.isControlDown() && constMag) {
    constMag=false;
    repaint();
  }
}
