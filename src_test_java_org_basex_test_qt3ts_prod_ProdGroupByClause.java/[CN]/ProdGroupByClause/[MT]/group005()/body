{
  final XQuery query=new XQuery("\n" + "            for $x in //employee \n" + "            let $key := $x/hours \n"+ "            group by $key \n"+ "            return <group hours=\"{$key}\" avHours=\"{avg($x/hours)}\"/> \n"+ "      ",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
