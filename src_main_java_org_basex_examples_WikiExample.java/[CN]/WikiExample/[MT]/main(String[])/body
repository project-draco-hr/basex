{
  final Context context=new Context();
  System.out.println("=== WikiExample ===");
  System.out.println("* Create a database from a file via http.");
  new Set("intparse",true).execute(context);
  final String doc="http://en.wikipedia.org/wiki/Wikipedia";
  new CreateDB("WikiExample",doc).execute(context);
  System.out.println("* Update the document.");
  new XQuery("declare namespace xhtml='http://www.w3.org/1999/xhtml';" + "insert node " + "  <xhtml:p>I will match the following query because I contain"+ "   the terms 'ARTICLE' and 'EDITABLE'. :-)</xhtml:p> "+ "into //xhtml:body").execute(context);
  System.out.println("* Perform a full-text query:");
  System.out.println(new XQuery("declare namespace xhtml='http://www.w3.org/1999/xhtml';" + "for $x in //xhtml:p/text()" + "where $x contains text ('edit.*' ftand ('article' ftor 'page')) "+ "  using wildcards distance at most 10 words "+ "return <p>{ $x }</p>").execute(context));
  System.out.println("* Drop the database.");
  new DropDB("WikiExample").execute(context);
  context.close();
}
