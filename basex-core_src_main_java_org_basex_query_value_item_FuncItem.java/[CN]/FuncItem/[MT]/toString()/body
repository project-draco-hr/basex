{
  final FuncType ft=(FuncType)type;
  final TokenBuilder tb=new TokenBuilder(FUNCTION).add('(');
  for (  final Var v : params)   tb.addExt(v).add(v == params[params.length - 1] ? "" : ", ");
  tb.add(')').add(ft.ret != null ? " as " + ft.ret : "").add(" { ").addExt(expr).add(" }");
  return tb.toString();
}
