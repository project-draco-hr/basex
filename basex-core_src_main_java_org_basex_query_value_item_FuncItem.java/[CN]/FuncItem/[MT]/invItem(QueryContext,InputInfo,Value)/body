{
  final Value cv=ctx.value;
  final long ps=ctx.pos, sz=ctx.size;
  try {
    ctx.value=ctxVal;
    ctx.pos=pos;
    ctx.size=size;
    for (int i=0; i < vars.length; i++)     ctx.set(vars[i],args[i],ii);
    return expr.item(ctx,ii);
  }
  finally {
    ctx.value=cv;
    ctx.pos=ps;
    ctx.size=sz;
  }
}
