{
  final Value cv=qc.value;
  final long ps=qc.pos, sz=qc.size;
  try {
    qc.value=ctxVal;
    qc.pos=pos;
    qc.size=size;
    final int pl=params.length;
    for (int p=0; p < pl; p++)     qc.set(params[p],args[p],ii);
    return qc.value(expr);
  }
  finally {
    qc.value=cv;
    qc.pos=ps;
    qc.size=sz;
  }
}
