{
  try {
    query(query);
    fail("[" + error + "] expected for query: "+ query);
  }
 catch (  final QueryException ex) {
    final String msg=ex.getMessage();
    boolean found=false;
    for (    final Err e : error)     found|=msg.contains(e.code());
    if (!found) {
      fail("'" + error[0].code() + "' not contained in '"+ msg+ "'.");
    }
  }
}
