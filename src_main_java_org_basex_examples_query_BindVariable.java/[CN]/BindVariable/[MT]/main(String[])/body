{
  Context context=new Context();
  System.out.println("=== BindVariable ===");
  String query="declare variable $var1 as xs:string external; " + "declare variable $var2 as xs:integer external; " + "($var1, $var2)";
  QueryProcessor proc=new QueryProcessor(query,context);
  String string="Hello World!\n";
  String number="123";
  proc.bind("var1",string);
  proc.bind("var2",number,"xs:intege");
  Result result=proc.execute();
  System.out.println("\n* Execute query:");
  System.out.println(result);
  proc.close();
  context.close();
}
