{
  final XQuery query=new XQuery("\n" + "      declare option require-feature \"higher-order-function\";\n" + "      let $f := sum#1 return 0\n"+ "    ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertEq("0") || error("XQST0120")));
}
