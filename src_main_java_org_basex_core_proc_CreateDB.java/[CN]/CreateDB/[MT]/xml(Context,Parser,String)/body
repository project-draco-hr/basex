{
  if (ctx.prop.is(Prop.MAINMEM))   return new MemBuilder(p).build(db);
  if (ctx.pinned(db))   throw new IOException(Main.info(DBLOCKED,db));
  final Builder builder=new DiskBuilder(p);
  try {
    final Data data=builder.build(db);
    if (data.meta.txtindex)     data.setIndex(Type.TXT,new ValueBuilder(data,true).build());
    if (data.meta.atvindex)     data.setIndex(Type.ATV,new ValueBuilder(data,false).build());
    if (data.meta.ftxindex)     data.setIndex(Type.FTX,FTBuilder.get(data,data.meta.wildcards).build());
    data.close();
  }
 catch (  final IOException ex) {
    try {
      builder.close();
    }
 catch (    final IOException exx) {
      Main.debug(exx);
    }
    throw ex;
  }
  return Open.open(ctx,db);
}
