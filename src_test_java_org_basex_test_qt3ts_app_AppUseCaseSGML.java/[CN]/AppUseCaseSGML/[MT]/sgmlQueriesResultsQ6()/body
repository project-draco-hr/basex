{
  final XQuery query=new XQuery("<result> { for $s in //section/@shorttitle return <stitle>{ $s }</stitle> } </result>",ctx);
  query.context(node(file("docs/sgml.xml")));
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<result><stitle shorttitle=\"What is markup?\"/><stitle shorttitle=\"What is SGML?\"/><stitle shorttitle=\"How does SGML work?\"/></result>",false));
}
