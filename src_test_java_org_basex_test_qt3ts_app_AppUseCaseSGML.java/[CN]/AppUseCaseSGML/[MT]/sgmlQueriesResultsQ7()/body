{
  final XQuery query=new XQuery("<result> { for $i in //intro/para[1] return <first_letter>{ substring(string($i), 1, 1) }</first_letter> } </result>",ctx);
  query.context(node(file("docs/sgml.xml")));
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<result><first_letter>W</first_letter><first_letter>W</first_letter><first_letter>M</first_letter><first_letter>S</first_letter><first_letter>Y</first_letter><first_letter>T</first_letter></result>",false));
}
