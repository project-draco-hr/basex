{
  final String db=args[0];
  final String mp=args[1];
  new Close().run(context);
  new Open(db).run(context);
  final Data data=context.data;
  if (data.fs == null)   return error("No DeepFS instance");
  if (!LibraryLoader.load(LibraryLoader.JFUSELIBNAME))   return error("Missing native fuse support.");
  final DeepFS fs=new DeepFS(context);
  new Thread(){
    @Override public void run(){
      try {
        final Class<?> cls=Class.forName("org.deepfs.DeepFSImpl");
        cls.getMethod("mount",new Class[]{String.class,DeepFS.class}).invoke(null,mp,fs);
      }
 catch (      final Exception ex) {
        Main.err("Cannot mount: ",ex);
      }
    }
  }
.start();
  return true;
}
