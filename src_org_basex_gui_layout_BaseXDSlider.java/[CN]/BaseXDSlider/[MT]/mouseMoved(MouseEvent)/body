{
  mouX=e.getX();
  final Range r=new Range();
  left=mouX >= r.xs && mouX <= r.xs + ARROW;
  right=mouX >= r.xe && mouX <= r.xe + ARROW;
  center=mouX + ARROW > r.xs && mouX < r.xe;
  oldMin=encode(min);
  oldMax=encode(max);
  setCursor(left || right ? GUIConstants.CURSORHAND : GUIConstants.CURSORARROW);
}
