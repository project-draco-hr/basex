{
  if (kb) {
    final long sz=(long)size;
    if (sz > (1L << 30))     return ((sz + (1L << 29)) >> 30) + " GB";
    if (sz > (1L << 20))     return ((sz + (1L << 19)) >> 20) + " MB";
    if (sz > (1L << 10))     return ((sz + (1L << 9)) >> 10) + " KB";
    return sz + " Bytes";
  }
  if (date)   return df.format(new Date((long)size * 60000));
  return (long)size == size ? Long.toString((long)size) : Double.toString(size);
}
