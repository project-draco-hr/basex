{
  final XQuery query=new XQuery("let $var := (100+200) div 2 return fn:concat($var treat as xs:string,\"a string\")",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPDY0050"));
}
