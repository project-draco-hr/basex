{
  final XQuery query=new XQuery("let $var := 100 return (xs:decimal($var) treat as xs:decimal, xs:double($var) treat as xs:double, xs:float($var) treat as xs:float, $var treat as xs:integer)",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"100 100 100 100"));
}
