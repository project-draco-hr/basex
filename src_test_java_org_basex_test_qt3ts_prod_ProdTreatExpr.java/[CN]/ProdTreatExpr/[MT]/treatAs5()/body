{
  final XQuery query=new XQuery("let $var := xs:decimal(100) return fn:abs($var cast as xs:integer treat as xs:integer)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("100"));
}
