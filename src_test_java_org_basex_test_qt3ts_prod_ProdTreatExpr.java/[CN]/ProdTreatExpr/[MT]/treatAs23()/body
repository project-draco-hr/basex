{
  final XQuery query=new XQuery("let $var := xs:double(-100) return fn:abs($var cast as xs:decimal treat as xs:decimal)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("100"));
}
