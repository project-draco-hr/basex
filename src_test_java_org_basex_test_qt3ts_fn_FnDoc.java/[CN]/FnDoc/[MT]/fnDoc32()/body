{
  final XQuery query=new XQuery("string(fn:doc($uri)), string(exactly-one(fn:doc($uri)/*))",ctx);
  try {
    query.addDocument("id/Books2.xml",file("fn/id/Books2.xml"));
    query.bind("uri",new XQuery("'id/Books2.xml'",ctx).value());
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"\n  Everyday Italian\n  Giada De Laurentiis\n \n  Everyday Italian\n  Giada De Laurentiis\n"));
}
