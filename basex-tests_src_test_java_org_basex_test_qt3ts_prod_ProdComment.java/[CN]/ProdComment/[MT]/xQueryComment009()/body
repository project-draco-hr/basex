{
  final XQuery query=new XQuery("(: Name: XQueryComment009 :)\n" + "(: Description: Comments inside a conditional expression :)\n" + "\n"+ "\n"+ "\n"+ "if (:test (: yada (: neato :) :) :) (/fs:MyComputer) \n"+ "\tthen (: yada :) \"true\"\n"+ "\telse \"false\"\n"+ "",ctx);
  try {
    query.context(node(file("prod/ForClause/fsx_NS.xml")));
    query.namespace("fs","http://www.example.com/filesystem");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"true"));
}
