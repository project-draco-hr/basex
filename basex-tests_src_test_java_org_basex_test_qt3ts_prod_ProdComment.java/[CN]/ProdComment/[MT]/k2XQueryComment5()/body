{
  final XQuery query=new XQuery("(:*******************************************************:)\n" + "(: Test: K2-XQueryComment-5                              :)\n" + "(: Written by: Frans Englich                             :)\n"+ "(: Date: 2007-11-22T11:31:21+01:00                       :)\n"+ "(: Purpose: Have a direct comment constructor as a last step(#2). :)\n"+ "(:*******************************************************:)\n"+ "let $i := <e>\n"+ "                                            <b/>\n"+ "                                            <b/>\n"+ "                                            <b/>\n"+ "                                        </e>\n"+ "                                        return $i/b/(: some : content (:some content:):)<!--content-->  ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<!--content--><!--content--><!--content-->",false));
}
