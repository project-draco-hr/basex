{
  final XQuery query=new XQuery("(:*******************************************************:)\n" + "(: Test: K-XQueryComment-18                              :)\n" + "(: Written by: Frans Englich                             :)\n"+ "(: Date: 2007-11-22T11:31:22+01:00                       :)\n"+ "(: Purpose: Three comments appearing serially inside a comment. :)\n"+ "(:*******************************************************:)\n"+ "1(: (:one comment:) content (:another comment:) content (:a third:):)\n"+ "\t\t\t   eq 1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(true));
}
