{
  final XQuery query=new XQuery("(: Name: XQueryComment002 :)\n" + "(: Description: Simple use case for XQuery comments :)\n" + "\n"+ "\n"+ "\n"+ "\n"+ "(: This is a comment :)\n"+ "(//fs:Folder)[1]/fs:File[1]/fs:FileName\n"+ "",ctx);
  try {
    query.context(node(file("prod/ForClause/fsx_NS.xml")));
    query.namespace("fs","http://www.example.com/filesystem");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<fs:FileName xmlns:fs=\"http://www.example.com/filesystem\">File00000000000</fs:FileName>",false));
}
