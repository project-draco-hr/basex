{
  String msg=null;
  if (kind != Data.TEXT && kind != Data.COMM && !XMLToken.isQName(token(input.getText())))   msg="Invalid name";
  if (kind == Data.TEXT && input3.getText().length == 0)   msg="Invalid text";
  ok=msg == null;
  info.setIcon(ok ? null : BaseXLayout.icon("warn"));
  info.setText(ok ? " " : msg);
  enableOK(buttons,BUTTONOK,ok);
}
