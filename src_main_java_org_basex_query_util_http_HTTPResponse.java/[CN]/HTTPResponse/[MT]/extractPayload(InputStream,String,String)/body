{
  final BufferedInputStream bis=new BufferedInputStream(io);
  try {
    final ByteList bl=new ByteList();
    for (int i; (i=bis.read()) != -1; )     bl.add(i);
    if (MimeTypes.isXML(c) || c.equals(MimeTypes.TEXT_HTML) || c.startsWith(MimeTypes.MIME_TEXT_PREFIX))     return new NewlineInput(new IOContent(bl.toArray()),ce).content();
    return bl.toArray();
  }
  finally {
    bis.close();
  }
}
