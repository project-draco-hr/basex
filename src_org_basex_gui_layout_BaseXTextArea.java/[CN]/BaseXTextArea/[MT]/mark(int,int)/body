{
  final int count=counter;
  new Thread(){
    @Override public void run(){
      Performance.sleep(500);
      if (count != counter)       return;
      try {
        if (high != null)         getHighlighter().removeHighlight(high);
        high=getHighlighter().addHighlight(s,e,HIGH);
      }
