{
  return new Iter(){
    boolean skip, direct;
    Iter iter;
    long cpos;
    @Override public Item next() throws QueryException {
      if (skip)       return null;
      if (iter == null) {
        if (index) {
          final Item it=preds[0].ebv(qc,info);
          final long l=it.itr(info);
          final Expr e=Pos.get(l,info);
          if (l != it.dbl(info) || !(e instanceof Pos))           return null;
          pos=(Pos)e;
        }
        iter=qc.iter(root);
        cpos=1;
        if (pos != null || last) {
          final long s=iter.size();
          if (s == 0)           return null;
          if (s != -1) {
            cpos=last ? s : pos.min;
            if (cpos > s)             return null;
            direct=preds.length == 1;
          }
        }
      }
      final long cp=qc.pos;
      final long cs=qc.size;
      try {
        Item item;
        if (direct) {
          item=iter.size() < cpos ? null : iter.get(cpos - 1);
          qc.pos=cpos++;
        }
 else {
          Item lnode=null;
          while ((item=iter.next()) != null) {
            qc.checkStop();
            qc.size=0;
            qc.pos=cpos++;
            if (preds(item,qc))             break;
            lnode=item;
            qc.pos=cp;
            qc.size=cs;
          }
          if (last)           item=lnode;
        }
        skip=last || pos != null && pos.skip(qc);
        return item;
      }
  finally {
        qc.pos=cp;
        qc.size=cs;
      }
    }
  }
;
}
