{
  return new Iter(){
    final int s=ctx.vars.size();
    Iter it;
    @Override public Item next() throws QueryException {
      if (it == null && qe != null)       it=err(ctx,qe);
      try {
        if (it == null)         it=ctx.iter(expr);
        return it.next();
      }
 catch (      final QueryException ex) {
        ctx.vars.reset(s);
        it=err(ctx,ex);
      }
      return it.next();
    }
  }
;
}
