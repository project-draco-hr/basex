{
  return new Iter(){
    final Iter iter=ctx.iter(root);
    final Item ci=ctx.item;
    final int cp=ctx.pos;
    boolean first=true;
    boolean finished=false;
    @Override public Item next() throws XQException {
      if (finished) {
        ctx.item=ci;
        ctx.pos=cp;
        return null;
      }
      if (first) {
        first=false;
        ctx.pos=1;
      }
      Item i;
      while ((i=iter.next()) != null) {
        ctx.item=i;
        i=ctx.iter(pred[0]).ebv();
        final boolean found=i.n() ? i.dbl() == ctx.pos : i.bool();
        ctx.pos++;
        if (found) {
          ctx.item.score(i.score());
          if (num)           finished=true;
          return ctx.item;
        }
      }
      if (last) {
        finished=true;
        return ctx.item;
      }
      ctx.item=ci;
      ctx.pos=cp;
      return null;
    }
  }
;
}
