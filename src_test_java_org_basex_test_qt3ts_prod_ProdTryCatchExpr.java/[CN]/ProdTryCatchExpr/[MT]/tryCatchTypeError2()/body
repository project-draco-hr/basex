{
  final XQuery query=new XQuery("try { let $i as xs:string := 1 return $i } catch err:XPTY0004 { \"Type error\" }",ctx);
  try {
    query.namespace("err","http://www.w3.org/2005/xqt-errors");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((error("XPTY0004") || assertEq("\"Type error\"")));
}
