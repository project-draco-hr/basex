{
  final XQuery query=new XQuery("let $x := \"\" return try {\n" + "      $x cast as xs:integer\n" + "      }\n"+ "      catch err:FORG0001 | err:XPTY0004 {\n"+ "      0\n"+ "      }",ctx);
  try {
    query.namespace("err","http://www.w3.org/2005/xqt-errors");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("0"));
}
