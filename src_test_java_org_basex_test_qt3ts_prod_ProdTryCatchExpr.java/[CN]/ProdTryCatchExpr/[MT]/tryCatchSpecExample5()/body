{
  final XQuery query=new XQuery("declare function local:thrice($x as xs:integer) as xs:integer\n" + "      {\n" + "      3*$x\n"+ "      };\n"+ "      \n"+ "      local:thrice(try { \"oops\" } catch * { 3 } )\n"+ "    ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
