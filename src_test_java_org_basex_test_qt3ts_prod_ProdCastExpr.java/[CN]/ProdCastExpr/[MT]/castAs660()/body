{
  final XQuery query=new XQuery("let $var := xs:long(120) cast as xs:short return $var instance of xs:short",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(true));
}
