{
  final XQuery query=new XQuery("( fn:unparsed-text( \"http://www.w3.org/fots/unparsed-text/text-plain-utf-8.txt\",\n" + "                                if (current-date() eq xs:date('1900-01-01'))\n" + "                                then \"utf-8\"\n"+ "                                else 1 ),\n"+ "              fn:unparsed-text( \"http://www.w3.org/fots/unparsed-text/text-plain-utf-8.txt\",\n"+ "                                if (current-date() eq xs:date('1900-01-01'))\n"+ "                                then 1\n"+ "                                else \"utf-8\") )",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
