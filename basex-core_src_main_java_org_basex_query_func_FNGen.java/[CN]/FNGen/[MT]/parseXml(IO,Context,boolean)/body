{
  final Options opts=ctx.options;
  final boolean chop=opts.is(Options.CHOP);
  try {
    opts.set(Options.CHOP,false);
    return new DBNode(frag || opts.is(Options.INTPARSE) ? new XMLParser(input,ctx.options,frag) : new SAXWrapper(input,ctx.options));
  }
  finally {
    opts.set(Options.CHOP,chop);
  }
}
