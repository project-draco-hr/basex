{
  final FTIter ir=ftexpr.iter(ctx);
  return new Iter(){
    @Override public Item next() throws QueryException {
      final Tokenizer tmp=ctx.fttoken;
      ctx.fttoken=ft;
      final FTItem it=ir.next();
      ctx.fttoken=tmp;
      if (ctx.ftpos != null && it != null)       ctx.ftpos.add(it.pre,it.all);
      return it;
    }
  }
;
}
