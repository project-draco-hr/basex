{
  new BXCode(){
    @Override void code() throws IOException {
      if (!cs.execute(new Open(root(rp))))       throw new JaxRxException(404,cs.info());
      final File file=cache(input);
      final boolean ok=cs.execute(new Add(file.toString()));
      file.delete();
      if (!ok)       throw new JaxRxException(400,cs.info());
    }
  }
.run();
}
