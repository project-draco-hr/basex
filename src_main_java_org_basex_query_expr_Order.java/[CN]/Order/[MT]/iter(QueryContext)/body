{
  return new Iter(){
    int e, p=-1;
    int[] order;
    Iter ir;
    @Override public Item next() throws QueryException {
      if (order == null) {
        e=vl.size();
        order=new int[e];
        for (int i=0; i < e; ++i)         order[i]=i;
        sort(order,0,e);
      }
      while (true) {
        if (ir != null) {
          final Item i=ir.next();
          if (i != null)           return i;
          ir=null;
        }
 else {
          if (++p == e)           return null;
          ir=vl.get(order[p]).iter(ctx);
        }
      }
    }
  }
;
}
