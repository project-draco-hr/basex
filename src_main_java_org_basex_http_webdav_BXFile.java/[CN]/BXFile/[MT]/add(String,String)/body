{
  final LocalSession session=http.session();
  final LocalQuery q=session.query("declare option db:chop 'false'; " + "if(" + _DB_IS_RAW.args("$db","$path") + ") "+ " then "+ _DB_STORE.args("$tdb","$tpath",_DB_RETRIEVE.args("$db","$path"))+ " else "+ _DB_ADD.args("$tdb",_DB_OPEN.args("$db","$path"),"$tpath"));
  q.bind("db",db);
  q.bind("path",path);
  q.bind("tdb",tdb);
  q.bind("tpath",tpath);
  q.execute();
}
