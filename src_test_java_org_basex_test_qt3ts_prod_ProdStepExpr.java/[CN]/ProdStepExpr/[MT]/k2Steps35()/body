{
  final XQuery query=new XQuery("<e/>[1]/text{string-join(., \" \")}, 1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertCount(2) && assertQuery("string($result[1]) eq \"\"") && assertQuery("$result[2] eq 1")));
}
