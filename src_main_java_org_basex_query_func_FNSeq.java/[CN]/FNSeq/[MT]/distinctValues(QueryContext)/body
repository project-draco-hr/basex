{
  if (expr.length == 2)   checkColl(expr[1],ctx,input);
  return new Iter(){
    final ItemSet map=new ItemSet();
    final Iter ir=expr[0].iter(ctx);
    @Override public Item next() throws QueryException {
      while (true) {
        Item i=ir.next();
        if (i == null)         return null;
        ctx.checkStop();
        i=atom(i);
        if (map.index(input,i))         return i;
      }
    }
  }
;
}
