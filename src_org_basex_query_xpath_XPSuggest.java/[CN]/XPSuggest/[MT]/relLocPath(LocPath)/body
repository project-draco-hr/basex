{
  ArrayList<SkelNode> list=null;
  if (stack.size() == 0) {
    if (!ctx.root())     return super.relLocPath(path);
    list=new ArrayList<SkelNode>();
    list.add(skel.root);
  }
 else {
    list=skel.desc(stack.peek(),0,Data.ELEM,false);
  }
  stack.push(list);
  final LocPath lp=super.relLocPath(path);
  filter(false);
  return lp;
}
