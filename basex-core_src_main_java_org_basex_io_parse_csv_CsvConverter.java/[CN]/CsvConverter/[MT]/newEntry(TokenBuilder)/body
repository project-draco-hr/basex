{
  if (header) {
    headers.add(atts ? entry.finish() : XMLToken.encode(entry.finish(),lax));
  }
 else {
    final byte[] name=headers.get(col);
    final FElem e;
    if (atts) {
      e=new FElem(ENTRY);
      if (name != null)       e.add(NAME,name);
    }
 else {
      e=new FElem(name == null ? ENTRY : name);
    }
    if (record != null)     record.add(e.add(entry.finish()));
    ++col;
  }
  entry.reset();
}
