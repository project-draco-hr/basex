{
  try {
    cs.sout.write(cmd.code);
    cs.send(arg);
    final BufferInput bi=new BufferInput(cs.sin);
    final ByteList bl=bi.content();
    if (!cs.ok(bi))     throw new BaseXException(bi.readString());
    return bl;
  }
 catch (  final IOException ex) {
    throw new BaseXException(ex);
  }
}
