{
  final XQuery query=new XQuery("declare base-uri \"http://example.org\"; fn:string((<anElement>some content</anElement>)/fn:base-uri())",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"http://example.org"));
}
