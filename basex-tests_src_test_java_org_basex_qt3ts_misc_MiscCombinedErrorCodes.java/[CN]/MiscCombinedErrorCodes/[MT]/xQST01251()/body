{
  final XQuery query=new XQuery("\n" + "        let $f := %public function($arg as xs:integer) as xs:integer \n" + "                          { $arg + 1 }\n"+ "        return $f(1)\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0125"));
}
