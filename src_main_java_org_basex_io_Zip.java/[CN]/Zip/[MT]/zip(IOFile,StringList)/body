{
  if (!(archive instanceof IOFile))   throw new FileNotFoundException(archive.path());
  final byte[] data=new byte[IO.BLOCKSIZE];
  final ZipOutputStream out=new ZipOutputStream(new BufferedOutputStream(new FileOutputStream(archive.path())));
  curr=0;
  try {
    out.setLevel(1);
    total=files.size();
    for (    final String file : files) {
      curr++;
      final FileInputStream in=new FileInputStream(new File(root.file(),file));
      try {
        out.putNextEntry(new ZipEntry(root.name() + '/' + file));
        for (int c; (c=in.read(data)) != -1; )         out.write(data,0,c);
        out.closeEntry();
      }
  finally {
        in.close();
      }
    }
  }
  finally {
    out.close();
  }
}
