{
  super(root);
  BaseXLayout.addInteraction(this,w);
  setLargeModel(true);
  addMouseListener(new MouseAdapter(){
    @Override public void mousePressed(    final MouseEvent e){
      if (SwingUtilities.isRightMouseButton(e))       setSelectionRow(getClosestRowForLocation(e.getX(),e.getY()));
    }
  }
);
}
