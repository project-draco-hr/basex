{
  return new Iterator<Span>(){
{
      init();
    }
    int calledHasNext;
    @Override public boolean hasNext(){
      if (moreSC()) {
        calledHasNext++;
        return true;
      }
      return false;
    }
    @Override public Span next(){
      if (calledHasNext == 0) {
        if (hasNext())         return next();
        throw new NoSuchElementException();
      }
      calledHasNext--;
      final int left=p;
      return new Span(nextSC(),left,p,pos,sc);
    }
    @Override public void remove(){
      Util.notimplemented();
    }
  }
;
}
