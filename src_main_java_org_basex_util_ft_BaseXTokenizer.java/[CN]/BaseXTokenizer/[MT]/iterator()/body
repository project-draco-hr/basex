{
  return new Iterator<Span>(){
{
      init();
    }
    int next;
    @Override public boolean hasNext(){
      if (next <= 0 && (specialChars ? moreSC() : more()))       next++;
      return next > 0;
    }
    @Override public Span next(){
      if (--next < 0)       hasNext();
      return new Span(get(),p,p,pos,sc);
    }
    @Override public void remove(){
      Util.notimplemented();
    }
  }
;
}
