{
  final XQuery query=new XQuery("declare base-uri \"http:/www.abc&#xa;.com\"; fn:string(fn:static-base-uri())",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertStringValue(false,"http:/www.abc .com") || error("XQST0046")));
}
