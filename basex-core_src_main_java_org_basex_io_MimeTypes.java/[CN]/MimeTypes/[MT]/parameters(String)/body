{
  final int p=mimeType.indexOf(';');
  if (p == -1)   return "";
  final StringBuilder sb=new StringBuilder();
  for (  final String param : Strings.split(mimeType.substring(p + 1),';')) {
    if (sb.length() != 0)     sb.append(',');
    sb.append(param.replace(",",",,").trim());
  }
  return sb.toString();
}
