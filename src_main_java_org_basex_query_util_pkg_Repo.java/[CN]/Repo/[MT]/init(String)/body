{
  if (init)   return;
  init=true;
  if (repo != null)   context.prop.set(Prop.REPOPATH,repo);
  if (repo != null)   path=repo;
  final File repoDir=new File(path);
  final File[] dirs=repoDir.listFiles();
  if (dirs == null)   return;
  for (  final File dir : dirs)   if (dir.isDirectory())   readPkg(dir);
}
