{
  final int[] roots=c.current().pres;
  final int rl=roots.length;
  if (rl == 0)   return 0;
  final double w=(dw - BORDER_PADDING - ds) / (double)rl;
  if (w < 2) {
    return -1;
  }
  rects=new TreeRect[rl][][];
  for (int i=0; i < rl; ++i) {
    generateRects(sub,c,g,i,ds,w,slim);
  }
  return w;
}
