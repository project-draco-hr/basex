{
  final Query q=s.query("for $d in " + DBLIST.args("$db","$path") + "let $t := $tpath ||'/'|| substring($d, string-length($path) + 1) "+ "return if ("+ DBISRAW.args("$db","$d")+ ") then "+ DBSTORE.args("$tdb","$t",DBRETRIEVE.args("$db","$d"))+ " else "+ DBADD.args("$tdb",DBOPEN.args("$db","$d"),"$t"));
  q.bind("db",db);
  q.bind("path",path);
  q.bind("tdb",tdb);
  q.bind("tpath",tpath);
  q.execute();
}
