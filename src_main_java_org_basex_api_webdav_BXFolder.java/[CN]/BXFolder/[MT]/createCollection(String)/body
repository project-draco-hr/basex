{
  try {
    final Session s=BXResourceFactory.login(user,pass);
    try {
      final String newFolder=path + DIRSEP + folder;
      s.execute(new Open(db));
      s.execute(new Add("<empty/>","EMPTY.xml",newFolder));
      return new BXFolder(db,newFolder,user,pass);
    }
  finally {
      s.close();
    }
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  return null;
}
