{
  try {
    final Session s=factory.login(user,pass);
    try {
      final String newFolder=path + SEP + folder;
      s.execute(new Open(db));
      s.execute(new Add(DUMMYCONTENT,DUMMY,newFolder));
      return new BXFolder(db,newFolder,factory,user,pass);
    }
  finally {
      s.close();
    }
  }
 catch (  Exception ex) {
    handle(ex);
  }
  return null;
}
