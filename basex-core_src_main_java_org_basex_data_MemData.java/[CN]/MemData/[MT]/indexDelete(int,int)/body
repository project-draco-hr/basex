{
  final boolean textI=meta.textindex, attrI=meta.attrindex;
  if (textI || attrI) {
    final int l=pre + size;
    for (int p=pre; p < l; ++p) {
      final int k=kind(p);
      final boolean text=k == TEXT || k == COMM || k == PI;
      if (text || k == ATTR)       values(text).delete(text(p,text),id(p));
    }
  }
}
