{
  final XQuery query=new XQuery("\n" + "        import module namespace m=\"http://www.w3.org/TestModules/dfd-module-001\";\n" + "        declare decimal-format df001 grouping-separator=\"!\";\n"+ "        format-number(123456.789,'#!###!###.###','df001')||'-'||m:do()\n"+ "      ",ctx);
  try {
    query.addModule("http://www.w3.org/TestModules/dfd-module-001",file("prod/DecimalFormatDecl/dfd-module-001.xq"));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"123!456.789-123'456.789"));
}
