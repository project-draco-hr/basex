{
  final XQuery query=new XQuery("\n" + "        declare namespace a=\"http://a.com/\";\n" + "        declare namespace b=\"http://a.com/\";\n"+ "        declare decimal-format a:one digit='$';\n"+ "        declare decimal-format two digit='$';\n"+ "        declare decimal-format three digit='$';\n"+ "        declare decimal-format four digit='$';\n"+ "        declare decimal-format five digit='$';\n"+ "        declare decimal-format b:one minus-sign=\"_\";\n"+ "        declare default decimal-format minus-sign='_';\n"+ "        format-number(931.4857,'000.$$0')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0111"));
}
