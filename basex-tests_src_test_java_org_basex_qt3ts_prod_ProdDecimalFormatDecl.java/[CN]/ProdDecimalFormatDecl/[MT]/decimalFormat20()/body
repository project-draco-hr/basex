{
  final XQuery query=new XQuery("\n" + "        declare namespace foo=\"http://foo.ns\";\n" + "        declare decimal-format foo:decimal1  decimal-separator=\"!\" grouping-separator=\"*\";\n"+ "        declare decimal-format decimal1  decimal-separator=\"*\" grouping-separator=\"!\";\n"+ "        format-number(1234.567,'#*###*###!###','foo:decimal1')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"1*234!567"));
}
