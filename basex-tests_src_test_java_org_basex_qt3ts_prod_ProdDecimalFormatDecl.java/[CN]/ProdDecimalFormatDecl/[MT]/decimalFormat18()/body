{
  final XQuery query=new XQuery("\n" + "        declare default decimal-format minus-sign=\"_\";\n" + "        format-number(-26931.4,'###,###.###')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"_26,931.4"));
}
