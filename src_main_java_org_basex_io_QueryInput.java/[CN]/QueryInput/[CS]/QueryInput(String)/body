{
  original=in;
  input=IO.get(in);
  if (Databases.validName(in)) {
    db=in;
  }
 else {
    final int s=in.indexOf('/');
    if (s > 0 && in.indexOf(':') == -1) {
      final String n=in.substring(0,s);
      if (Databases.validName(n)) {
        path=in.substring(s + 1);
        db=n;
      }
    }
  }
}
