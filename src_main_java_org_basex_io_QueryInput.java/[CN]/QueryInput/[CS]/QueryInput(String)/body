{
  original=input;
  io=IO.get(input);
  if (MetaData.validName(input,false)) {
    db=input;
  }
 else {
    final int s=input.indexOf('/');
    if (s > 0 && input.indexOf(':') == -1) {
      final String n=input.substring(0,s);
      if (MetaData.validName(n,false)) {
        path=input.substring(s + 1);
        db=n;
      }
    }
  }
}
