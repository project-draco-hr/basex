{
  final XQuery query=new XQuery("declare namespace my = \"http://example.com/MyNamespace/\";\n" + "        declare variable $my:error-qname := QName(\"http:example.org/\", \"prefix:ncname\");\n" + "        declare function my:error($choice, $msg as xs:string) as empty-sequence() { if($choice) then error($my:error-qname, concat('No luck: ', $msg)) else () };\n"+ "        empty((my:error(false(), \"msg\"), my:error(false(), \"The message\")))",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertBoolean(true) || error("XPST0005")));
}
