{
  final XQuery query=new XQuery("declare variable $local:myVar := 1;\n" + "        declare function local:myFunction($local:myVar) { $local:myVar };\n" + "        $local:myVar, local:myFunction(2)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"1 2"));
}
