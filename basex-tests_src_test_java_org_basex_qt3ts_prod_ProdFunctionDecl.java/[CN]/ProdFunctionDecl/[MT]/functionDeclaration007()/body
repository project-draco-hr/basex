{
  final XQuery query=new XQuery("\n" + "        declare variable $a := 1;\n" + "        declare function local:foo($a as xs:integer) { \n"+ "            if ($a > 100) then $a else let $a := $a + 1 return local:foo($a) };\n"+ "        local:foo($a)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("101"));
}
