{
  final XQuery query=new XQuery("\n" + "        declare function local:foo() as xs:boolean { text {local:doesNotExist()} };\n" + "        1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPST0017"));
}
