{
  final XQuery query=new XQuery("\n" + "        declare function local:myFunction($arg as xs:integer) { $arg };\n" + "        local:myFunction(1.0)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
