{
  final XQuery query=new XQuery("\n" + "        declare function local:func($unused, $b as xs:integer, $c as xs:integer) { $b + $c };\n" + "        local:func(1, 2, 3)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("5"));
}
