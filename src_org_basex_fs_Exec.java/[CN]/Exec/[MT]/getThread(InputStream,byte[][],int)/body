{
  return new Thread(){
    @Override public void run(){
      final TokenBuilder tb=new TokenBuilder();
      final byte[] buf=new byte[2048];
      try {
        int i=0;
        while ((i=is.read(buf)) != -1) {
          tb.add(i == buf.length ? buf : Array.finish(buf,i));
        }
      }
 catch (      final IOException ex) {
        BaseX.debug(ex);
      }
      c[n]=tb.finish();
    }
  }
;
}
