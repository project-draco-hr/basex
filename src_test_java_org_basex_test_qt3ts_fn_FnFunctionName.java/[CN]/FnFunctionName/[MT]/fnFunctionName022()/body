{
  final XQuery query=new XQuery("\n" + "\tdeclare function local:add($arg1, $arg2, $arg3)\n" + "        {\n"+ "           $arg1 + $arg2 + $arg3\n"+ "        };\n"+ "\n"+ "\tfn:function-name( local:add#3 )\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertEq("fn:QName(\"http://www.w3.org/2005/xquery-local-functions\",\n                              \"local:add\")"));
}
