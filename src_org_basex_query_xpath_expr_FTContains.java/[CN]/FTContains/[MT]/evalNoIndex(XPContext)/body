{
  final FTTokenizer tmp=ctx.ftitem;
  ctx.ftitem=ft;
  final Nod c=ctx.item;
  final Item it=cont.eval(ctx);
  boolean found=false;
  if (it instanceof Nod) {
    ctx.item=(Nod)it;
    final Nod ns=(Nod)it;
    for (int n=0; n < ns.size; n++) {
      ft.init(ns.data.atom(ns.nodes[n]));
      found=query.eval(ctx).bool();
      if (found)       break;
    }
  }
 else {
    ft.init(it.str());
    found=query.eval(ctx).bool();
  }
  ctx.ftitem=tmp;
  ctx.item=c;
  return Bln.get(found);
}
