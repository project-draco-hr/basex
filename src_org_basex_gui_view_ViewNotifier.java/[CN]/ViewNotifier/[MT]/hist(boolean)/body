{
  String query="";
  if (forward) {
    if (hist == maxhist)     return;
    query=queries[++hist];
  }
 else {
    if (hist == 0)     return;
    marked[hist]=gui.context.marked();
    query=queries[--hist];
  }
  init(gui.context,cont[hist],marked[hist]);
  gui.input.setText(query);
  for (  final View v : view)   if (v.visible())   v.refreshContext(forward,false);
  gui.refreshControls();
}
