{
  if (gui.focused == -1)   return;
  final Context context=gui.context;
  Nodes nodes=context.marked();
  if (mode == 0) {
    nodes=new Nodes(gui.focused,context.data());
  }
 else   if (mode == 1) {
    nodes.union(new int[]{gui.focused});
  }
 else {
    nodes.toggle(gui.focused);
  }
  mark(nodes,vw);
}
