{
  query(transform("<doc><tree/></doc>","replace node $input//tree with <tree/>"),"<doc><tree/></doc>");
  query(transform("<doc><tree><n/></tree></doc>","replace node $input//tree with <tree/>"),"<doc><tree/></doc>");
  query(transform("<doc><tree><n/></tree></doc>","replace node $input//tree with <tree>text</tree>"),"<doc><tree>text</tree></doc>");
  query(transform("<doc><tree><n/></tree></doc>","replace node $input//tree with <tree/>"),"<doc><tree/></doc>");
  query(transform("<doc><tree id=\"0\"/></doc>","replace node $input//@id with (attribute id {\"1\"}, attribute id2 {\"2\"})"),"<doc><tree id=\"1\" id2=\"2\"/></doc>");
  query(transform("<doc><tree1 a='0'>text1<a/><!--comm1--><a/><?p1 i1?><?p11?></tree1></doc>","replace node $input//tree1 with " + "<tree2 b='1'>text2<a/><!--comm2--><a/><?p2 i2?><?p22?></tree2>"),"<doc><tree2 b=\"1\">text2<a/><!--comm2--><a/><?p2 i2?><?p22 ?></tree2></doc>");
  query(transform("<doc><tree id1=\"0\"/></doc>","replace node $input//@id1 with attribute id2 {\"1\"}"),"<doc><tree id2=\"1\"/></doc>");
}
