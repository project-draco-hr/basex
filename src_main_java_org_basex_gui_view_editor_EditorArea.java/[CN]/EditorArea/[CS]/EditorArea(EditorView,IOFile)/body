{
  super(true,v.gui);
  view=v;
  file=f;
  label=new BaseXLabel(f.name());
  setSyntax(f,false);
  initText(EMPTY);
  addFocusListener(new FocusAdapter(){
    @Override public void focusGained(    final FocusEvent e){
      if (opened() && !modified) {
        try {
          final long t=tstamp;
          if (file.timeStamp() != t) {
            setText(new IOFile(file.path()).read());
            tstamp=t;
          }
        }
 catch (        final IOException ex) {
        }
      }
    }
  }
);
}
