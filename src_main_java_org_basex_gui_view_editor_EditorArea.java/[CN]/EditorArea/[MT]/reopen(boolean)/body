{
  if (!opened())   return;
  final long ts=file.timeStamp();
  if ((tstamp != ts || force) && BaseXDialog.confirm(gui,Util.info(REOPEN_FILE_X,file.name()))) {
    try {
      setText(file.read());
      file(file);
    }
 catch (    final IOException ex) {
      BaseXDialog.error(gui,FILE_NOT_OPENED);
    }
  }
  tstamp=ts;
}
