{
  int v=Token.toSimpleInt(val);
  if (v != Integer.MIN_VALUE) {
    node.setTextInlined(true);
  }
 else {
    node.setTextInlined(false);
    if (txt) {
      v=txtlen;
      txtlen+=xout.writeBytes(val);
    }
 else {
      v=vallen;
      vallen+=vout.writeBytes(val);
    }
  }
  node.setTextId(v);
}
