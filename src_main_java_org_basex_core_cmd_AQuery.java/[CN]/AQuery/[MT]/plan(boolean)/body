{
  if (c != prop.is(Prop.COMPPLAN))   return;
  try {
    if (prop.is(Prop.DOTPLAN)) {
      final ArrayOutput ao=new ArrayOutput();
      final DOTSerializer d=new DOTSerializer(ao,prop.is(Prop.DOTCOMPACT));
      qp.plan(d);
      d.close();
      final String dot=context.query == null ? "plan.dot" : context.query.name().replaceAll("\\..*?$",".dot");
      new IOFile(dot).write(ao.toArray());
      if (prop.is(Prop.DOTDISPLAY))       new ProcessBuilder(prop.get(Prop.DOTTY),dot).start();
    }
    if (prop.is(Prop.XMLPLAN)) {
      final ArrayOutput ao=new ArrayOutput();
      qp.plan(new XMLSerializer(ao));
      info(NL + QUERYPLAN);
      info(ao.toString());
    }
  }
 catch (  final Exception ex) {
    Util.stack(ex);
  }
}
