{
  final GetOpts g=new GetOpts(args,"cl:V:");
  while (g.more()) {
    final int ch=checkOpt(g);
switch (ch) {
case 'c':
      cFlag=true;
    break;
case 'l':
  limit=Integer.parseInt(g.getOptarg());
lFlag=true;
break;
case 'V':
version=g.getOptarg().charAt(0);
break;
}
}
path=g.getPath();
if (path == null) error("",100);
}
