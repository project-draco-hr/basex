{
  return new NodeIter(){
    AxisIter ai;
    @Override public ANode next() throws QueryException {
      if (ai == null)       ai=axis.iter(checkNode(qc));
      for (ANode node; (node=ai.next()) != null; ) {
        qc.checkStop();
        if (test.eq(node) && preds(node,qc))         return node.finish();
      }
      return null;
    }
  }
;
}
