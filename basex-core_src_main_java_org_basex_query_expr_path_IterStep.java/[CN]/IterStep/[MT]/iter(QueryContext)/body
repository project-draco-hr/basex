{
  return new NodeIter(){
    BasicNodeIter iter;
    @Override public ANode next() throws QueryException {
      if (iter == null)       iter=axis.iter(checkNode(qc));
      for (ANode node; (node=iter.next()) != null; ) {
        qc.checkStop();
        if (test.eq(node) && preds(node,qc))         return node.finish();
      }
      return null;
    }
  }
;
}
