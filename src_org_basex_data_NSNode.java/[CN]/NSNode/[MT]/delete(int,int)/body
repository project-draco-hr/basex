{
  int s=fnd(p);
  if (s == -1 || ch[s].pre != p)   s++;
  int e=s;
  while (e < ch.length && p + nr > ch[e].pre)   e++;
  if (s != e) {
    final NSNode[] nd=new NSNode[ch.length - e + s];
    System.arraycopy(ch,0,nd,0,s);
    System.arraycopy(ch,e,nd,s,ch.length - e);
    ch=nd;
  }
  update(s,-nr);
}
