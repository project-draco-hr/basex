{
  final Prop pr=d.meta.prop;
  IndexBuilder b=null;
switch (i) {
case TXT:
    b=new ValueBuilder(d,true);
  break;
case ATV:
b=new ValueBuilder(d,false);
break;
case FTX:
b=d.meta.ftfz ? new FTFuzzyBuilder(d,pr) : new FTTrieBuilder(d,pr);
break;
default :
break;
}
d.closeIndex(i);
progress(b);
d.setIndex(i,b.build());
}
