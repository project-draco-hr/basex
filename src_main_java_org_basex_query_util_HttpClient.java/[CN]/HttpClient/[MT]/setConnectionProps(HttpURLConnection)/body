{
  conn.setDoInput(true);
  if (body != null)   conn.setDoOutput(true);
  conn.setRequestMethod(string(reqAttrs.get(METHOD)).toUpperCase());
  if (reqAttrs.get(TIMEOUT) != null)   conn.setConnectTimeout(Num.read(reqAttrs.get(TIMEOUT),0));
  if (reqAttrs.get(REDIR) != null)   setFollowRedirects(Bln.parse(reqAttrs.get(REDIR),info));
}
