{
  final StringBuilder sb=new StringBuilder();
  sb.append(expr);
  if (ordered)   sb.append(" ordered");
  if (start)   sb.append(" at start");
  if (end)   sb.append(" at end");
  if (content)   sb.append(" entire content");
  if (dunit != null) {
    sb.append(" distance(");
    sb.append(dist[0]);
    sb.append(",");
    sb.append(dist[1]);
    sb.append(")");
  }
  return sb.toString();
}
