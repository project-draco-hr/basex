{
  final StringBuilder sb=new StringBuilder();
  sb.append(expr);
  if (pos.ordered)   sb.append(" " + ORDERED);
  if (pos.start)   sb.append(" " + AT + " "+ START);
  if (pos.end)   sb.append(" " + AT + " "+ END);
  if (pos.content)   sb.append(" " + ENTIRE + " "+ CONTENT);
  if (pos.dunit != null) {
    sb.append(" distance(");
    sb.append(dist[0]);
    sb.append(",");
    sb.append(dist[1]);
    sb.append(")");
  }
  return sb.toString();
}
