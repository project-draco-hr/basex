{
  final XQuery query=new XQuery("declare base-uri \"http://example.org\"; \n" + "        let $var := <anElement xml:base=\"http://www.examples.com\">With some content</anElement> \n" + "        return fn:string(fn:base-uri($var))",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"http://www.examples.com"));
}
