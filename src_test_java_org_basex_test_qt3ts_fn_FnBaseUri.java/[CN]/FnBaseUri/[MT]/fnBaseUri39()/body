{
  final XQuery query=new XQuery("let $var := <anElement xml:base=\"http://www.examples.com\">With some content</anElement> \n" + "        return fn:string(($var)/base-uri())",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"http://www.examples.com"));
}
