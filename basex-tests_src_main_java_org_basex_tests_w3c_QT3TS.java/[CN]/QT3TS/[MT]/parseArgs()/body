{
  final MainParser arg=new MainParser(this);
  while (arg.more()) {
    if (arg.dash()) {
      final char c=arg.next();
      if (c == 'v') {
        verbose=true;
      }
 else       if (c == 'a') {
        all=true;
      }
 else       if (c == 'd') {
        ctx.soptions.set(StaticOptions.DEBUG,true);
      }
 else       if (c == 'i') {
        ignoring=true;
      }
 else       if (c == 'e') {
        errors=false;
      }
 else       if (c == 'r') {
        report=new QT3TSReport();
      }
 else       if (c == 's') {
        slow=new TreeMap<>();
      }
 else       if (c == 'p') {
        final File f=new File(arg.string());
        if (!f.isDirectory())         throw arg.usage();
        basePath=f.getCanonicalPath();
      }
 else {
        throw arg.usage();
      }
    }
 else {
      single=arg.string();
      maxout=Integer.MAX_VALUE;
    }
  }
}
