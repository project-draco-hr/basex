{
  final XQuery query=new XQuery("\n" + "        declare function local:f($d as xs:integer) { 10 div $d };\n" + "        declare variable $t as xs:string := \"text\";\n"+ "        try { local:f(0) } catch * { try { local:f($t cast as xs:integer) } catch * {local-name-from-QName($err:code)} }\n"+ "      ",ctx);
  try {
    query.namespace("err","http://www.w3.org/2005/xqt-errors");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"FORG0001"));
}
