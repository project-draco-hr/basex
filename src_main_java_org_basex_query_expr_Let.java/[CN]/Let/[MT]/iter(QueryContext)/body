{
  final Var v=var.copy();
  return new Iter(){
    /** 
 * Variable stack size. 
 */
    private int vs;
    /** 
 * Iterator flag. 
 */
    private boolean more;
    @Override public Item next() throws QueryException {
      if (!more) {
        vs=ctx.vars.size();
        final Iter ir=ctx.iter(expr);
        Item it;
        if (score) {
          double s=0;
          int c=0;
          while ((it=ir.next()) != null) {
            s+=it.score();
            c++;
          }
          it=Dbl.get(ctx.score.let(s,c));
        }
 else {
          it=ir.finish();
        }
        ctx.vars.add(v.bind(it,ctx));
        more=true;
        return it;
      }
      reset();
      return null;
    }
    @Override public long size(){
      return 1;
    }
    @Override public Item get(    final long i) throws QueryException {
      reset();
      return next();
    }
    @Override public boolean reset(){
      if (more) {
        ctx.vars.reset(vs);
        more=false;
      }
      return true;
    }
  }
;
}
