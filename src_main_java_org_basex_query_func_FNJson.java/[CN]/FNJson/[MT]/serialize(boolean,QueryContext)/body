{
  final ANode node=checkNode(checkItem(expr[0],ctx));
  final ArrayOutput ao=new ArrayOutput();
  try {
    final SerializerProp props=new SerializerProp();
    final Serializer json=ml ? new JsonMLSerializer(ao,props) : new JSONSerializer(ao,props);
    json.serialize(node);
    json.close();
  }
 catch (  final SerializerException ex) {
    throw ex.getCause(info);
  }
catch (  final IOException ex) {
    SERANY.thrw(info,ex);
  }
  return Str.get(delete(ao.toArray(),'\r'));
}
