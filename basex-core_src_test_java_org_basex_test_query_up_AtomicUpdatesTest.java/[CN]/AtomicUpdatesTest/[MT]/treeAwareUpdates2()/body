{
  final String doc="<a><b/></a>";
  final AtomicUpdateList l=atomics(doc);
  l.addInsert(3,1,data("<d/>"),false);
  l.addInsert(3,2,data("<c/>"),false);
  l.addDelete(2);
  optimize(l,2);
  query(transform(doc,"insert node <d/> into $input, insert node <c/> into $input/b," + "delete node $input/b"),"<a><d/></a>");
}
