{
  while (true) {
    final int ch=input.read();
    if (ch == -1)     return 0;
    if (ch == '%' && pe) {
      final byte[] key=name(true);
      final byte[] val=pents.get(key);
      if (val == null)       error(UNKNOWNPE,key);
      check(';');
      input.add(val,true);
    }
 else {
      return ch;
    }
  }
}
