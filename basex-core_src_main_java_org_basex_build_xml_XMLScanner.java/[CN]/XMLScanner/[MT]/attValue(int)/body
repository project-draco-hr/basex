{
  boolean wrong=false;
  int c=ch;
  do {
    if (c == 0)     error(ATTCLOSE,(char)0);
    wrong|=c == '\'' || c == '"';
    if (c == '<')     error(wrong ? ATTCLOSE : ATTCHAR,'<');
    if (c == 0x0A)     c=' ';
    if (c == '&') {
      final byte[] r=ref(true);
      if (r.length == 1)       token.add(r);
 else       if (!input.add(r,false))       error(RECENT);
    }
 else {
      token.add(c);
    }
  }
 while ((c=consume()) != quote);
}
