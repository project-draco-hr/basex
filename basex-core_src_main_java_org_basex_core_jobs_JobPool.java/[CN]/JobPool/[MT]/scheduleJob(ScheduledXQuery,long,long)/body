{
  final String id=job.job().id();
  final TimerTask task=new TimerTask(){
    @Override public void run(){
      if (active.get(id) == null)       new Thread(job).start();
    }
  }
;
  tasks.put(id,task);
  if (interval > 0) {
    timer.scheduleAtFixedRate(task,delay,interval);
  }
 else {
    timer.schedule(task,delay);
  }
}
