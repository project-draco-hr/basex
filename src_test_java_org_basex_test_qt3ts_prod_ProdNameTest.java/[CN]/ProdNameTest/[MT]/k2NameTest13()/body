{
  final XQuery query=new XQuery("declare variable $var := <elem xml:space=\"preserve\"/>; string(($var/@xml:*)[1])",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"preserve"));
}
