{
  if (!(src instanceof IOFile) || is == null || is.getByteStream() != null || is.getSystemId() == null || is.getSystemId().isEmpty())   return is;
  final InputSource in=new InputSource(new FileInputStream(src.path()){
    @Override public int read(    final byte[] b,    final int off,    final int len) throws IOException {
      final int i=super.read(b,off,len);
      for (int o=off; o < len; ++o)       if (b[off + o] == '\n')       ++line;
      counter+=i;
      return i;
    }
  }
);
  saxs.setInputSource(in);
  saxs.setSystemId(is.getSystemId());
  length=src.length();
  return in;
}
