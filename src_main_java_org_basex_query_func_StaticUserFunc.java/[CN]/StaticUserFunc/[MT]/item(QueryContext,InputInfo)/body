{
  final Value cv=ctx.value;
  final Atts ns=ctx.sc.ns.reset();
  ctx.value=null;
  try {
    final Item it=expr.item(ctx,ii);
    final Value v=it == null ? Empty.SEQ : it;
    return cast ? ret.funcConvert(ctx,ii,v).item(ctx,ii) : it;
  }
  finally {
    ctx.value=cv;
    ctx.sc.ns.stack(ns);
  }
}
