{
  final XQuery query=new XQuery("\n" + "        declare variable $s := \"saxon\"; \n" + "        declare variable $xsl := \"xsl\"; \n"+ "        <e>{ namespace {$s} {\"http://saxon.sf.net/\"}, \n"+ "             attribute a {23}, \n"+ "             namespace {$xsl} {\"http://www.w3.org/1999/XSL/Transform\"} }</e>\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<e xmlns:saxon=\"http://saxon.sf.net/\" xmlns:xsl=\"http://www.w3.org/1999/XSL/Transform\" a=\"23\"/>",false));
}
