{
  final XQuery query=new XQuery("\n" + "        declare variable $s := \"saxon\"; \n" + "        declare variable $xsl := \"xsl\"; \n"+ "        <out> <t:e xmlns:t=\"http://www.example.com/\">{ \n"+ "            namespace {\"\"} {\"http://saxon.sf.net/\"}, \n"+ "            attribute a {23}, \n"+ "            namespace {$xsl} {\"http://www.w3.org/1999/XSL/Transform\"}, <f/> }</t:e> </out>\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<out><t:e xmlns:t=\"http://www.example.com/\" xmlns=\"http://saxon.sf.net/\"\n        xmlns:xsl=\"http://www.w3.org/1999/XSL/Transform\" a=\"23\"><f xmlns=\"\"/></t:e></out>",false));
}
