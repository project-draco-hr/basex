{
  final XQuery query=new XQuery("\n" + "        declare variable $s := \"http://saxon.sf.net/\"; \n" + "        declare variable $xsl := \"http://www.w3.org/1999/XSL/Transform\"; \n"+ "        <e>{ namespace saxon {$s}, attribute a {23}, namespace xsl {$xsl} }</e>\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<e xmlns:saxon=\"http://saxon.sf.net/\" xmlns:xsl=\"http://www.w3.org/1999/XSL/Transform\" a=\"23\"/>",false));
}
