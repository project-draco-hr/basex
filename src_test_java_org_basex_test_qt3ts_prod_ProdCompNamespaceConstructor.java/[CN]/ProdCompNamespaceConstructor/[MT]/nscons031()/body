{
  final XQuery query=new XQuery("\n" + "        declare copy-namespaces preserve, inherit;\n" + "        let $nested := \n"+ "            element outer { \n"+ "              namespace out { \"http://out.zorba-xquery.com/\" },\n"+ "              element inner {\n"+ "                namespace in { \"http://in.zorba-xquery.com/\" }\n"+ "              } \n"+ "            },\n"+ "            $elem := element e { namespace new { \"http://new.zorba-xquery.com/\" }, $nested }\n"+ "        return\n"+ "          $elem/outer/inner\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<inner xmlns:new=\"http://new.zorba-xquery.com/\" xmlns:out=\"http://out.zorba-xquery.com/\" xmlns:in=\"http://in.zorba-xquery.com/\" />",false));
}
