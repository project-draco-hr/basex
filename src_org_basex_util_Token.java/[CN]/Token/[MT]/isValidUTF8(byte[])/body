{
  final int len=text.length;
  int i=0;
  while (i < len) {
    int cl=cl2(text[i]);
    if (cl <= 0 || cl > len - i++)     return false;
    if (len == i)     return true;
    final int b=text[i] & 0xFF;
    if (b >= 0 && b < ' ' && !ws(b))     return false;
    while (--cl > 0)     if (cl2(text[i++]) != 0)     return false;
  }
  return true;
}
