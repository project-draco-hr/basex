{
  final int cl=c.length;
  byte[] res=t;
  int i=indexOf(res,c);
  while (i != -1) {
    final int rl=res.length;
    final byte[] tmp=new byte[rl - cl];
    System.arraycopy(res,0,tmp,0,i);
    System.arraycopy(res,i + cl,tmp,i,rl - cl - i);
    res=tmp;
    i=indexOf(res,c);
  }
  return res;
}
