{
  if (expr.type().one())   type=SeqType.get(type.type,Occ.ONE);
  if (expr.isValue())   return optPre(value(qc),qc);
  final Type t=type.type;
  if ((t == AtomType.BLN || t == AtomType.FLT || t == AtomType.DBL || t == AtomType.QNM || t == AtomType.URI) && type.eq(expr.type())) {
    optPre(expr,qc);
    return expr;
  }
  size=type.occ();
  return this;
}
