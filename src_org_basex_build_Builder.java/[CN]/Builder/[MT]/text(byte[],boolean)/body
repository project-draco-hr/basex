{
  if (!w) {
    if (inDoc) {
      if (level == 1)       error(AFTERROOT,parser.det(),t.length > 20 ? Token.concat(Token.substring(t,0,20),Token.DOTS) : t);
    }
 else {
      error(BEFOREROOT,parser.det(),t.length > 20 ? Token.concat(Token.substring(t,0,20),Token.DOTS) : t);
    }
  }
 else   if (t.length == 0 || (!inDoc || level == 1)) {
    return;
  }
  final byte[] tok=meta.chop ? Token.trim(t) : t;
  if (tok.length != 0)   addText(tok,Data.TEXT);
}
