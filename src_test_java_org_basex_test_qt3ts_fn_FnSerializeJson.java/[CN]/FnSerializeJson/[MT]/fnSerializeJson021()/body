{
  final XQuery query=new XQuery("serialize-json(\"abc\\\\def\", map{\"spec\":=\"ECMA-262\",\"escape\":=false()})",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertQuery("$result eq '\"abc\\\\def\"'") && assertQuery("$result instance of xs:string")));
}
