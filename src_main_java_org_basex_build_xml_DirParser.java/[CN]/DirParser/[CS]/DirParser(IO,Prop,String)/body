{
  super(path,t);
  prop=pr;
  root=path.getDir();
  if (!root.endsWith("/"))   root+="/";
  if (path.isDir()) {
    final StringBuilder sb=new StringBuilder();
    for (    final String s : pr.get(Prop.CREATEFILTER).replaceAll("\\.","\\\\.").replaceAll("\\*",".*").split(",")) {
      sb.append("|" + (s.contains(".") ? s : ".*"));
    }
    filter=sb.toString().substring(1);
  }
 else {
    filter=".*";
  }
}
