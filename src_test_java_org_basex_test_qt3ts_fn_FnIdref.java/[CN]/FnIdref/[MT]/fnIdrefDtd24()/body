{
  final XQuery query=new XQuery("<results>{fn:idref(\"language\", /)}</results>",ctx);
  try {
    query.context(node(file("app/FunctxFn/functx_book.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<results refs='context language'/>",false));
}
