{
  final XQuery query=new XQuery("for $x in (1, xs:decimal(2), xs:float(3), xs:double(4)) \n" + "            return if ((round-half-to-even($x,1)) instance of xs:integer) then \"integer\" \n" + "           else if ((round-half-to-even($x,1)) instance of xs:decimal) then \"decimal\" \n"+ "           else if ((round-half-to-even($x,1)) instance of xs:float) then \"float\"\n"+ "           else if ((round-half-to-even($x,1)) instance of xs:double) then \"double\" \n"+ "           else error()",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertDeepEq("\"integer\", \"decimal\", \"float\", \"double\""));
}
