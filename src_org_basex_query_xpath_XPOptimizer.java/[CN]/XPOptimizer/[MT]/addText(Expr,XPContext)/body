{
  if (!(ex instanceof LocPath))   return;
  final LocPath path=(LocPath)ex;
  final int size=path.steps.size();
  if (size == 0)   return;
  final Step step=path.steps.last();
  if ((step.axis == Axis.DESC || step.axis == Axis.SELF || step.axis == Axis.DESCORSELF || step.axis == Axis.CHILD) && step.test instanceof TestName && ((TestName)step.test).id > 0 && ctx.item.data.meta.uptodate && ctx.item.data.tags.stat(((TestName)step.test).id).leaf) {
    path.steps.add(Axis.create(Axis.CHILD,TestNode.TEXT));
    ctx.compInfo(OPTTEXT);
  }
}
