{
  if (!(ex instanceof LocPath))   return;
  final LocPath path=(LocPath)ex;
  final int size=path.steps.size();
  if (size == 0)   return;
  final Step step=path.steps.last();
  if ((step.axis == Axis.DESC || step.axis == Axis.SELF || step.axis == Axis.DESCORSELF || step.axis == Axis.CHILD) && step.test instanceof TestName && ((TestName)step.test).id != TestName.ALL && ctx.item.data.tags.uptodate && !ctx.item.data.tags.noLeaf(((TestName)step.test).id)) {
    path.steps.add(Axis.create(Axis.CHILD,TestNode.TEXT));
    ctx.compInfo(OPTTEXT);
  }
}
