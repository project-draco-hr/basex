{
  final TokenList tl=new TokenList();
  for (int c=0; c < size; c++)   tl.add(Token.token(weights[c]));
  sort(tl.finish(),true,false);
  Arrays.sort(weights);
  for (int l=0, r=weights.length - 1; l < r; l++, r--) {
    double temp=weights[l];
    weights[l]=weights[r];
    weights[r]=temp;
  }
}
