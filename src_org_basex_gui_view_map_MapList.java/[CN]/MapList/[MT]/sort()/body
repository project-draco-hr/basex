{
  if (weights == null)   return;
  boolean switched=true;
  while (switched) {
    switched=false;
    for (int i=0; i < list.length; i++) {
      if (weights[i] < weights[i + 1]) {
        int tmp=list[i];
        list[i]=list[i + 1];
        list[i + 1]=tmp;
        double wtmp=weights[i];
        weights[i]=weights[i + 1];
        weights[i + 1]=wtmp;
        switched=true;
      }
    }
  }
}
