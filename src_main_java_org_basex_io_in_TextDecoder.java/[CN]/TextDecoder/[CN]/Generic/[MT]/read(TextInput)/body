{
  for (int c=0; c < 4; c++) {
    final int ch=ti.next();
    if (ch < 0)     return ch;
    cache[c]=(byte)ch;
    outc.position(0);
    inc.position(0);
    inc.limit(c + 1);
    csd.reset();
    final CoderResult cr=csd.decode(inc,outc,true);
    if (cr.isMalformed())     continue;
    int i=0;
    final int os=outc.position();
    for (int o=0; o < os; ++o)     i|=outc.get(o) << (o << 3);
    return i;
  }
  return '?';
}
