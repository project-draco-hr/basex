{
  new BXCode<Object>(this){
    @Override public void run() throws IOException {
      s.setOutputStream(out);
      final Query q=s.query(raw ? "declare option output:method 'raw'; " + _DB_RETRIEVE.args("$db","$path") : _DB_OPEN.args("$db","$path"));
      q.bind("db",db);
      q.bind("path",path);
      q.execute();
    }
  }
.eval();
}
