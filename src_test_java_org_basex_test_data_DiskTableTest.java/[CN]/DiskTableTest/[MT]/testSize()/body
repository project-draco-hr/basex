{
  assertEquals("Testfile size changed!",size,tdaSize());
  assertTrue("Need at least 3 blocks for testing!",blocks > 2);
  assertEquals("Unexpected number of blocks!",blocks,tdaBlocks());
  closeAndReload();
  assertEquals("Testfile size changed!",size,tdaSize());
  assertTrue("Need at least 3 blocks for testing!",blocks > 2);
  assertEquals("Unexpected number of blocks!",blocks,tdaBlocks());
}
