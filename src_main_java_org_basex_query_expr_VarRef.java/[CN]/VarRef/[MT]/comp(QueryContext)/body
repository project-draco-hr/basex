{
  var=ctx.vars.get(var);
  type=var.type();
  Expr e=var.expr();
  if (e == null)   return this;
  final NSLocal lc=ctx.ns;
  ctx.ns=lc.copy();
  if (ctx.nsElem.length != 0)   ctx.ns.add(new QNm(EMPTY,Uri.uri(ctx.nsElem)),input);
  if (var.global || ctx.nsElem.length != 0 || lc.size() != 0 || var.type != null || e.uses(Use.FRG) || e instanceof FuncCall) {
    e=var.value(ctx);
  }
  ctx.ns=lc;
  return e;
}
