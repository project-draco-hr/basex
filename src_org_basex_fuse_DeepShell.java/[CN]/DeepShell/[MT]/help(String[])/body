{
  Method[] ms=this.getClass().getMethods();
  for (  Method m : ms)   if (m.isAnnotationPresent(Command.class)) {
    Command c=m.getAnnotation(Command.class);
    if ((args.length == 1 && args[0].charAt(0) == 'h') || (args.length > 1 && m.getName().equals(args[1]) || (args.length > 1 && args[1].length() == 1 && c.shortcut() == args[1].charAt(0))))     System.out.printf("%-40s %-40s\n",m.getName() + " " + c.args(),c.help() + " (" + c.shortcut()+ ")");
  }
}
