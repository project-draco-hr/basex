{
  createDB();
  new XQuery("let $i := //item[@id='item0'] return " + "(insert node 'foo' after $i/location)").execute(CONTEXT);
  new XQuery("let $i := //item[@id='item0']/location return " + "(insert node 'foo' after $i, insert node 'faa' before $i, insert " + "node 'faa' into $i, delete node $i/text())").execute(CONTEXT);
  final String r=new XQuery("let $i := //item[@id='item0']/location " + "return ($i/text(), ($i/../text())[2])").execute(CONTEXT);
  assertEquals("faafoofoo",r);
}
