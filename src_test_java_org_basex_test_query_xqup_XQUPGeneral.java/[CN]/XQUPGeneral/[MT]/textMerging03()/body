{
  createDB();
  new XQuery("let $i := //item[@id='item0'] return (insert node 'foo' as " + "first into $i/location, insert node 'foo' before $i/location, " + "insert node 'foo' into $i/quantity)").execute(CONTEXT);
  final String r=new XQuery("let $i := //item[@id='item0'] return " + "(($i/location/text())[1], ($i/quantity/text())[1])").execute(CONTEXT);
  assertEquals("fooUnited States1foo",r);
}
