{
  final XQuery query=new XQuery("\n" + "          for sliding window $w in (1 to 10)\n" + "          start $s when true()\n"+ "          only end $e when $e - $s eq 2\n"+ "          count $r\n"+ "          return\n"+ "            <window num=\"{$r}\">{\n"+ "              for $i in $w\n"+ "              order by $i descending\n"+ "              return $i\n"+ "            }</window>\n"+ "        ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<window num=\"1\">3 2 1</window><window num=\"2\">4 3 2</window><window num=\"3\">5 4 3</window><window num=\"4\">6 5 4</window><window num=\"5\">7 6 5</window><window num=\"6\">8 7 6</window><window num=\"7\">9 8 7</window><window num=\"8\">10 9 8</window>",false));
}
