{
  final StringBuilder sb=new StringBuilder();
  if (test == Test.NODE) {
    if (axis == Axis.PARENT)     sb.append("..");
    if (axis == Axis.SELF)     sb.append(".");
  }
  if (sb.length() == 0) {
    if (axis == Axis.ATTR)     sb.append("@");
 else     if (axis != Axis.CHILD)     sb.append(axis + "::");
    sb.append(test);
  }
  sb.append(super.toString());
  return sb.toString();
}
