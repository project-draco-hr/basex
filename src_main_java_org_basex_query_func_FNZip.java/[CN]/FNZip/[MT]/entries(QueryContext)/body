{
  final String file=string(checkStr(expr[0],ctx));
  final IOFile path=new IOFile(file);
  if (!path.exists())   ZIP_NOTFOUND.thrw(info,file);
  ZipFile zf=null;
  try {
    zf=new ZipFile(file);
    final FElem root=new FElem(Q_FILE,new Atts(ZIP,ZIPURI));
    root.add(Q_HREF,token(path.path()));
    createEntries(paths(zf).iterator(),root,"");
    return root;
  }
 catch (  final IOException ex) {
    throw ZIP_FAIL.thrw(info,ex);
  }
 finally {
    if (zf != null)     try {
      zf.close();
    }
 catch (    final IOException e) {
    }
  }
}
