{
  itemImg=itemImage(false,false,false);
  itemImgMarked=itemImage(false,true,false);
  itemImgFocused=itemImage(true,false,false);
  itemImgSub=itemImage(false,false,true);
  final int sz=sizeFactor() / 2;
