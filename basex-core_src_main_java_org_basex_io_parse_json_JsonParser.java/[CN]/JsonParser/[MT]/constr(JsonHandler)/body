{
  skipWs();
  if (!input.substring(pos).matches("^[a-zA-Z0-9_-]+\\(.*"))   throw error("Wrong constructor syntax: '%'",rest());
  final int p=input.indexOf('(',pos);
  h.openConstr(token(input.substring(pos,p)));
  pos=p + 1;
  skipWs();
  if (!consumeWs(')',false)) {
    do {
      h.openArg();
      value(h);
      h.closeArg();
    }
 while (consumeWs(',',false));
    consumeWs(')',true);
  }
  h.closeConstr();
}
