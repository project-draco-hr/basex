{
  assertEquals("Testfile size changed!",size,tda.size());
  assertTrue("Need at least 3 blocks for testing!",blocks > 2);
  assertEquals("Unexpected number of blocks!",blocks,tda.blocks());
  closeAndReload();
  assertEquals("Testfile size changed!",size,tda.size());
  assertTrue("Need at least 3 blocks for testing!",blocks > 2);
  assertEquals("Unexpected number of blocks!",blocks,tda.blocks());
}
