{
  final XQuery query=new XQuery("\n" + "        declare %private variable $i := 1;\n" + "        \n"+ "        declare function local:test() {\n"+ "           $i + 1\n"+ "        };\n"+ "        <a>{local:test()}</a>\n"+ "      ",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<a>2</a>",false));
}
