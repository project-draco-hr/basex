{
  final XQuery query=new XQuery("\n" + "        declare %public variable $i := 1;\n" + "        \n"+ "        declare function local:test() {\n"+ "            $i + 1\n"+ "        };\n"+ "        <a>{local:test()}</a>\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<a>2</a>",false));
}
