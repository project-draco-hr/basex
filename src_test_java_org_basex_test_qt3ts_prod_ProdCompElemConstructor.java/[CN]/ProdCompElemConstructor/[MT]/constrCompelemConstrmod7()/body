{
  final XQuery query=new XQuery("declare construction strip; (element elem {//*:decimal/@*:attr})/@*:attr cast as xs:integer",ctx);
  try {
    query.context(node(file("docs/atomicns.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("FORG0001"));
}
