{
  int type=buf.getShort();
  byte[] value=null;
  if (buf.getInt() == 1) {
    if (type == IFD_TYPE_LONG) {
      value=Token.token((long)buf.getInt() & 0xFFFFFFFF);
    }
 else     if (type == IFD_TYPE_SHORT) {
      value=Token.token(buf.getShort() & 0xFFFF);
    }
  }
  if (value != null) {
    obj.fsparser.metaEvent(Element.WIDTH,DataType.INTEGER,Definition.PIXEL,null,value);
  }
 else   error(obj,"Exif Image Width (0xA002)");
}
