{
  final Args arg=new Args(args);
  boolean ok=true;
  try {
    while (arg.more() && ok) {
      if (arg.dash()) {
        final char ca=arg.next();
        if (ca == 'u') {
          final String[] s=new String[args.length - 1];
          System.arraycopy(args,1,s,0,s.length);
          updateTimes(s);
          return false;
        }
        if (ca == 'x') {
          convertTopics();
          return false;
        }
        ok=false;
      }
    }
    launcher=new ClientLauncher(ctx);
    launcher.execute(new Set(Prop.INFO,true));
  }
 catch (  final Exception ex) {
    ok=false;
    BaseX.errln("Please run BaseXServer for using server mode.");
    ex.printStackTrace();
  }
  if (!ok) {
    BaseX.outln("Usage: " + BaseX.name(this) + " [options]"+ NL+ "  -u[...] update submission times"+ NL+ "  -x      convert queries");
  }
  return ok;
}
