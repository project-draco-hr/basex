{
  super(source,target);
  prop=pr;
  final String parent=source.dir();
  root=parent.endsWith("/") ? parent : parent + '/';
  skip=prop.is(Prop.SKIPCORRUPT);
  archives=prop.is(Prop.ADDARCHIVES);
  filter=!source.isDir() && !source.isArchive() ? null : Pattern.compile(IOFile.regex(pr.get(Prop.CREATEFILTER)));
  binaries=path != null && prop.is(Prop.ADDRAW) ? new IOFile(path,M_RAW) : null;
}
