{
  if (!global)   return;
  file=new File(Prop.HOME + ".basexperm");
  try {
    if (file.exists()) {
      final DataInput in=new DataInput(file);
      read(in);
      in.close();
    }
 else {
      add(new User(ADMIN,token(md5(ADMIN)),User.ADMIN));
      write();
    }
  }
 catch (  final IOException ex) {
    Util.debug(ex);
  }
}
