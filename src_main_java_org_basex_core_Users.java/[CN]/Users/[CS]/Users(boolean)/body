{
  if (!global)   return;
  file=new IOFile(Prop.HOME,IO.BASEXSUFFIX + "perm");
  if (!file.exists()) {
    list.add(new User(ADMIN,md5(ADMIN),Perm.ADMIN));
  }
 else {
    DataInput in=null;
    try {
      in=new DataInput(file);
      read(in);
    }
 catch (    final IOException ex) {
      Util.errln(ex);
    }
 finally {
      if (in != null)       try {
        in.close();
      }
 catch (      final IOException ignored) {
      }
    }
  }
}
