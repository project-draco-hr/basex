{
  int[] nw=numWords;
  int l=0;
  final int s=writeNum(text.length);
  for (  final byte t : text) {
    write(t);
    if (!Token.ftChar(t)) {
      if (l > 0) {
        nw[l]++;
        l=0;
      }
    }
 else {
      l++;
    }
  }
  nw[0]=s + text.length;
  if (l > 0)   nw[l]++;
  return nw;
}
