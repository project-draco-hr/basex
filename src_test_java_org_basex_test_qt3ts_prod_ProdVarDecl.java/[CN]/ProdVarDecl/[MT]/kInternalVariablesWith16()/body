{
  xquery10();
  final XQuery query=new XQuery("\n" + "      declare variable $var := local:func1(); \n" + "      declare function local:func1() { local:func2() }; \n"+ "      declare function local:func2() { local:func3() }; \n"+ "      declare function local:func3() { local:func4() }; \n"+ "      declare function local:func4() { $var }; \n"+ "      boolean($var)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0054"));
}
