{
  final XQuery query=new XQuery("declare variable $var1 := 2; declare variable $var2 := $var1; $var2 eq 2",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(true));
}
