{
  final XQuery query=new XQuery("\n" + "      declare namespace foo = \"http://www..oracle.com/xquery/test\"; \n" + "      declare variable $var1 as xs:integer := foo:price(xs:integer(2)); \n"+ "      declare function foo:price ($b as xs:integer) as xs:integer { $var1 + 1 }; \n"+ "      declare variable $input-context1 external; \n"+ "      $var1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0054"));
}
