{
  final XQuery query=new XQuery("declare variable $local:myVar := local:thisFunctionDoesNotExist(); 1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test((assertEq("1") || error("XPST0017")));
}
