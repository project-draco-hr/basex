{
  final int f=gui.context.focused;
  if (f == -1)   return;
  final Context context=gui.context;
  Nodes nodes=context.marked;
  if (mode == 0) {
    nodes=new Nodes(f,context.data());
  }
 else   if (mode == 1) {
    nodes.union(new int[]{f});
  }
 else {
    nodes.toggle(f);
  }
  mark(nodes,vw);
}
