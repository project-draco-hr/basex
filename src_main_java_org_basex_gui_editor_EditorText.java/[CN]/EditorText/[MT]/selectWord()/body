{
  pos(cursor());
  final boolean ch=ftChar(prev(true));
  while (pos() > 0) {
    final int c=prev(true);
    if (c == '\n' || ch != ftChar(c))     break;
  }
  if (pos() != 0)   next(true);
  startSelect();
  while (pos() < size()) {
    final int c=curr();
    if (c == '\n' || ch != ftChar(c))     break;
    next(true);
  }
  endSelect();
}
