{
  if (global) {
    file=Prop.HOME + ".basexperm";
    try {
      if (IO.get(file).exists()) {
        final DataInput in=new DataInput(file);
        read(in);
        in.close();
      }
 else {
        users.add(new User(ADMIN,token(md5(ADMIN)),User.READ | User.WRITE | User.CREATE| User.ADMIN));
        write();
      }
    }
 catch (    final IOException ex) {
      Main.debug(ex);
    }
  }
}
