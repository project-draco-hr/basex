{
  if (same) {
    int s=-1;
    for (    final FTStringMatch sm : mtc) {
      if (sm.n)       continue;
      final int p=pos(sm.s,ft);
      if (s == -1)       s=p;
 else       if (s != p)       return false;
    }
  }
 else {
    final BoolList bl=new BoolList();
    for (    final FTStringMatch sm : mtc) {
      if (sm.n)       continue;
      final int p=pos(sm.s,ft);
      if (bl.get(p))       return false;
      bl.set(true,p);
    }
  }
  return true;
}
