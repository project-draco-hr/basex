{
  final int textH=g.getFontMetrics().getHeight();
  final int fs=gui.gprop.num(GUIProp.FONTSIZE);
  final int imgH=160;
  final BufferedImage img=new BufferedImage(imgW,imgH,Transparency.BITMASK);
  final Graphics2D g2d=img.createGraphics();
  smooth(g2d);
  g2d.rotate(ROTATE,imgW,0 + textH);
  g2d.setFont(font);
  g2d.setColor(im ? color4 : Color.black);
  g2d.drawString(caption,fs,fs);
  return img;
}
