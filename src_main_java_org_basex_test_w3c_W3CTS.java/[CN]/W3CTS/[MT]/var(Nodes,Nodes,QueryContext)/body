{
  for (int c=0; c < nod.size(); c++) {
    final byte[] nm=data.atom(nod.nodes[c]);
    final String src=srcs.get(string(nm));
    Expr expr=null;
    if (src == null) {
      expr=coll(nm,ctx);
    }
 else {
      expr=Str.get(src);
    }
    final Var v=new Var(new QNm(data.atom(var.nodes[c])));
    ctx.vars.addGlobal(v.bind(expr,ctx));
  }
}
