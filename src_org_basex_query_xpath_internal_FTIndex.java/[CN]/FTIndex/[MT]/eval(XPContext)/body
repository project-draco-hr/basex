{
  final Data data=ctx.local.data;
  final FTTokenizer ft=new FTTokenizer();
  ft.init(token);
  ft.st=option.st;
  ft.dc=option.dc;
  ft.lc=option.lc;
  ft.uc=option.uc;
  ft.cs=option.cs;
  ft.wc=option.wc;
  ft.fz=option.fz;
  ft.lp=ctx.ftpos.lp;
  int sum=0;
  int n=0;
  iat=new IndexArrayIterator();
  while (ft.more()) {
    n=data.nrIDs(ft);
    if (n == 0)     return Bool.FALSE;
    ctx.checkStop();
    sum+=n;
  }
  ft.init();
  int w=0;
  IndexIterator it;
  while (ft.more()) {
    it=data.ids(ft);
    if (it == IndexIterator.EMPTY)     return Bool.FALSE;
    if (w == 0) {
      iat=(IndexArrayIterator)it;
    }
 else {
      iat=phrase(iat,(IndexArrayIterator)it,w);
    }
    w++;
  }
  if (iat.size() > 0) {
    if (ctx.ftpos.st)     iat.setToken(new FTTokenizer[]{ft});
    iat.setTokenNum(++ctx.ftcount);
    return Bool.TRUE;
  }
  return Bool.FALSE;
}
