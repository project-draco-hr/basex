{
  final Data data=ctx.local.data;
  if (single) {
    ids=data.ftIDs(token,option);
    if (ids == null)     return new NodeSet(ctx);
    if (simple) {
      return new NodeSet(Array.extractIDsFromData(ids),ctx);
    }
 else {
      return new NodeSet(Array.extractIDsFromData(ids),ctx,ids);
    }
  }
 else {
    evalNonSingle(data);
    if (ids == null)     return new NodeSet(ctx);
    if (simple) {
      return new NodeSet(Array.extractIDsFromData(ids),ctx);
    }
 else {
      return new NodeSet(Array.extractIDsFromData(ids),ctx,ids);
    }
  }
}
