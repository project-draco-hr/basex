{
  final XQuery query=new XQuery("declare copy-namespaces preserve, no-inherit; <y xmlns:inherit=\"http://www.example.com/inherit\">{(/)}</y>/x/z",ctx);
  query.context(node(file("prod/DirElemContent/nsmode.xml")));
  final QT3Result res=result(query);
  result=res;
  test(assertSerialization("<z xmlns:preserve=\"http://www.example.com/preserve\"/>",false));
}
