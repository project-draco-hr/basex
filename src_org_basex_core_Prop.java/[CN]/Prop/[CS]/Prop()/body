{
  super("");
  language=get(LANGUAGE);
  langkeys=is(LANGKEYS);
  try {
    if (is(FUSE)) {
      System.load(HOME + "workspace/deepfs/build/src/libdeepfs.dylib");
      BaseX.debug("DeepFS FUSE support enabled ... OK");
    }
  }
 catch (  final UnsatisfiedLinkError ex) {
    set(FUSE,false);
  }
}
