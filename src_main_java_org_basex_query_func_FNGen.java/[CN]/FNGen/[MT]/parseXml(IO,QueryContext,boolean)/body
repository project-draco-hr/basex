{
  final Prop prop=ctx.context.prop;
  final boolean chop=prop.is(Prop.CHOP);
  try {
    prop.set(Prop.CHOP,false);
    return new DBNode(frag || prop.is(Prop.INTPARSE) ? new XMLParser(input,ctx.context.prop,frag) : new SAXWrapper(input,ctx.context.prop));
  }
  finally {
    prop.set(Prop.CHOP,chop);
  }
}
