{
  final Nodes marked=context.marked();
  if (marked != null)   setHits(marked.size());
  BaseXLayout.enable(filter,marked != null && marked.size() != 0);
  refreshMode();
  toolbar.refresh();
  menu.refresh();
  final int i=context.data() == null ? 2 : GUIProp.searchmode;
  final String[] hs=i == 0 ? GUIProp.search : i == 1 ? GUIProp.xquery : GUIProp.commands;
  hist.setEnabled(hs.length != 0);
}
