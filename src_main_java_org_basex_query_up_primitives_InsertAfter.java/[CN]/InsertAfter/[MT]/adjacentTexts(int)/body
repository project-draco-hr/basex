{
  final int p=pre + c;
  final int ps=data.size(p,data.kind(p));
  final int affectedPre=p + ps;
  boolean merged=false;
  final int mds=md.meta.size;
  if (md.kind(0) == Data.TEXT)   merged=mergeTexts(data,affectedPre - 1,affectedPre);
  if (!merged && md.kind(mds - 1) == Data.TEXT)   merged|=mergeTexts(data,affectedPre + mds - 1,affectedPre + mds);
  return merged;
}
