{
  qc.resource.removeData(dbName);
  if (qc.context.pinned(dbName))   throw BXDB_OPENED.get(info,dbName);
  initOptions();
  assignOptions();
  try {
    data=CreateDB.create(dbName,Parser.emptyParser(qc.context.options),qc.context);
  }
 catch (  final IOException ex) {
    throw UPDBOPTERR.get(info,ex);
  }
 finally {
    resetOptions();
  }
  qc.resource.addData(data);
  if (md != null) {
    if (!data.startUpdate())     throw BXDB_OPENED.get(null,data.meta.name);
    data.insert(data.meta.size,-1,new DataClip(md));
    try {
      Optimize.optimize(data,null);
    }
 catch (    final IOException ex) {
      data.finishUpdate();
      throw UPDBOPTERR.get(info,ex);
    }
  }
}
