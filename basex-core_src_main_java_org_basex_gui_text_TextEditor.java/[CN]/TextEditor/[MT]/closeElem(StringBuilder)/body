{
  int p=pos - 1;
  for (; p >= 0; p--) {
    final byte b=text[p];
    if (!XMLToken.isNCChar(b) && b != ':') {
      if (b == '<' && p < pos - 1) {
        sb.append("</");
        while (++p < pos)         sb.append((char)text[p]);
        sb.append('>');
        break;
      }
      return;
    }
  }
}
