{
  if (!selected()) {
    startSelect();
    final int curr=curr(), prev=prev();
    endSelection();
    if (gopts.get(GUIOptions.AUTO)) {
      if (curr == prev && (curr == '"' || curr == '\'')) {
        start++;
      }
 else {
        final int open=OPENING.indexOf(prev);
        if (open != -1 && CLOSING.indexOf(curr) == open)         start++;
      }
    }
  }
  del();
}
