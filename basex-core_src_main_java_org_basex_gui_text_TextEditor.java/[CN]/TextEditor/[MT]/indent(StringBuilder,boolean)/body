{
  if (!selected() && shift && text.length != 0)   select(pos + 1,pos);
  if (selected()) {
    indent(shift);
    sb.setLength(0);
    return selected();
  }
  if (shift) {
    sb.setLength(0);
  }
 else {
    final boolean c=pos > 0;
    for (int p=pos - 1; p >= 0 && c; p--) {
      final byte b=text[p];
      if (!ws(b))       return false;
      if (b == '\n')       break;
    }
    sb.setLength(0);
    sb.append("  ");
  }
  return false;
}
