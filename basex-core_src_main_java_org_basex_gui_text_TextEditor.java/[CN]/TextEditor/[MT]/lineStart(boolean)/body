{
  if (select && !selected())   startSelect();
  final int p=pos;
  boolean s=true;
  while (back(select) != '\n')   s&=Character.isWhitespace(curr());
  if (pos != 0 || curr() == '\n')   forward(select);
  if (p == pos || !s) {
    while (Character.isWhitespace(curr()) && curr() != '\n')     forward(select);
  }
  if (select)   endSelection();
}
