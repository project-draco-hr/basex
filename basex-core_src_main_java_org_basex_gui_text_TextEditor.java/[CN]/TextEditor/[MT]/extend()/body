{
  if (!selected()) {
    selectLine();
    if (!selected())     return false;
  }
  int s=Math.min(start,end), e=Math.max(start,end);
  final int tl=size();
  while (s > 0 && text[s - 1] != '\n')   s--;
  if (e > 0)   while (e < tl && text[e - 1] != '\n')   e++;
  start=s;
  end=e;
  return true;
}
