{
  final boolean ch=ftChar(curr());
  while (pos() > 0) {
    final int cp=back(true);
    if (cp == '\n' || ch != ftChar(cp)) {
      forward(true);
      break;
    }
  }
  startSelect();
  while (pos() < size()) {
    final int cp=curr();
    if (cp == '\n' || ch != ftChar(cp))     break;
    forward(true);
  }
  endSelection();
}
