{
  pos(caret);
  final boolean ch=ftChar(prev(true));
  while (pos() > 0) {
    final int cp=prev(true);
    if (cp == '\n' || ch != ftChar(cp))     break;
  }
  if (pos() != 0)   next(true);
  startSelect();
  while (pos() < size()) {
    final int cp=curr();
    if (cp == '\n' || ch != ftChar(cp))     break;
    next(true);
  }
  finishSelect();
}
