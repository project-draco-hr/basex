{
  final Value cv=ctx.value;
  ctx.value=null;
  final int fp=scope.enter(ctx);
  try {
    addArgs(ctx,ii,arg);
    final Item it=expr.item(ctx,ii);
    final Value v=it == null ? Empty.SEQ : it;
    return cast ? declType.promote(ctx,sc,ii,v,false).item(ctx,ii) : it;
  }
  finally {
    scope.exit(ctx,fp);
    ctx.value=cv;
  }
}
