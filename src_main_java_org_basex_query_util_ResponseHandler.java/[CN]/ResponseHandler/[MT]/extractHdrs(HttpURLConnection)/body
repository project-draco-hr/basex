{
  final NodeCache h=new NodeCache();
  for (  final String headerName : conn.getHeaderFields().keySet()) {
    if (headerName != null) {
      final FElem hdr=new FElem(new QNm(HEADER),null,null,null,new Atts().add(HTTP,HTTPURI),null);
      hdr.atts.add(new FAttr(new QNm(HDR_NAME),token(headerName),hdr));
      hdr.atts.add(new FAttr(new QNm(HDR_VALUE),token(conn.getHeaderField(headerName)),hdr));
      h.add(hdr);
    }
  }
  return h;
}
