{
  final TokenBuilder tb=new TokenBuilder();
  if (n == 0) {
    tb.add(ZERO);
    if (ord != null)     tb.add("t").add(ord.length == 0 ? E : ord);
  }
 else {
    word(tb,n,ord);
  }
  final TokenParser tp=new TokenParser(tb.next());
  for (boolean u=true; tp.more(); u=false) {
    tb.add(u ? uc(tp.next()) : lc(tp.next()));
  }
  return tb.finish();
}
