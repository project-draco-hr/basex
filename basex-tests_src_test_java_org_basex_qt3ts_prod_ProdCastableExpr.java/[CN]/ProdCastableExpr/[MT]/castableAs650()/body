{
  final XQuery query=new XQuery("count(//employee[if (salary castable as xs:integer) then xs:integer(salary) gt 65000 else false()])",ctx);
  try {
    query.context(node(file("op/union/acme_corp.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("3"));
}
