{
  final XQuery query=new XQuery("\n" + "        declare variable $doc := <root><test><x/><y/></test></root>;\n" + "        $doc/test[x] union $doc/test[y]",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<test><x/><y/></test>",false));
}
