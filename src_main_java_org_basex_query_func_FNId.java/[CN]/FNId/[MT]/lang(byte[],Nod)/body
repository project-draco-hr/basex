{
  Nod n=node;
  while (n != null) {
    final NodeIter atts=n.attr();
    Nod at;
    while ((at=atts.next()) != null) {
      if (!eq(at.qname().atom(),LANG))       continue;
      final byte[] ln=lc(norm(checkStrEmp(at)));
      if (startsWith(ln,lang) && (lang.length == ln.length || !letter(ln[lang.length])))       return Bln.TRUE;
    }
    n=n.parent();
  }
  return Bln.FALSE;
}
