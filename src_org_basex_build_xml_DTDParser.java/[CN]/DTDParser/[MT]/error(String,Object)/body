{
  String file="DTD";
  int col=scanner.col;
  int line=scanner.line;
  if (extfile != null) {
    file=extfile;
    col=0;
    line=0;
  }
  for (int p=0; p < pos; p++) {
    if (content[p] == '\n') {
      col=0;
      line++;
    }
    col++;
  }
  throw new BuildException(DTDERROR,file,line,col,BaseX.inf(err,arg));
}
