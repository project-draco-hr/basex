{
  if (consume(SYSTEM)) {
    if (!consumeWS())     error(WSERROR);
    BaseX.debug(" - ExternID: '%'",consumeQuoted());
    consumeWS();
    if (!consume(GREAT))     error(SIGNERROR);
  }
 else   if (consume(PUBLIC)) {
    if (!consumeWS())     error(WSERROR);
    BaseX.debug(" - PUBID: '%'",consumeQuoted());
    consumeWS();
    if (!consume(GREAT)) {
      BaseX.debug(" - ExternID: '%'",consumeQuoted());
    }
  }
 else {
    error(SIGNERROR);
  }
}
