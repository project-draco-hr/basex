{
  scanner=scan;
  xmlfile=xml;
  tags=tag;
  atts=att;
  ents=ent;
  content=scan.token.finish();
  if (!consume(DOCTYPE) || !consumeWS())   error("Error in DOCTYPE");
  root=consumeName();
  consumeWS();
  if (consume(SYSTEM)) {
    if (!consumeWS())     error(WSERROR);
    extid=consumeQuoted();
    externalID();
  }
 else   if (consume(PUBLIC)) {
    if (!consumeWS())     error(WSERROR);
    consumeQuoted();
    if (!consumeWS())     error(WSERROR);
    extid=consumeQuoted();
    externalID();
  }
 else   if (consume(SBRACKETO)) {
    content=scan.token.finish();
    BaseX.debug("- Root Element Type: %",root);
    BaseX.debug("- InternContent:\n %",content);
    markupdecl();
    consumeWS();
    if (!consume(SBRACKETC))     error(SIGNERROR);
    BaseX.debug("----------------------");
    BaseX.debug("THE END");
  }
 else {
    error();
  }
}
