{
  final XQuery query=new XQuery("\n" + "        declare function local:recursiveFunction($i as xs:integer) as xs:integer { if($i eq 5) then $i else local:recursiveFunction($i + 1) };\n" + "        declare function local:proxy() as xs:integer { local:recursiveFunction(0) + 3 };\n"+ "        local:proxy()",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertEq("8"));
}
