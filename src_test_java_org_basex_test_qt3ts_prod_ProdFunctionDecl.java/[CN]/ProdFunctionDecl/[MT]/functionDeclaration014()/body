{
  final XQuery query=new XQuery("\n" + "        declare function local:odd($x as xs:integer) as xs:boolean {if ($x = 0) then false() else local:even($x - 1)};\n" + "        declare function local:even($x as xs:integer) as xs:boolean {if ($x = 0) then true() else local:odd($x - 1)};\n"+ "        local:even(4)",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertBoolean(true));
}
