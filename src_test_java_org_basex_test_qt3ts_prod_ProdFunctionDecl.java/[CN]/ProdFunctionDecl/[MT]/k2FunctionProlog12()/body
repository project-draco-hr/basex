{
  final XQuery query=new XQuery("\n" + "        declare function local:_($arg as node()) { $arg };\n" + "        local:_(1)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
