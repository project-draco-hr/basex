{
  final XQuery query=new XQuery("declare variable $var1 := 1;\n" + "        declare function local:func1() as xs:integer { $var1 };\n" + "        declare variable $var2 := 2;\n"+ "        declare function local:func2() as xs:integer { $var2 };\n"+ "        1 eq local:func1() and 2 eq local:func2()",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertBoolean(true));
}
