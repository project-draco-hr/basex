{
  final XQuery query=new XQuery("\n" + "        declare function local:foo ($n as xs:integer) as xs:string { $n };\n" + "        local:foo(4)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XPTY0004"));
}
