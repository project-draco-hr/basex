{
  final XQuery query=new XQuery("\n" + "        declare function local:func($choose, $whenTrue, $whenFalse) { if($choose) then $whenTrue else $whenFalse };\n" + "        local:func(true(), current-time(), current-date()) instance of xs:time and local:func(false(), current-time(), current-date()) instance of xs:date",ctx);
  final QT3Result res=result(query);
  result=res;
  test(assertBoolean(true));
}
