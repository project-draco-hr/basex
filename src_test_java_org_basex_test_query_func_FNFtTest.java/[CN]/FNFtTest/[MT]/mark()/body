{
  query(_FT_MARK.args(" //*[text() contains text '1']"),"<li>Exercise <mark>1</mark></li>");
  query(_FT_MARK.args(" //*[text() contains text '2'], 'b'"),"<li>Exercise <b>2</b></li>");
  contains(_FT_MARK.args(" //*[text() contains text 'Exercise']"),"<li><mark>Exercise</mark> 1</li>");
  query("copy $a := text { 'a b' } modify () return " + _FT_MARK.args("$a[. contains text 'a']","b"),"<b>a</b> b");
  query("copy $a := text { 'ab' } modify () return " + _FT_MARK.args("$a[. contains text 'ab'], 'b'"),"<b>ab</b>");
  query("copy $a := text { 'a b' } modify () return " + _FT_MARK.args("$a[. contains text 'a b'], 'b'"),"<b>a</b> <b>b</b>");
}
