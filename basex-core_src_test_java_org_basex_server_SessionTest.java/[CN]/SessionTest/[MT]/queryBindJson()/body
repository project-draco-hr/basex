{
  final String var="declare variable $x external;", map="{\"foo\":[1,2,3],\"bar\":{\"a\":null,\"\":false}}";
  final String[][] tests={{"for $k in map:keys($x) order by $k descending return $k","foo bar"},{"every $k in $x('foo')?* satisfies $k eq $x('foo')(xs:integer($k))","true"},{"empty($x('bar')('a')) and not($x('bar')(''))","true"}};
  for (  final String[] test : tests) {
    final Query q=session.query(var + test[0]);
    try {
      q.bind("$x",map,"json");
      assertEqual(test[1],q.execute());
    }
  finally {
      q.close();
    }
  }
}
