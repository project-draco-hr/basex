{
  if (declared)   throw Err.VARDEFINE.thrw(ii,this);
  declared=true;
  check=t;
  info=ii;
  if (a != null)   for (int i=0; i < a.size(); i++)   ann.add(a.names[i],a.values[i]);
  external=ext;
  if (ext && expr != null) {
    bind(expr,true,ctx,ii);
    if (e != null)     checkType(e,ii);
  }
 else   if (e != null) {
    bind(e,false,ctx,ii);
  }
}
