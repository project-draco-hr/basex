{
  final StringBuilder sb=new StringBuilder();
  for (  final String a : args) {
    if (a == null || a.isEmpty())     continue;
    sb.append(' ');
    final boolean s=a.indexOf(' ') != -1;
    if (s)     sb.append('"');
    sb.append(a);
    if (s)     sb.append('"');
  }
  return sb.toString();
}
