{
  if (path.isDir()) {
    for (    final IO f : path.children())     parse(b,f);
  }
 else {
    io=path;
    while (path.more()) {
      if (!path.name().matches(filter))       continue;
      b.meta.filesize+=io.length();
      parser=Parser.xmlParser(io);
      parser.doc=doc;
      parser.parse(b);
      if (Prop.debug && ++c % 100 == 0)       BaseX.err(";");
    }
  }
}
