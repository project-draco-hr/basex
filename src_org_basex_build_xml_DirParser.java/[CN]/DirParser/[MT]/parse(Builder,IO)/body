{
  if (path.isDir()) {
    for (    final IO f : path.children())     parse(b,f);
  }
 else {
    io=path;
    while (path.more()) {
      if (!path.name().matches(filter))       continue;
      b.meta.filesize+=io.length();
      final SAXSource s=new SAXSource(io.inputSource());
      parser=Prop.intparse ? new XMLParser(io) : new SAXWrapper(s);
      parser.parse(b);
    }
  }
}
