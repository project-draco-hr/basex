{
  if (f.isDir() && !f.isLink()) {
    for (    final IO ch : f.children())     parse(b,ch);
  }
 else {
    file=f;
    while (f.more()) {
      if (!f.name().endsWith(IO.XMLSUFFIX))       continue;
      b.meta().filesize+=file.length();
      parser=Prop.intparse ? new XMLParser(file) : new SAXWrapper(file);
      parser.parse(b);
    }
  }
}
