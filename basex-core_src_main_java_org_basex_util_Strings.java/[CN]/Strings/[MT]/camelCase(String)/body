{
  final StringBuilder sb=new StringBuilder(string.length());
  boolean dash=false;
  final int sl=string.length();
  for (int s=0; s < sl; s++) {
    final char ch=string.charAt(s);
    if (dash) {
      sb.append(Character.toUpperCase(ch));
      dash=false;
    }
 else {
      dash=ch == '-';
      if (!dash)       sb.append(ch);
    }
  }
  return sb.toString();
}
