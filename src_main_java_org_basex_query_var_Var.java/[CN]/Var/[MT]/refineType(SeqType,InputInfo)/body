{
  if (t == null || type == null || type.eq(t) || type.instance(t)) {
    if (type == null)     type=t;
    return;
  }
  final Type tp=type.type.instanceOf(t.type) ? t.type : t.type.instanceOf(type.type) ? t.type : null;
  final Occ occ=type.occ.instance(t.occ) ? t.occ : t.occ.instance(type.occ) ? t.occ : null;
  if (tp == null || occ == null)   throw Err.XPTYPE.thrw(ii,toString(),type,t);
  type=SeqType.get(tp,occ);
}
