      tb.delete(0,3);
    }
 else     if (c1 == 'd' && c2 == 'i') {
      flags|=REMOVED_DI;
      numSyllables--;
      tb.delete(0,2);
    }
 else     if (c1 == 't' && c2 == 'e' && c3 == 'r') {
