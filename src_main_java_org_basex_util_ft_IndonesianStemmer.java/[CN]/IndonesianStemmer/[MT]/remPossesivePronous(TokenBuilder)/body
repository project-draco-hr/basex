{
  final int tl=tb.size();
  if (tl > 3) {
    final int c1=tb.get(tl - 1);
    final int c2=tb.get(tl - 2);
    final int c3=tb.get(tl - 3);
    if (c2 == 'k' && c1 == 'u') {
      numSyllables--;
      tb.size(tl - 2);
    }
 else     if (c2 == 'm' && c1 == 'u') {
      numSyllables--;
      tb.size(tl - 2);
    }
 else     if (c3 == 'n' && c2 == 'y' && c1 == 'a') {
      numSyllables--;
      tb.size(tl - 3);
    }
  }
}
