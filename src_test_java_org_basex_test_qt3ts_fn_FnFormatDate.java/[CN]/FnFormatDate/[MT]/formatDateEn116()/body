{
  final XQuery query=new XQuery("for $i in 1 to 7 return let $d2 := $d + xs:dayTimeDuration('P1D')*$i return\n" + "         format-date($d2, '[FNn,3-3]', 'en', (), ()) ",ctx);
  query.bind("d",new XQuery("xs:date('2003-12-07')",ctx).value());
  final QT3Result res=result(query);
  result=res;
  test(assertStringValue(false,"Mon Tue Wed Thu Fri Sat Sun"));
}
