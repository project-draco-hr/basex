{
  final XQuery query=new XQuery("\n" + "        declare %public function local:inc($i as xs:integer) {\n" + "            $i + 1\n"+ "        };\n"+ "        <a>{local:inc(1)}</a>\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<a>2</a>",false));
}
