{
  while (thread != null) {
    Socket s;
    try {
      s=serverSocket.accept();
      lastid++;
      Session session=new Session(s,lastid,verbose,bx);
      session.start();
      sessions.add(session);
    }
 catch (    IOException e) {
      if (e instanceof SocketException) {
        return;
      }
 else       e.printStackTrace();
    }
  }
}
