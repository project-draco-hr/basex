{
  while (thread != null) {
    Socket s;
    try {
      s=serverSocket.accept();
      lastid++;
      final Session session=new Session(s,lastid,verbose,bx);
      session.start();
      sessions.add(session);
    }
 catch (    final IOException e) {
      if (e instanceof SocketException)       return;
      e.printStackTrace();
    }
  }
}
