{
  for (int i=0; i < sessions.size(); i++) {
    try {
      Session s=sessions.get(i);
      s.dos.flush();
      s.dis.close();
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
  try {
    sessionListener.thread=null;
    inputListener.thread=null;
    serverSocket.close();
    new Exit().execute(null);
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}
