{
  for (int i=0; i < sessions.size(); i++) {
    try {
      final Session s=sessions.get(i);
      s.socket.close();
    }
 catch (    final IOException e) {
      e.printStackTrace();
    }
  }
  try {
    sessionListener.thread=null;
    inputListener.thread=null;
    serverSocket.close();
    new Exit().execute(null);
  }
 catch (  final IOException e) {
    e.printStackTrace();
  }
}
