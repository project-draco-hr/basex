{
  for (int i=0; i < sessions.size(); i++) {
    try {
      sessions.get(i).dis.close();
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
  if (sessions.size() == 0) {
    try {
      sessionListener.thread=null;
      inputListener.thread=null;
      serverSocket.close();
      new Exit().execute(null);
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
}
