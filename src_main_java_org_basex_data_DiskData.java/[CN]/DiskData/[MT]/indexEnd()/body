{
  final Thread txtupdater=txts.size() > 0 ? runIndexInsert((DiskValues)txtindex,txts) : null;
  final Thread atvupdater=atvs.size() > 0 ? runIndexInsert((DiskValues)atvindex,atvs) : null;
  try {
    if (txtupdater != null)     txtupdater.join();
    if (atvupdater != null)     atvupdater.join();
  }
 catch (  final InterruptedException ex) {
    Util.stack(ex);
  }
}
