{
  final Thread txtupdater=txts.size() > 0 ? runIndexInsert(txtindex,txts) : null;
  final Thread atvupdater=atvs.size() > 0 ? runIndexInsert(atvindex,atvs) : null;
  try {
    if (txtupdater != null)     txtupdater.join();
    if (atvupdater != null)     atvupdater.join();
  }
 catch (  InterruptedException e) {
    Util.stack(e);
  }
}
