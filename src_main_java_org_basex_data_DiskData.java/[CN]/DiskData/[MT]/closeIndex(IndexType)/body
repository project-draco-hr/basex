{
switch (type) {
case TEXT:
    if (txtindex != null) {
      txtindex.close();
      txtindex=null;
    }
  break;
case ATTRIBUTE:
if (atvindex != null) {
  atvindex.close();
  atvindex=null;
}
break;
case FULLTEXT:
if (ftxindex != null) {
ftxindex.close();
ftxindex=null;
}
break;
default :
break;
}
}
