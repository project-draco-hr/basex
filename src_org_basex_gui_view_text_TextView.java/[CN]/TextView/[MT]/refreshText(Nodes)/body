{
  if (!visible())   return;
  try {
    final CachedOutput out=new CachedOutput(gui.context.prop.num(Prop.MAXTEXT));
    if (nodes != null) {
      nodes.serialize(new XMLSerializer(out,false,nodes.data.meta.chop));
    }
    setText(out);
    refreshed=false;
  }
 catch (  final IOException ex) {
    Main.debug(ex);
  }
}
