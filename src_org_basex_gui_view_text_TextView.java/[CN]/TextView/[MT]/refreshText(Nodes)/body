{
  if (!GUIProp.showtext || !header.getText().equals(TEXTTIT))   return;
  if (!gui.context.db()) {
    setText(Token.EMPTY);
    return;
  }
  try {
    final CachedOutput out=new CachedOutput(GUIProp.maxtext);
    nodes.serialize(new XMLSerializer(out,false,nodes.data.meta.chop));
    setText(out);
    refreshed=false;
  }
 catch (  final Exception ex) {
    BaseX.debug(ex);
  }
}
