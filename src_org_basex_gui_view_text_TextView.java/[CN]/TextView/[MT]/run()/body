{
  if (mousePos != null) {
    repaint();
    Performance.sleep(1000);
    mousePos=null;
    rend.startW=-1;
    rend.endW=-1;
    repaint();
  }
 else {
    final Graphics g=getGraphics();
    if (g == null)     return;
    scroll.height(rend.calc(g,getWidth() - scroll.getWidth(),getHeight()));
    repaint();
  }
}
