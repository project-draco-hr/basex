{
  if (!SwingUtilities.isLeftMouseButton(e))   return;
  rend.select(scroll.pos(),e.getPoint(),true);
  if (e.getY() > getHeight() - 20) {
    scroll.pos(scroll.pos() + 20 - (getHeight() - e.getY()));
  }
 else   if (e.getY() < 20) {
    scroll.pos(scroll.pos() + e.getY() - 20);
  }
  scroll.repaint();
  repaint();
}
