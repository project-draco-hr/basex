{
  area.setSyntax(new XMLSyntax());
  final byte[] buf=out.buffer();
  String head=TEXTTIT;
  if (out.finished()) {
    final byte[] chop=Token.token(DOTS);
    Array.copy(chop,buf,out.size() - chop.length);
    head+=RESULTCHOP;
  }
  area.setText(buf,out.size());
  if (!header.getText().equals(head))   header.setText(head);
  refreshed=true;
}
