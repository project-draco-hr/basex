{
  ns=n;
  if (!visible())   return;
  try {
    final CachedOutput out=new CachedOutput(gui.context.prop.num(Prop.MAXTEXT));
    if (n != null) {
      final XMLSerializer xml=new XMLSerializer(out);
      n.serialize(xml);
      xml.close();
    }
    setText(out,null);
    refresh=false;
  }
 catch (  final IOException ex) {
    Main.debug(ex);
  }
}
