{
  super(help);
  setMode(mode);
  setBorder(8,8,8,8);
  setLayout(new BorderLayout());
  area=new BaseXText(help,false);
  add(area,BorderLayout.CENTER);
  north=new BaseXBack(FILL.NONE);
  north.setLayout(new BorderLayout());
