{
  final TokenBuilder tb=new TokenBuilder(FILEPREF);
  if (!pth.startsWith("/"))   tb.add("///");
  for (int p=0; p < pth.length(); p++) {
    final char ch=pth.charAt(p);
    if (ch == ' ')     tb.add("%20");
 else     tb.add(ch);
  }
  if (file.isDirectory())   tb.add('/');
  return tb.toString();
}
