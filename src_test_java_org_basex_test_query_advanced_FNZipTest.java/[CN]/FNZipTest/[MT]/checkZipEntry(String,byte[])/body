{
  ZipFile zf=null;
  try {
    zf=new ZipFile(TMPZIP);
    final ZipEntry ze=zf.getEntry(file);
    assertTrue("File not found: " + file,ze != null);
    final InputStream is=zf.getInputStream(ze);
    final byte[] dt=new byte[(int)ze.getSize()];
    is.read(dt);
    assertTrue("Wrong contents in file \"" + file + "\":"+ Prop.NL+ "Expected: "+ string(data)+ Prop.NL+ "Found: "+ string(dt),eq(data,dt));
  }
  finally {
    if (zf != null)     zf.close();
  }
}
