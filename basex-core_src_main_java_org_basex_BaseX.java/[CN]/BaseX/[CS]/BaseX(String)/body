{
  super(args);
  session();
  final StringBuilder serial=new StringBuilder();
  final StringBuilder bind=new StringBuilder();
  boolean v=false, qi=false, qp=false;
  console=true;
  try {
    for (int i=0; i < ops.size(); i++) {
      final int c=ops.get(i);
      String val=vals.get(i);
      Object[] opt=null;
      if (c == 'b') {
        if (bind.length() != 0)         bind.append(',');
        val=bind.append(val.replaceAll(",",",,")).toString();
        opt=Options.BINDINGS;
      }
 else       if (c == 'c') {
        final IO io=IO.get(val);
        String base=".";
        if (io.exists() && !io.isDir()) {
          val=io.string();
          base=io.path();
        }
        execute(new Set(Options.QUERYPATH,base),false);
        execute(val);
        execute(new Set(Options.QUERYPATH,""),false);
        console=false;
      }
 else       if (c == 'd') {
        Prop.debug^=true;
      }
 else       if (c == 'D') {
        opt=Options.DOTPLAN;
      }
 else       if (c == 'i') {
        execute(new Set(Options.MAINMEM,true),false);
        execute(new Check(val),verbose);
        execute(new Set(Options.MAINMEM,false),false);
      }
 else       if (c == 'L') {
        newline^=true;
        if (serial.length() != 0)         serial.append(',');
        val=serial.append(AOptions.toString(SerializerOptions.S_ITEM_SEPARATOR)).append("=\\n").toString();
        opt=Options.SERIALIZER;
      }
 else       if (c == 'o') {
        if (out != System.out)         out.close();
        out=new PrintOutput(val);
        session().setOutputStream(out);
      }
 else       if (c == 'q') {
        execute(new XQuery(val),verbose);
        console=false;
      }
 else       if (c == 'Q') {
        final IO io=IO.get(val);
        String base=".";
        if (io.exists() && !io.isDir()) {
          val=io.string();
          base=io.path();
        }
        execute(new Set(Options.QUERYPATH,base),false);
        execute(new XQuery(val),verbose);
        execute(new Set(Options.QUERYPATH,""),false);
        console=false;
      }
 else       if (c == 'r') {
        opt=Options.RUNS;
      }
 else       if (c == 's') {
        if (serial.length() != 0)         serial.append(',');
        val=serial.append(val.replaceAll(",",",,")).toString();
        opt=Options.SERIALIZER;
      }
 else       if (c == 'u') {
        opt=Options.WRITEBACK;
      }
 else       if (c == 'v') {
        v^=true;
      }
 else       if (c == 'V') {
        qi^=true;
        opt=Options.QUERYINFO;
      }
 else       if (c == 'w') {
        opt=Options.CHOP;
      }
 else       if (c == 'W') {
        writeOptions^=true;
      }
 else       if (c == 'x') {
        opt=Options.XMLPLAN;
        qp^=true;
      }
 else       if (c == 'X') {
        opt=Options.COMPPLAN;
      }
 else       if (c == 'z') {
        opt=Options.SERIALIZE;
      }
      if (opt != null)       execute(new Set(opt,val),false);
      verbose=qi || qp || v;
    }
    if (console) {
      verbose=true;
      Util.outln(CONSOLE + TRY_MORE_X,sa() ? LOCALMODE : CLIENTMODE);
      console();
    }
    if (writeOptions)     context.globalopts.write();
  }
  finally {
    quit();
  }
}
