{
  if (pkg.uri == null)   PKGDESCINV.thrw(ii,"Mandatory attribute name is missing");
 else   if (pkg.abbrev == null)   PKGDESCINV.thrw(ii,"Mandatory attribute abbrev is missing");
 else   if (pkg.version == null)   PKGDESCINV.thrw(ii,"Mandatory attribute version is missing");
 else   if (pkg.spec == null)   PKGDESCINV.thrw(ii,"Mandatory attribute spec is missing");
  if (ctx.repo.pkgDict.get(pkg.getName()) != null)   PKGINSTALLED.thrw(ii);
  checkDepends(pkg,ctx,ii);
  checkComps(pkg,ctx,ii);
}
