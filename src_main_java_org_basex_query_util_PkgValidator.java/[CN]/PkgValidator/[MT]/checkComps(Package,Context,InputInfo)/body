{
  final Iterator<Component> compIt=pkg.comps.iterator();
  Component comp;
  while (compIt.hasNext()) {
    comp=compIt.next();
    if (comp.namespace == null)     PKGDESCINV.thrw(ii,"Component namespace is not specified.");
 else     if (comp.file == null)     PKGDESCINV.thrw(ii,"Component file is not specified");
    if (isInstalled(comp,pkg.uri,ctx,ii))     MODISTALLED.thrw(ii,getCompName(string(comp.file)));
  }
}
