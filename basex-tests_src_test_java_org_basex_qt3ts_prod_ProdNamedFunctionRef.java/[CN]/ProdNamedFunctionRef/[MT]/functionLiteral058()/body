{
  final XQuery query=new XQuery("Q{http://www.w3.org/2005/xpath-functions}format-number#2(1, '0')",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"1"));
}
