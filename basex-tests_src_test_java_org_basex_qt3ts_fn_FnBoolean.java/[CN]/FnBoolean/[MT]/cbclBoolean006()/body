{
  final XQuery query=new XQuery("\n" + "      declare function local:repeat($count as xs:integer, $arg as xs:string) as item()* { \n" + "      \tif ($count lt 0) then '$count must not be negative' \n"+ "      \telse text { for $x in 1 to $count return $arg }\n"+ "      }; \n"+ "      fn:boolean( local:repeat(0, \"string\") )",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(false));
}
