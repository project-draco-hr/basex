{
  int l=0, h=size - 1;
  while (l <= h) {
    final int m=l + h >>> 1;
    final long pos=idxr.read5(m * 5L);
    idxl.readNum(pos);
    final int pre=idxl.readNum();
    byte[] txt=ctext.get(m);
    if (txt == null) {
      txt=data.text(pre,text);
      ctext.add(m,txt);
    }
    final int d=diff(txt,key);
    if (d == 0)     return pos;
    if (d < 0)     l=m + 1;
 else     h=m - 1;
  }
  return 0;
}
