{
  int l=first, h=last;
  while (l <= h) {
    final int m=l + h >>> 1;
    byte[] txt=ctext.get(m);
    if (txt == null) {
      final long pos=idxr.read5(m * 5L);
      idxl.readNum(pos);
      txt=data.text(pre(idxl.readNum()),text);
      ctext.add(m,txt);
    }
    final int d=diff(txt,key);
    if (d == 0)     return m;
    if (d < 0)     l=m + 1;
 else     h=m - 1;
  }
  return -(l + 1);
}
