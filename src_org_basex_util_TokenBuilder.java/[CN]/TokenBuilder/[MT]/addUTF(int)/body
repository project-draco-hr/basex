{
  if (c <= 0x7F) {
    add((byte)c);
  }
 else   if (c <= 0x7FF) {
    add((byte)(c >> 6 & 0x1F | 0xC0));
    add((byte)(c >> 0 & 0x3F | 0x80));
  }
 else   if (c <= 0xFFFF) {
    add((byte)(c >> 12 & 0x0F | 0xE0));
    add((byte)(c >> 6 & 0x3F | 0x80));
    add((byte)(c >> 0 & 0x3F | 0x80));
  }
 else {
    add((byte)(c >> 18 & 0x07 | 0xF0));
    add((byte)(c >> 12 & 0x3F | 0x80));
    add((byte)(c >> 6 & 0x3F | 0x80));
    add((byte)(c >> 0 & 0x3F | 0x80));
  }
  return this;
}
