{
  final boolean vis=isVisible();
  if (vis == v)   return;
  super.setVisible(v);
  if (vis)   return;
  final Timer timer=new Timer(true);
  timer.scheduleAtFixedRate(new TimerTask(){
    @Override public void run(){
      while (isVisible()) {
        if (!text.selected())         text.setText(info());
      }
    }
  }
,0,500);
}
