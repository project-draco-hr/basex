{
  final boolean vis=isVisible();
  if (vis == v)   return;
  super.setVisible(v);
  if (vis)   return;
  final Thread t=new Thread(){
    @Override public void run(){
      while (isVisible()) {
        if (!text.selected())         text.setText(info());
        Performance.sleep(500);
      }
    }
  }
;
  t.setDaemon(true);
  t.start();
}
