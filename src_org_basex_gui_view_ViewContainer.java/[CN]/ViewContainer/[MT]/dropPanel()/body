{
  if (source == null)   return;
  if (out) {
    source.remove();
  }
 else   if (orient != null) {
    if (layout.remove(source) && !(layout.comp[0] instanceof ViewPanel))     layout=(ViewAlignment)layout.comp[0];
    if (target == null)     layout=addView(layout);
 else     add(layout);
    updateViews();
  }
  source=null;
  repaint();
}
