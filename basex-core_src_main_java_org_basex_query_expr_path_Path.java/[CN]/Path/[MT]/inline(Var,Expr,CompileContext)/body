{
  boolean changed=false;
  final Value init=cc.qc.value;
  cc.qc.value=null;
  try {
    changed=inlineAll(steps,var,ex,cc);
  }
  finally {
    cc.qc.value=init;
  }
  if (root != null) {
    final Expr rt=root.inline(var,ex,cc);
    if (rt != null) {
      root=rt;
      changed=true;
    }
  }
  return changed ? optimize(cc) : null;
}
