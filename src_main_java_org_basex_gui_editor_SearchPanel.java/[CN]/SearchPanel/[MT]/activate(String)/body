{
  boolean action=!isVisible();
  if (action) {
    setVisible(true);
    if (button != null)     button.setSelected(true);
  }
  if (string == null) {
    search.requestFocusInWindow();
  }
 else   if (!new SearchContext(this,search.getText()).matches(string)) {
    search.setText(string);
    regex.setSelected(false);
    action=true;
  }
  if (action)   search();
  return action;
}
