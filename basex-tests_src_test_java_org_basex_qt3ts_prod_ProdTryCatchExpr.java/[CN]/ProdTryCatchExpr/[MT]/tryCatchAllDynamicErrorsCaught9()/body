{
  final XQuery query=new XQuery("try { comment { \"--\" } } catch err:XQDY0072 { \"Invalid comment.\" }",ctx);
  try {
    query.namespace("err","http://www.w3.org/2005/xqt-errors");
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"Invalid comment."));
}
