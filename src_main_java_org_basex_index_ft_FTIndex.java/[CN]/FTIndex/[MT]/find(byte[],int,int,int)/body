{
  final int tl=ti + ENTRY;
  int l=0, h=(e - i) / tl;
  while (l <= h) {
    final int m=l + h >>> 1;
    final int p=i + m * tl;
    byte[] txt=ctext.get(p);
    if (txt == null) {
      txt=inY.readBytes(p,ti);
      ctext.add(p,txt);
    }
    final int d=diff(txt,key);
    if (d == 0)     return i + m + tl;
    if (d < 0)     l=m + 1;
 else     h=m - 1;
  }
  return i + l * tl;
}
