{
  if (!text.moreTokens())   return false;
  int ww=0;
  final int p=text.pos();
  while (text.more()) {
    final int ch=text.next();
    if (ch == TokenBuilder.BOLD) {
      font(boldFont);
    }
 else     if (ch == TokenBuilder.NORM) {
      font(defaultFont);
    }
 else     if (ch == TokenBuilder.ULINE) {
      link^=true;
    }
 else {
      ww+=fontWidth(g,ch);
    }
  }
  text.pos(p);
  if (x + ww > width) {
    x=offset;
    y+=fontHeight;
  }
  wordWidth=ww;
  return y < height;
}
