{
  font=defaultFont;
  color=Color.black;
  syntax.init();
  text.init();
  link=false;
  offset=OFFSET;
  if (edit)   offset+=fontWidth(g,Integer.toString(text.lines())) + OFFSET * 2;
  x=offset;
  y=fontHeight - pos - 2;
  lineY=y - fontHeight * 4 / 5;
  line=1;
  lineC=edit && text.cursorLine(true);
  if (g != null)   g.setFont(font);
}
