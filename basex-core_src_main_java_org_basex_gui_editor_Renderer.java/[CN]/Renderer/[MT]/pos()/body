{
  final int hh=height;
  height=Integer.MAX_VALUE;
  final Graphics g=getGraphics();
  init(g);
  boolean more=true;
  int col=1;
  while (more(g)) {
    final int p=text.pos();
    while (text.more()) {
      more=text.pos() < text.getCaret();
      if (!more)       break;
      text.next();
      col++;
    }
    if (!more)     break;
    text.pos(p);
    if (next())     col=1;
  }
  height=hh;
  return new int[]{line,col};
}
