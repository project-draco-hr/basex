{
  final int hh=h;
  h=Integer.MAX_VALUE;
  final Graphics g=getGraphics();
  init(g);
  boolean more=true;
  int line=1;
  int col=1;
  while (more(g)) {
    final int p=text.pos();
    while (text.more()) {
      more=text.pos() < text.getCaret();
      if (!more)       break;
      text.next();
      col++;
    }
    if (!more)     break;
    text.pos(p);
    if (next()) {
      line++;
      col=1;
    }
  }
  h=hh;
  return new int[]{line,col};
}
