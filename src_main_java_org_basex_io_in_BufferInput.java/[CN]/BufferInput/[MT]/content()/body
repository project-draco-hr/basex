{
  try {
    if (length > -1) {
      final int sl=(int)Math.min(Integer.MAX_VALUE,length);
      final byte[] bytes=new byte[sl];
      for (int c=0; c < sl; c++)       bytes[c]=(byte)next();
      return bytes;
    }
    final ByteList bl=new ByteList();
    for (int ch; (ch=next()) != -1; )     bl.add(ch);
    return bl.toArray();
  }
  finally {
    close();
  }
}
