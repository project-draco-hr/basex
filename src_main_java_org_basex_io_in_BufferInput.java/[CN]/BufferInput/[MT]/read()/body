{
  final int blen=buffer.length;
  if (bpos >= bsize) {
    if (bsize == 0 || bsize == blen) {
      if (bsize == blen)       bmark=-1;
      bsize=0;
      bpos=0;
    }
    int r;
    while ((r=in.read(buffer,bsize,blen - bsize)) == 0)     ;
    if (r < 0)     return -1;
    bsize+=r;
    read+=r;
  }
  return buffer[bpos++] & 0xFF;
}
