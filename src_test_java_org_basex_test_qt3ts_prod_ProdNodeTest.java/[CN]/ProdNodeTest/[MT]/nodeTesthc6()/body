{
  final XQuery query=new XQuery("<result> {//overtime/node() or fn:true()} </result>",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertSerialization("<result>true</result>",false));
}
