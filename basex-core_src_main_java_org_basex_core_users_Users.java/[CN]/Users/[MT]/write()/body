{
  if (store()) {
    try {
      final XMLBuilder xml=new XMLBuilder().indent().open(USERS);
      for (      final User user : users.values())       user.write(xml);
      file.write(xml.finish());
    }
 catch (    final IOException ex) {
      Util.errln(ex);
    }
  }
 else   if (file.exists()) {
    file.delete();
  }
}
