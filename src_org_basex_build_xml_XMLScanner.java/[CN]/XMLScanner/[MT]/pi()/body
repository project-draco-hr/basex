{
  final byte[] tok=name(true);
  if (eq(lc(tok),XMLDECL))   error(PIRES);
  int ch=nextChar();
  if (ch != '?' && !ws(ch))   error(PITEXT);
  do {
    while (ch != '?') {
      token.addUTF(ch);
      ch=nextChar();
    }
    if ((ch=consume()) == '>')     return;
    token.add('?');
  }
 while (true);
}
