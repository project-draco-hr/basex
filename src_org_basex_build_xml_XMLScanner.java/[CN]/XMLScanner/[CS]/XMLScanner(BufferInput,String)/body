{
  input=new XMLInput(in,f);
  ents=new Map();
  ents.add(E_AMP,AMP);
  ents.add(E_APOS,APOS);
  ents.add(E_QU,QU);
  ents.add(E_LT,LT);
  ents.add(E_GT,GT);
  pents=new Map();
  if (consume(DOCDECL)) {
    checkS();
    if (!version())     error(DECLSTART);
    boolean s=s();
    String enc=encoding();
    if (enc != null) {
      if (!s)       error(WSERROR);
      encoding=enc;
      s=s();
    }
    if (sddecl() != null && !s)     error(WSERROR);
    s();
    byte ch=nextChar();
    if (ch != '?' || nextChar() != '>')     error(DECLWRONG);
  }
}
