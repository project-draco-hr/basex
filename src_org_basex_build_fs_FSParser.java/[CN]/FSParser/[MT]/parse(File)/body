{
  final File[] files=d.listFiles();
  if (files == null)   return;
  for (  final File f : files) {
    if (!valid(f))     continue;
    if (f.isDirectory()) {
      if (Prop.fuse)       new File(backingpath + f.getAbsolutePath().substring(importRootLength)).mkdir();
      dir(f);
    }
 else {
      if (Prop.fuse)       copy(f.getAbsoluteFile(),new File(backingpath + f.getAbsolutePath().substring(importRootLength)));
      file(f);
    }
  }
}
