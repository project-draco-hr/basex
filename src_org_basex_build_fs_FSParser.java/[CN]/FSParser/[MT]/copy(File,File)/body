{
  try {
    final InputStream in=new FileInputStream(src);
    final OutputStream out=new FileOutputStream(dst);
    final byte[] buf=new byte[4096];
    int len;
    while ((len=in.read(buf)) > 0)     out.write(buf,0,len);
    in.close();
    out.close();
  }
 catch (  final IOException e) {
    e.getMessage();
  }
}
