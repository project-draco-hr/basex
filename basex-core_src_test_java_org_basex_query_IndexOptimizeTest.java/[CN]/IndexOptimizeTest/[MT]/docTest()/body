{
  createDoc();
  final String func=DOC.args(NAME);
  check(func + "//*[text() = '1']");
  check(func + "//*[text() contains text '2']");
  check(func + "//a[. = '1']");
  check(func + "//xml[a = '1']");
  check(func + "/.[.//text() contains text '1']");
  check(func + "[.//text() contains text '1']");
}
