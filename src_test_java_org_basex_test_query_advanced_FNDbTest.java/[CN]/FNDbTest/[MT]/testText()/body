{
  final String fun=check(FunDef.TEXT);
  new DropIndex("text").execute(CONTEXT);
  query(fun + "('XML')","XML");
  new CreateIndex("text").execute(CONTEXT);
  query(fun + "('XML')","XML");
  query(fun + "('XXX')","");
  new Close().execute(CONTEXT);
  query("db:open('db')/" + fun + "('XML')","XML");
  error(fun + "('XXX')",Err.NODBCTX);
}
