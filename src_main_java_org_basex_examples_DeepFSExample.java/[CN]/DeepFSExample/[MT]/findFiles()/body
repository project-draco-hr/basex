{
  System.out.println("\nsearching for mp3 and jpg files (needed for example queries) ");
  final FileFinder ff=new FileFinder();
  final FSWalker walker=new FSWalker(ff);
  File mp3Directory=null;
  File jpgDirectory=null;
  try {
    for (    final File f : File.listRoots())     walker.traverse(f);
  }
 catch (  final RuntimeException ex) {
    if (ff.mp3Dir != null)     mp3Directory=new File(ff.mp3Dir).getParentFile().getParentFile();
    if (ff.jpgDir != null)     jpgDirectory=new File(ff.jpgDir).getParentFile().getParentFile();
  }
  if (mp3Directory == null || !mp3Directory.exists()) {
    System.out.println("... no mp3 files found. skipping example queries");
  }
  if (jpgDirectory == null || !jpgDirectory.exists()) {
    System.out.println("... no jpg files found. skipping example queries");
  }
  return new File[]{mp3Directory,jpgDirectory};
}
