{
  final PrimitiveType pt=p.type();
  del|=pt == DELETENODE;
  rep|=pt == REPLACENODE;
  adj=del || rep || pt == INSERTBEFORE || pt == INSERTAFTER;
  if (i < prim.size()) {
    final Primitive a=prim.get(i);
    if (a != null && a.type() == p.type())     a.merge(p);
 else     prim.add(i,p);
  }
 else {
    prim.add(p);
  }
}
