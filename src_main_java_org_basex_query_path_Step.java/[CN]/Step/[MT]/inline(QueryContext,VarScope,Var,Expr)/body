{
  final Type ct=ctx.value != null ? ctx.value.type : null;
  final boolean leaf=ctx.leaf;
  ctx.leaf=false;
  try {
    if (ct == NodeType.DOC)     ctx.value.type=NodeType.NOD;
    return super.inline(ctx,scp,v,e);
  }
  finally {
    if (ct == NodeType.DOC)     ctx.value.type=ct;
    ctx.leaf=leaf;
  }
}
