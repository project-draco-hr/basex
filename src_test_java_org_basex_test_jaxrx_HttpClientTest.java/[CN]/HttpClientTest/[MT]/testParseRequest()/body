{
  final byte[] req=token("<http:request " + "xmlns:http=\"http://expath.org/ns/http\" " + "method='POST' href='http://www.basex.org'>"+ "<http:header name='hdr1' value='hdr1val'/>"+ "<http:header name='hdr2' value='hdr2val'/>"+ "<http:body media-type='text/xml'>"+ "Test body content"+ "</http:body>"+ "</http:request>");
  final IO io=new IOContent(req);
  final Parser reqParser=Parser.xmlParser(io,context.prop,"");
  final DBNode dbNode=new DBNode(MemBuilder.build(reqParser,context.prop,""),0);
  final Request r=RequestParser.parse(dbNode.children().next(),null,null);
  assertTrue(r.attrs.size() == 2);
  assertTrue(r.headers.size() == 2);
  assertTrue(r.bodyContent.size() != 0);
  assertTrue(r.payloadAttrs.size() == 1);
}
