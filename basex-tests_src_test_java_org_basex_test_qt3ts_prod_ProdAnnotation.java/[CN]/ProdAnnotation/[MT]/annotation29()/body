{
  final XQuery query=new XQuery("\n" + "         declare %local:x variable $foo := \"bar\";\n" + "         $foo\n"+ "      ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("\"bar\""));
}
