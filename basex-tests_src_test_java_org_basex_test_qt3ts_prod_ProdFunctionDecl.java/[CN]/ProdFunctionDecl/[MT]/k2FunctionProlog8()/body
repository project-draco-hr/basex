{
  final XQuery query=new XQuery("\n" + "        declare function local:myFunction($arg as xs:integer) as xs:integer { if($arg eq 1) then $arg else local:myFunction3($arg - 1) };\n" + "        declare function local:myFunction2($arg as xs:integer) as xs:integer { local:myFunction($arg) };\n"+ "        declare function local:myFunction3($arg as xs:integer) as xs:integer { local:myFunction2($arg) };\n"+ "        local:myFunction3(3) eq 1",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertBoolean(true));
}
