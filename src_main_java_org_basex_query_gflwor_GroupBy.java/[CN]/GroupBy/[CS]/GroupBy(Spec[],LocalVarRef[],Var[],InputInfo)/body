{
  super(ii,vars(specs,pst));
  by=specs;
  pre=new Var[pr.length];
  for (int i=0; i < pre.length; i++)   pre[i]=pr[i].var;
  preExpr=new Expr[pr.length];
  System.arraycopy(pr,0,preExpr,0,pr.length);
  post=pst;
  int n=0;
  for (  final Spec spec : by)   if (!spec.occluded)   n++;
  nonOcc=n;
}
