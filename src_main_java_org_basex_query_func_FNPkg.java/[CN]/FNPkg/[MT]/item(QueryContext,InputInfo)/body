{
  checkAdmin(ctx);
  final RepoManager repoMng=new RepoManager(ctx.context.repo);
  final String pkg=expr.length == 0 ? null : string(checkStr(expr[0],ctx));
switch (def) {
case _PKG_INSTALL:
    repoMng.install(pkg,ii);
