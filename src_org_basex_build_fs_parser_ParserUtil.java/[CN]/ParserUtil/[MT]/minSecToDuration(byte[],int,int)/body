{
  final byte[] value=new byte[length + 4];
  int p=0;
  value[p++]='P';
  value[p++]='T';
  if (secPos > 0) {
    System.arraycopy(minSec,0,value,2,secPos);
    p+=secPos;
    value[p++]='M';
  }
  System.arraycopy(minSec,secPos,value,p,length - secPos);
  value[length + 3]='S';
  return value;
}
