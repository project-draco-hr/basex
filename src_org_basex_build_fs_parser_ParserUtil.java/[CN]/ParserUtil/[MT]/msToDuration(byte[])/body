{
  if (milliseconds == null)   return null;
  int len=milliseconds.length;
  if (len < 4) {
    return null;
  }
  int newLen=len + 4;
  byte[] value=new byte[newLen];
  value[0]='P';
  value[1]='T';
  int secLen=len - 3;
  System.arraycopy(milliseconds,0,value,2,secLen);
  value[2 + secLen]='.';
  System.arraycopy(milliseconds,secLen,value,3 + secLen,3);
  value[newLen - 1]='S';
  return value;
}
