{
  final ClientSession cs=login(user,pass);
  try {
    cs.setOutputStream(out);
    final ClientQuery q=cs.query("declare variable $path as xs:string external; " + "collection($path)");
    q.bind("$path",db + DIRSEP + path);
    q.execute();
  }
 catch (  BaseXException e) {
    e.printStackTrace();
  }
 finally {
    cs.close();
  }
}
