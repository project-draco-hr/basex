{
  Session s=null;
  try {
    s=session.login();
    s.setOutputStream(out);
    final Query q=s.query("collection($path)");
    q.bind("$path",db + SEP + path);
    q.execute();
  }
 catch (  final Exception ex) {
    error(ex);
  }
 finally {
    try {
      if (s != null)       s.close();
    }
 catch (    final IOException e) {
      error(e);
    }
  }
}
