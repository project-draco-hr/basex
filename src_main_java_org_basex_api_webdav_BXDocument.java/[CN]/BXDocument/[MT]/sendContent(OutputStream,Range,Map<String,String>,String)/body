{
  final Session s=BXResourceFactory.login(user,pass);
  try {
    s.setOutputStream(out);
    final Query q=s.query("declare variable $path as xs:string external; " + "collection($path)");
    q.bind("$path",db + DIRSEP + path);
    q.execute();
  }
 catch (  BaseXException e) {
    e.printStackTrace();
  }
 finally {
    s.close();
  }
}
