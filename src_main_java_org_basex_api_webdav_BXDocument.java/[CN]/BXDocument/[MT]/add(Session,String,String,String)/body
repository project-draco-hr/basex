{
  final Query q=s.query("if (" + DBISRAW.args("$sdb","$spath") + ") then "+ DBSTORE.args("$db","$path||'/'||$name",DBRETRIEVE.args("$sdb","$spath"))+ " else "+ DBADD.args("$db",DBOPEN.args("$sdb","$spath"),"$name","$path"));
  q.bind("db",trgdb);
  q.bind("sdb",db);
  q.bind("spath",path);
  q.bind("name",name);
  q.bind("path",trgdir);
  q.execute();
}
