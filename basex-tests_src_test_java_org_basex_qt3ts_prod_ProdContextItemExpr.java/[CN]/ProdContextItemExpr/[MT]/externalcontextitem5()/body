{
  final XQuery query=new XQuery("for $var in /works/employee[1] return $var/xs:float(exactly-one(hours))",ctx);
  try {
    query.context(node(file("docs/works-mod.xml")));
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertEq("40"));
}
