{
  final XQuery query=new XQuery("declare base-uri \"http://example.org\"; \n" + "        let $var := <anElement>With some contexnt</anElement> \n" + "        return fn:string(($var)/base-uri())",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"http://example.org"));
}
