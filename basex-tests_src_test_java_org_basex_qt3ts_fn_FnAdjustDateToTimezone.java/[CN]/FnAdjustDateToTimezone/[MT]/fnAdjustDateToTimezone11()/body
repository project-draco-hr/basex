{
  final XQuery query=new XQuery("fn:string(fn:adjust-date-to-timezone(xs:date(\"2002-03-07-04:00\"),()))",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"2002-03-07"));
}
