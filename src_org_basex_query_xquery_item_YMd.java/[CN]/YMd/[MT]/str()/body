{
  final TokenBuilder tb=new TokenBuilder();
  if (minus)   tb.add('-');
  tb.add('P');
  final int y=mon / 12;
  final int m=mon % 12;
  if (y != 0) {
    tb.add(y);
    tb.add('Y');
  }
  if (m != 0) {
    tb.add(m);
    tb.add('M');
  }
  if (mon == 0)   tb.add(Token.token("0M"));
  return tb.finish();
}
