{
  FTExpr expr=ftPrimary(prg);
  final FTOpt fto=new FTOpt();
  boolean found=false;
  while (ftMatchOption(fto))   found=true;
  if (!Language.supported(fto.ln,fto.is(ST) && fto.sd == null))   error(Err.FTLAN,fto.ln);
  if (wsConsumeWs(WEIGHT))   expr=new FTWeight(input(),expr,enclosed(NOENCLEXPR));
  return found ? new FTOptions(input(),expr,fto) : expr;
}
