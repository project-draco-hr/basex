{
  tok.reset();
  if (!ncName()) {
    if (err != null)     error(err,consume());
  }
 else   if (consume(':')) {
    if (!XMLToken.isNCStartChar(curr())) {
      --pos;
    }
 else {
      tok.add(':');
      do {
        tok.add(consume());
      }
 while (XMLToken.isNCChar(curr()));
    }
  }
  return tok.finish();
}
