{
  Var[] args={};
  while (true) {
    skipWS();
    if (curr() != '$') {
      if (args.length == 0)       break;
      check('$');
    }
    final Var var=addLocal(varName(),optAsType(),true);
    for (    final Var v : args)     if (v.name.eq(var.name))     error(FUNCDUPL,var);
    args=Array.add(args,var);
    if (!consume(','))     break;
  }
  return args;
}
