{
  skipWS();
  Expr nm;
  if (XMLToken.isXMLLetter(curr())) {
    nm=new QNm(qName(null));
  }
 else {
    if (!consumeWS2(BRACE1))     return null;
    nm=expr();
    check(BRACE2);
  }
  check(BRACE1);
  final Expr e=expr();
  check(BRACE2);
  return new CAttr(info(),nm,new Expr[]{e == null ? Seq.EMPTY : e},true);
}
