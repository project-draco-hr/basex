    final byte[] name=ncName(null);
    if (name.length != 0) {
      if (def == URICHECK && uri.length == 0)       error(NOURI,name);
      return new QNm(name,uri);
    }
    ip=i;
  }
  final byte[] nm=qName(err);
  if (nm.length == 0)   return null;
  if (def == SKIPCHECK)   return new QNm(nm);
