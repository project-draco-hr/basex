{
  ++ip;
  boolean doc=next() == '~';
  if (doc) {
    xqdoc.setLength(0);
    ++ip;
  }
  while (++ip < il) {
    final char curr=curr();
    if (curr == '(' && next() == ':')     comment();
    if (curr == ':' && next() == ')') {
      ip+=2;
      return;
    }
    if (doc)     xqdoc.append(curr);
  }
  error(COMCLOSE);
}
