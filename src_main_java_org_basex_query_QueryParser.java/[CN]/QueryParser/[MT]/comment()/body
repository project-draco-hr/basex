{
  ++pos;
  final boolean doc=next() == '~';
  if (doc) {
    xqdoc.setLength(0);
    ++pos;
  }
  while (++pos < length) {
    char curr=curr();
    if (curr == '(' && next() == ':') {
      comment();
      curr=curr();
    }
    if (curr == ':' && next() == ')') {
      pos+=2;
      return;
    }
    if (doc)     xqdoc.append(curr);
  }
  error(COMCLOSE);
}
