{
  try {
    e.accept(new ASTVisitor(){
      @Override public boolean used(      final VarRef ref){
        try {
          final Expr lc=scope.resolve(ref.var.name,QueryParser.this,ctx,ref.info,VARUNDEF);
          ref.var=((VarRef)lc).var;
          return true;
        }
 catch (        QueryException ex) {
          throw new QueryRTException(ex);
        }
      }
    }
);
  }
 catch (  final QueryRTException qe) {
    throw qe.wrapped();
  }
  return e;
}
