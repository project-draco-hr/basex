{
  skipWS();
  Expr nm;
  if (XMLToken.isNCStartChar(curr())) {
    nm=new QNm(qName(null));
  }
 else {
    if (!consumeWS2(BRACE1))     return null;
    nm=expr();
    check(BRACE2);
  }
  if (!consumeWS2(BRACE1))   return null;
  final Expr e=expr();
  check(BRACE2);
  return new CAttr(input(),true,nm,e == null ? Empty.SEQ : e);
}
