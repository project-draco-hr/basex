{
  final int s=ctx.vars.size();
  final NSLocal lc=ctx.ns;
  ctx.ns=lc.copy();
  if (func == null)   func=ctx.fun.get(id);
  for (int a=0; a < expr.length; a++) {
    ctx.vars.add(func.args[a].bind(ctx.iter(expr[a]).finish(),ctx).clone());
  }
  final Iter ir=ctx.iter(func);
  ctx.vars.reset(s);
  ctx.ns=lc;
  return ir;
}
