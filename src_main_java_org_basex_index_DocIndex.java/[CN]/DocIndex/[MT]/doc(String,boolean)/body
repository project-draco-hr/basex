{
  final String pth=MetaData.normPath(path);
  if (pth == null || pth.isEmpty() || data.empty())   return -1;
  final byte[] exct=concat(SLASH,Prop.WIN ? lc(token(pth)) : token(pth));
  if (sort) {
    createOrder();
    final int p=find(exct);
    return p > -1 && p < paths.size() && eq(paths.get(pathorder[p]),exct) ? docs.get(pathorder[p]) : -1;
  }
  for (int i=0; i < paths.size(); i++)   if (eq(paths.get(i),exct))   return docs.get(i);
  return -1;
}
