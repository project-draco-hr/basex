{
  int n=0;
  for (int r=0; r < radio.length; r++)   if (src == radio[r])   n=r;
  BaseXLayout.setHeight(input2,n == 3 || n == 4 ? 30 : 200);
  back.removeAll();
  back.setLayout(new TableLayout(n == 3 || n == 5 ? 4 : 2,1,0,8));
  if (n != 2 && n != 4) {
    back.add(label1);
    back.add(input1);
  }
  if (n != 1) {
    back.add(label2);
    back.add(input2);
  }
  pack();
}
