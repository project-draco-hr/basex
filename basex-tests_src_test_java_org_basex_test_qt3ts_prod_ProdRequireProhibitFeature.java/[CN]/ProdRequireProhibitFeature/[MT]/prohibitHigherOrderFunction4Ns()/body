{
  final XQuery query=new XQuery("\n" + "      declare option prohibit-feature \"higher-order-function\";\n" + "      let $f := sum#1 return 0\n"+ "    ",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(error("XQST0129"));
}
