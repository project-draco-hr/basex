{
  final XQuery query=new XQuery("let $tz := xs:dayTimeDuration(\"-PT10H\") \n" + "         return fn:adjust-date-to-timezone(xs:date(\"2002-03-07-07:00\"), $tz)",ctx);
  try {
    result=new QT3Result(query.value());
  }
 catch (  final Throwable trw) {
    result=new QT3Result(trw);
  }
 finally {
    query.close();
  }
  test(assertStringValue(false,"2002-03-06-10:00"));
}
