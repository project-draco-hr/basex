{
  try {
    ser.open(seq.size);
    for (int i=0; i < seq.size; i++) {
      if (ser.finished())       break;
      ser.openResult();
      seq.item[i].serialize(ser,ctx,0);
      ser.closeResult();
    }
    ser.close(seq.size);
  }
 catch (  final IOException ex) {
    BaseX.debug(ex);
    try {
      ser.item(Token.token(" " + ex.getMessage() + "..."));
    }
 catch (    final IOException exx) {
      throw exx;
    }
  }
}
