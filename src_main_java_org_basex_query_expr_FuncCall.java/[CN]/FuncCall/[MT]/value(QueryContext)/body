{
  final int al=expr.length;
  final Value[] args=new Value[al];
  for (int a=0; a < al; ++a)   args[a]=expr[a].value(ctx);
  final int s=ctx.vars.size();
  for (int a=0; a < al; ++a) {
    ctx.vars.add(func.args[a].bind(args[a],ctx).copy());
  }
  final Value v=func.value(ctx);
  ctx.vars.reset(s);
  return v;
}
