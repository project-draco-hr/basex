{
  final String s;
switch (b.getShort()) {
case 0:
    s="not defined";
  break;
case 1:
s="manual";
break;
case 2:
s="normal program";
break;
case 3:
s="aperture priority";
break;
case 4:
s="shutter priority";
break;
case 5:
s="creative program (biased toward depth of field)";
break;
case 6:
s="action program (biased toward fast shutter speed)";
break;
case 7:
s="portrait mode (for closeup photos with the background out " + "of focus)";
break;
case 8:
s="landscape mode (for landscape photos with the background in " + "focus)";
break;
default :
s=null;
}
if (s != null) d.addMeta(elem,s);
}
