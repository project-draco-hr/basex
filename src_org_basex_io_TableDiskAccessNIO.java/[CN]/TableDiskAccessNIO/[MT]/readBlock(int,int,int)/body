{
  try {
    final int b=blocks[ind];
    if (mbbuffer.get(b) == null) {
      mbbuffer.set(fc.map(FileChannel.MapMode.READ_WRITE,b * IO.BLOCKSIZE,IO.BLOCKSIZE),b);
    }
    block=b;
    index=ind;
    firstPre=first;
    nextPre=next;
  }
 catch (  final IOException ex) {
    ex.printStackTrace();
  }
}
